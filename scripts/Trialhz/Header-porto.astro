---
/**
 * Header.astro - Porto-Style Navigation
 * 
 * Features:
 * - 3-level dropdown menus
 * - White dropdown panels with teal accent
 * - Flyout submenus
 * - Section headers
 * - Badges (NEW, Express, Popular, Hot)
 * - Mobile accordion navigation
 * - Dark mode support
 * - Accessibility compliant
 */

import { mainNavigation } from '../data/navigation-porto';

interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;

// Check if current path matches or is child of a nav item
function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header id="header" class="site-header">
  <div class="header-body">
    <!-- Top Bar (Optional) -->
    <div class="header-top">
      <div class="container">
        <div class="header-top-content">
          <div class="header-top-left">
            <a href="tel:+971XXXXXXXXX" class="header-top-phone">
              <i class="fas fa-phone-alt"></i>
              <span>+971 XX XXX XXXX</span>
            </a>
            <a href="mailto:info@onlinetranslation.ae" class="header-top-email">
              <i class="fas fa-envelope"></i>
              <span>info@onlinetranslation.ae</span>
            </a>
          </div>
          <div class="header-top-right">
            <span class="header-top-hours">
              <i class="fas fa-clock"></i>
              Mon - Sat: 9:00 AM - 6:00 PM
            </span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Main Header -->
    <div class="header-container container">
      <div class="header-row">
        <!-- Logo -->
        <div class="header-column header-column-logo">
          <a href="/" class="header-logo">
            <img 
              src="/images/logo-light.svg" 
              alt="OnlineTranslation.ae" 
              width="180" 
              height="45"
              class="logo-light"
            />
            <img 
              src="/images/logo-dark.svg" 
              alt="OnlineTranslation.ae" 
              width="180" 
              height="45"
              class="logo-dark"
            />
          </a>
        </div>
        
        <!-- Navigation -->
        <div class="header-column header-column-nav">
          <div class="header-nav">
            <div class="header-nav-main header-nav-main-effect-1">
              <nav id="mainNav" aria-label="Main navigation">
                <ul class="nav nav-pills" role="menubar">
                  {mainNavigation.map((item) => (
                    <li 
                      class:list={[
                        item.dropdown ? 'dropdown' : '',
                        isActive(item.href) ? 'active' : '',
                        item.isButton ? 'nav-item-button' : ''
                      ]}
                      role="none"
                    >
                      {item.isButton ? (
                        <a 
                          href={item.href}
                          class={`btn ${item.buttonClass || 'btn-primary'}`}
                          target={item.href.startsWith('http') ? '_blank' : undefined}
                          rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                        >
                          {item.icon && <i class={item.icon}></i>}
                          <span>{item.label}</span>
                        </a>
                      ) : item.dropdown ? (
                        <>
                          <a 
                            href={item.href}
                            class:list={[
                              'nav-link',
                              'dropdown-toggle',
                              isActive(item.href) ? 'active' : ''
                            ]}
                            role="menuitem"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            {item.label}
                            <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                          </a>
                          
                          <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                            {item.dropdown.categories.map((category, catIndex) => (
                              <>
                                {category.header && (
                                  <li class="dropdown-header" role="presentation">
                                    {category.header}
                                  </li>
                                )}
                                
                                {category.items.map((subItem) => (
                                  <li 
                                    class:list={[
                                      subItem.children ? 'dropdown-submenu' : '',
                                      isActive(subItem.href) ? 'active' : ''
                                    ]}
                                    role="none"
                                  >
                                    <a 
                                      href={subItem.href}
                                      class="dropdown-item"
                                      role="menuitem"
                                      aria-haspopup={subItem.children ? 'true' : undefined}
                                    >
                                      {subItem.icon && (
                                        <i class={subItem.icon} aria-hidden="true"></i>
                                      )}
                                      <span>{subItem.label}</span>
                                      {subItem.badge && (
                                        <span class={`badge badge-${subItem.badge}`}>
                                          {subItem.badge}
                                        </span>
                                      )}
                                    </a>
                                    
                                    {subItem.children && (
                                      <ul class="dropdown-menu" role="menu">
                                        {subItem.children.map((child) => (
                                          <li 
                                            class:list={[isActive(child.href) ? 'active' : '']}
                                            role="none"
                                          >
                                            <a 
                                              href={child.href}
                                              class="dropdown-item"
                                              role="menuitem"
                                            >
                                              <span>{child.label}</span>
                                              {child.badge && (
                                                <span class={`badge badge-${child.badge}`}>
                                                  {child.badge}
                                                </span>
                                              )}
                                            </a>
                                          </li>
                                        ))}
                                      </ul>
                                    )}
                                  </li>
                                ))}
                              </>
                            ))}
                            
                            {item.dropdown.footerLink && (
                              <li role="none">
                                <a 
                                  href={item.dropdown.footerLink.href}
                                  class="dropdown-footer"
                                  role="menuitem"
                                >
                                  {item.dropdown.footerLink.label}
                                  <i class="fas fa-arrow-right" aria-hidden="true"></i>
                                </a>
                              </li>
                            )}
                          </ul>
                        </>
                      ) : (
                        <a 
                          href={item.href}
                          class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                          role="menuitem"
                        >
                          {item.icon && <i class={item.icon}></i>}
                          {item.label}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
            
            <!-- Mobile Menu Button -->
            <button 
              class="header-btn-collapse-nav" 
              aria-label="Toggle navigation"
              aria-expanded="false"
              aria-controls="mainNav"
            >
              <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        
        <!-- Theme Toggle (Optional) -->
        <div class="header-column header-column-actions">
          <button 
            id="themeToggle" 
            class="theme-toggle"
            aria-label="Toggle dark mode"
          >
            <i class="fas fa-moon theme-icon-dark" aria-hidden="true"></i>
            <i class="fas fa-sun theme-icon-light" aria-hidden="true"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  /* Header Base Styles */
  .site-header {
    position: sticky;
    top: 0;
    z-index: 1030;
    width: 100%;
  }
  
  .header-body {
    background: linear-gradient(135deg, var(--ot-header-dark, #0a1628) 0%, var(--ot-header-gradient, #1a365d) 100%);
  }
  
  /* Header Top Bar */
  .header-top {
    background: rgba(0, 0, 0, 0.2);
    padding: 8px 0;
    font-size: 0.85rem;
  }
  
  .header-top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .header-top-left {
    display: flex;
    gap: 20px;
  }
  
  .header-top-phone,
  .header-top-email,
  .header-top-hours {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .header-top-phone:hover,
  .header-top-email:hover {
    color: #ffffff;
  }
  
  /* Header Container */
  .header-container {
    padding: 15px 0;
  }
  
  .header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }
  
  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
  }
  
  .header-logo img {
    height: 45px;
    width: auto;
  }
  
  .logo-dark {
    display: none;
  }
  
  [data-theme="dark"] .logo-light {
    display: none;
  }
  
  [data-theme="dark"] .logo-dark {
    display: block;
  }
  
  /* Navigation Column */
  .header-column-nav {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }
  
  .header-nav {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  /* Theme Toggle */
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 50%;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .theme-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
  }
  
  .theme-icon-light {
    display: none;
  }
  
  [data-theme="dark"] .theme-icon-dark {
    display: none;
  }
  
  [data-theme="dark"] .theme-icon-light {
    display: block;
  }
  
  /* WhatsApp Button */
  .nav-item-button .btn-whatsapp {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: #25D366;
    color: #ffffff;
    font-weight: 600;
    text-decoration: none;
    border-radius: 25px;
    transition: all 0.2s ease;
  }
  
  .nav-item-button .btn-whatsapp:hover {
    background: #128C7E;
    transform: translateY(-2px);
  }
  
  /* Mobile Menu Button */
  .header-btn-collapse-nav {
    display: none;
  }
  
  /* Hide top bar on mobile */
  @media (max-width: 991px) {
    .header-top {
      display: none;
    }
    
    .header-btn-collapse-nav {
      display: flex;
    }
    
    .header-column-actions {
      order: 2;
    }
    
    .header-column-nav {
      order: 3;
    }
  }
</style>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.querySelector('.header-btn-collapse-nav');
    const navMain = document.querySelector('.header-nav-main');
    
    if (toggleBtn && navMain) {
      toggleBtn.addEventListener('click', () => {
        const isOpen = navMain.classList.toggle('is-open');
        toggleBtn.setAttribute('aria-expanded', String(isOpen));
      });
    }
    
    // Mobile dropdown toggles
    const dropdownItems = document.querySelectorAll('.dropdown > a, .dropdown-submenu > a');
    
    dropdownItems.forEach(item => {
      item.addEventListener('click', (e) => {
        if (window.innerWidth < 992) {
          const parent = (e.target as HTMLElement).closest('li');
          if (parent && parent.querySelector('.dropdown-menu')) {
            e.preventDefault();
            parent.classList.toggle('is-open');
          }
        }
      });
    });
    
    // Flyout edge detection (desktop)
    const flyoutParents = document.querySelectorAll('.dropdown-submenu');
    
    flyoutParents.forEach(parent => {
      parent.addEventListener('mouseenter', () => {
        const flyout = parent.querySelector('.dropdown-menu');
        if (!flyout || window.innerWidth < 992) return;
        
        const rect = flyout.getBoundingClientRect();
        const viewportWidth = window.innerWidth;
        
        if (rect.right > viewportWidth - 20) {
          parent.classList.add('dropdown-reverse');
        } else {
          parent.classList.remove('dropdown-reverse');
        }
      });
    });
    
    // Theme toggle
    const themeToggle = document.getElementById('themeToggle');
    
    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const html = document.documentElement;
        const currentTheme = html.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        html.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      });
    }
    
    // Keyboard navigation
    const nav = document.getElementById('mainNav');
    
    if (nav) {
      nav.addEventListener('keydown', (e) => {
        const key = e.key;
        const target = e.target as HTMLElement;
        const parent = target.closest('li');
        
        if (!parent) return;
        
        switch (key) {
          case 'Escape':
            // Close any open dropdowns
            document.querySelectorAll('.dropdown.open').forEach(el => {
              el.classList.remove('open');
            });
            break;
            
          case 'Enter':
          case ' ':
            if (parent.classList.contains('dropdown')) {
              e.preventDefault();
              parent.classList.toggle('open');
            }
            break;
            
          case 'ArrowDown':
            e.preventDefault();
            const nextSibling = parent.nextElementSibling as HTMLElement;
            if (nextSibling) {
              const nextLink = nextSibling.querySelector('a');
              nextLink?.focus();
            }
            break;
            
          case 'ArrowUp':
            e.preventDefault();
            const prevSibling = parent.previousElementSibling as HTMLElement;
            if (prevSibling) {
              const prevLink = prevSibling.querySelector('a');
              prevLink?.focus();
            }
            break;
        }
      });
    }
  });
</script>
