---
import ServiceLayout from '../../../../layouts/ServiceLayout.astro';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Legal Translation', url: '/legal-translation-dubai/' },
  { name: 'Contracts', url: '/legal/contracts/' },
  { name: 'MOU Translation', url: '/legal/contracts/mou/' }
