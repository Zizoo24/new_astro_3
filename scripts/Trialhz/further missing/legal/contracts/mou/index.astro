  { icon: 'handshake', bold: 'Partnership Ready', text: 'Business relationship documentation' },
  { icon: 'file-signature', bold: 'Binding Clarity', text: 'Intent vs obligation distinctions preserved' },
  { icon: 'clock', bold: '24 Hours', text: 'Standard MOU turnaround' },
