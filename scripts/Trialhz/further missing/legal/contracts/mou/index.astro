    background: var(--bg-light, #f8f9fa);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    border-left: 3px solid var(--primary-color);
    transition: all 0.2s;
  }
  
  .related-card:hover {
    border-left-color: var(--accent-color);
    background: white;
  }
  
  .related-card h3 {
    font-size: 1.1rem;
    margin: 0 0 0.5rem;
    color: var(--primary-color);
  }
  
  .related-card p {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
  }
</style>
