    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }
  
  .related-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    text-decoration: none;
    color: inherit;
    text-align: center;
    transition: all 0.3s;
  }
  
  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  }
  
  .related-card i {
    font-size: 2rem;
    color: var(--accent-color);
    margin-bottom: 1rem;
  }
  
  .related-card h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }
  
  .related-card p {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .cta-section {
    text-align: center;
  }
  
  .cta-section h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .cta-section p {
    color: rgba(255,255,255,0.9);
    margin-bottom: 2rem;
  }
  
  .bg-light { background: var(--bg-light, #f8f9fa); }
  .bg-dark { background: var(--primary-color); }
  .text-center { text-align: center; }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
  }
  
  .btn--primary {
    background: var(--accent-color);
    color: white;
  }
  
  .btn--lg {
    padding: 1.125rem 2.25rem;
  }

  @media (max-width: 991px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
    
    .content-sidebar {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
  
  @media (max-width: 768px) {
    .process-steps {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .related-grid {
      grid-template-columns: 1fr;
    }
    
    .content-sidebar {
      grid-template-columns: 1fr;
    }
  }
</style>
