---
/**
 * Header-porto.astro - Porto-Style Navigation
 *
 * Features:
 * - 3-level dropdown menus
 * - White dropdown panels with teal accent
 * - Flyout submenus
 * - Section headers
 * - Badges (NEW, Express, Popular, Hot)
 * - Mobile accordion navigation
 * - Dark mode support
 * - Accessibility compliant
 */

import { mainNavigation } from '../data/navigation-porto';
import { siteContact } from '../data/navigation';

interface Props {
  currentPath?: string;
  isHomepage?: boolean;
}

const { currentPath = Astro.url.pathname, isHomepage = false } = Astro.props;

// Check if current path matches or is child of a nav item
function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header id="header" class:list={["site-header", { "header-homepage": isHomepage }]}>
  <div class="header-body">
    <!-- Top Bar -->
    <div class="header-top">
      <div class="container">
        <div class="header-top-content">
          <div class="header-top-left">
            <a href={`tel:${siteContact.phone.replace(/\s/g, '')}`} class="header-top-phone">
              <i class="fas fa-phone-alt"></i>
              <span>{siteContact.phoneDisplay}</span>
            </a>
            <a href={`mailto:${siteContact.email}`} class="header-top-email">
              <i class="fas fa-envelope"></i>
              <span>{siteContact.email}</span>
            </a>
          </div>
          <div class="header-top-right">
            <span class="header-top-hours">
              <i class="fas fa-clock"></i>
              Daily: 8:00 AM - 10:00 PM
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Header -->
    <div class="header-container container">
      <div class="header-row">
        <!-- Logo -->
        <div class="header-column header-column-logo">
          <a href="/" class="header-logo">
            <img
              src="/images/logo/brand/emblem-clean.png"
              alt="OnlineTranslation.ae"
              width="45"
              height="45"
              class="logo-emblem"
              loading="eager"
            />
            <div class="logo-text-block">
              <span class="logo-text">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
              <span class="logo-tagline">Boutique Legal Translation</span>
            </div>
          </a>
        </div>

        <!-- Navigation -->
        <div class="header-column header-column-nav">
          <div class="header-nav">
            <div class="header-nav-main header-nav-main-effect-1">
              <nav id="mainNav" aria-label="Main navigation">
                <ul class="nav nav-pills" role="menubar">
                  {mainNavigation.map((item) => (
                    <li
                      class:list={[
                        item.dropdown ? 'dropdown' : '',
                        isActive(item.href) ? 'active' : '',
                        item.isButton ? 'nav-item-button' : ''
                      ]}
                      role="none"
                    >
                      {item.isButton ? (
                        <a
                          href={item.href}
                          class={`btn ${item.buttonClass || 'btn-primary'}`}
                          target={item.href.startsWith('http') ? '_blank' : undefined}
                          rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                        >
                          {item.icon && <i class={item.icon}></i>}
                          <span>{item.label}</span>
                        </a>
                      ) : item.dropdown ? (
                        <>
                          <a
                            href={item.href}
                            class:list={[
                              'nav-link',
                              'dropdown-toggle',
                              isActive(item.href) ? 'active' : ''
                            ]}
                            role="menuitem"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            {item.label}
                            <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                          </a>

                          <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                            {item.dropdown.categories.map((category, catIndex) => (
                              <>
                                {category.header && (
                                  <li class="dropdown-header" role="presentation">
                                    {category.header}
                                  </li>
                                )}

                                {category.items.map((subItem) => (
                                  <li
                                    class:list={[
                                      subItem.children ? 'dropdown-submenu' : '',
                                      isActive(subItem.href) ? 'active' : ''
                                    ]}
                                    role="none"
                                  >
                                    <a
                                      href={subItem.href}
                                      class="dropdown-item"
                                      role="menuitem"
                                      aria-haspopup={subItem.children ? 'true' : undefined}
                                    >
                                      {subItem.icon && (
                                        <i class={subItem.icon} aria-hidden="true"></i>
                                      )}
                                      <span>{subItem.label}</span>
                                      {subItem.badge && (
                                        <span class={`badge badge-${subItem.badge}`}>
                                          {subItem.badge.toUpperCase()}
                                        </span>
                                      )}
                                    </a>

                                    {subItem.children && (
                                      <ul class="dropdown-menu" role="menu">
                                        {subItem.children.map((child) => (
                                          <li
                                            class:list={[isActive(child.href) ? 'active' : '']}
                                            role="none"
                                          >
                                            <a
                                              href={child.href}
                                              class="dropdown-item"
                                              role="menuitem"
                                            >
                                              <span>{child.label}</span>
                                              {child.badge && (
                                                <span class={`badge badge-${child.badge}`}>
                                                  {child.badge.toUpperCase()}
                                                </span>
                                              )}
                                            </a>
                                          </li>
                                        ))}
                                      </ul>
                                    )}
                                  </li>
                                ))}
                              </>
                            ))}

                            {item.dropdown.footerLink && (
                              <li role="none">
                                <a
                                  href={item.dropdown.footerLink.href}
                                  class="dropdown-footer"
                                  role="menuitem"
                                >
                                  {item.dropdown.footerLink.label}
                                  <i class="fas fa-arrow-right" aria-hidden="true"></i>
                                </a>
                              </li>
                            )}
                          </ul>
                        </>
                      ) : (
                        <a
                          href={item.href}
                          class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                          role="menuitem"
                        >
                          {item.icon && <i class={item.icon}></i>}
                          {item.label}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </nav>
            </div>

            <!-- Mobile Menu Button - triggers MobileShell sidebar -->
            <button
              id="sidebarToggle"
              class="header-btn-collapse-nav"
              aria-label="Open menu"
            >
              <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        <!-- Theme Toggle -->
        <div class="header-column header-column-actions">
          <button
            id="portoThemeToggle"
            class="theme-toggle"
            aria-label="Toggle dark mode"
          >
            <i class="fas fa-moon theme-icon-dark" aria-hidden="true"></i>
            <i class="fas fa-sun theme-icon-light" aria-hidden="true"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  /* Header Base Styles */
  .site-header {
    position: sticky;
    top: 0;
    z-index: 1030;
    width: 100%;
  }

  .header-body {
    background: linear-gradient(135deg, var(--ot-header-dark, #0a1628) 0%, var(--ot-header-gradient, #1a365d) 100%);
  }

  /* Header Top Bar */
  .header-top {
    background: rgba(0, 0, 0, 0.2);
    padding: 8px 0;
    font-size: 0.85rem;
  }

  .header-top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-top-left {
    display: flex;
    gap: 20px;
  }

  .header-top-phone,
  .header-top-email,
  .header-top-hours {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .header-top-phone:hover,
  .header-top-email:hover {
    color: #ffffff;
  }

  /* Header Container */
  .header-container {
    padding: 15px 0;
  }

  .header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .logo-emblem {
    height: 45px;
    width: auto;
  }

  .logo-text-block {
    display: flex;
    flex-direction: column;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: -0.01em;
  }

  .logo-suffix {
    font-weight: 400;
  }

  .logo-domain {
    color: var(--ot-coral, #FF1654);
    font-weight: 700;
  }

  .logo-tagline {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 2px;
  }

  /* Navigation Column */
  .header-column-nav {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  /* Theme Toggle */
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 50%;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .theme-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .theme-icon-light {
    display: none;
  }

  [data-theme="dark"] .theme-icon-dark {
    display: none;
  }

  [data-theme="dark"] .theme-icon-light {
    display: block;
  }

  /* Mobile Menu Button */
  .header-btn-collapse-nav {
    display: none;
  }

  /* Hide top bar on mobile */
  @media (max-width: 991px) {
    .header-top {
      display: none;
    }

    .header-btn-collapse-nav {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 44px;
      height: 44px;
      padding: 0;
      background: transparent;
      border: 0;
      cursor: pointer;
    }

    .header-btn-collapse-nav i {
      font-size: 1.5rem;
      color: #ffffff;
    }

    .header-column-actions {
      order: 2;
    }

    .header-column-nav {
      order: 3;
    }

    .logo-text-block {
      display: none;
    }
  }
</style>

<script is:inline>
  // Desktop navigation enhancements
  // Mobile menu is handled by MobileShell via navigation-v2.js (#sidebarToggle)
  document.addEventListener('DOMContentLoaded', () => {
    // Flyout edge detection (desktop)
    const flyoutParents = document.querySelectorAll('.dropdown-submenu');

    flyoutParents.forEach(parent => {
      parent.addEventListener('mouseenter', () => {
        const flyout = parent.querySelector('.dropdown-menu');
        if (!flyout || window.innerWidth < 992) return;

        const rect = flyout.getBoundingClientRect();
        const viewportWidth = window.innerWidth;

        if (rect.right > viewportWidth - 20) {
          parent.classList.add('dropdown-reverse');
        } else {
          parent.classList.remove('dropdown-reverse');
        }
      });
    });

    // Theme toggle
    const themeToggle = document.getElementById('portoThemeToggle');

    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const html = document.documentElement;
        const body = document.body;
        const currentTheme = html.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        html.setAttribute('data-theme', newTheme);
        body.classList.remove('theme-light', 'theme-dark');
        body.classList.add('theme-' + newTheme);
        localStorage.setItem('theme', newTheme);
      });
    }

    // Keyboard navigation
    const nav = document.getElementById('mainNav');

    if (nav) {
      nav.addEventListener('keydown', (e) => {
        const key = e.key;
        const target = e.target;
        const parent = target.closest('li');

        if (!parent) return;

        switch (key) {
          case 'Escape':
            // Close any open dropdowns
            document.querySelectorAll('.dropdown.open').forEach(el => {
              el.classList.remove('open');
            });
            break;

          case 'Enter':
          case ' ':
            if (parent.classList.contains('dropdown')) {
              e.preventDefault();
              parent.classList.toggle('open');
            }
            break;

          case 'ArrowDown':
            e.preventDefault();
            const nextSibling = parent.nextElementSibling;
            if (nextSibling) {
              const nextLink = nextSibling.querySelector('a');
              nextLink?.focus();
            }
            break;

          case 'ArrowUp':
            e.preventDefault();
            const prevSibling = parent.previousElementSibling;
            if (prevSibling) {
              const prevLink = prevSibling.querySelector('a');
              prevLink?.focus();
            }
            break;
        }
      });
    }
  });
</script>
