---
/**
 * Header-porto.astro - Porto-Style Navigation
 * FIXED VERSION v2 - 2025-01-16
 *
 * Fixes applied:
 * 1. Renamed duplicate #sidebarToggle to #portoMobileToggle
 * 2. Added pointer-events:auto to action buttons
 * 3. Improved logo column spacing to prevent overlap
 * 4. SCROLL GLITCH FIX: Use CSS-driven heights instead of JS measurement
 * 5. Added will-change hints for GPU acceleration
 * 6. Removed syncSpacerHeight() that caused reflow during transitions
 * 7. Throttled scroll handler (~60fps) with state change detection
 *
 * Features:
 * - 3-level dropdown menus
 * - White dropdown panels with teal accent
 * - Flyout submenus
 * - Section headers
 * - Badges (NEW, Express, Popular, Hot)
 * - Mobile accordion navigation
 * - Dark mode support
 * - Accessibility compliant
 */

import { mainNavigation } from '../data/navigation-porto';
import { siteContact } from '../data/navigation';

interface Props {
  currentPath?: string;
  isHomepage?: boolean;
}

const { currentPath = Astro.url.pathname, isHomepage = false } = Astro.props;

// Check if current path matches or is child of a nav item
function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<!-- Fixed Header Wrapper -->
<div class="header-wrapper" id="headerWrapper">
  <!-- Coral Top Bar - Disappears on scroll -->
  <div class="coral-top-bar" id="coralTopBar">
    <div class="container">
      <div class="coral-top-content">
        <div class="coral-top-left">
          <a href={`tel:${siteContact.phone.replace(/\s/g, '')}`} class="coral-top-link">
            <i class="fas fa-phone-alt"></i>
            <span>{siteContact.phoneDisplay}</span>
          </a>
          <a href={`mailto:${siteContact.email}`} class="coral-top-link coral-top-email">
            <i class="fas fa-envelope"></i>
            <span>{siteContact.email}</span>
          </a>
        </div>
        <div class="coral-top-right">
          <span class="coral-top-hours">
            <i class="fas fa-clock"></i>
            Daily: 8:00 AM - 10:00 PM
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Sticky Navy Header -->
  <header id="header" class:list={["site-header", { "header-homepage": isHomepage }]}>
  <div class="header-body">
    <!-- Main Header -->
    <div class="header-container container">
      <div class="header-row">
        <!-- Desktop Sidebar Toggle -->
        <div class="header-column header-column-sidebar">
          <button
            id="desktopSidebarToggle"
            class="desktop-sidebar-toggle"
            type="button"
            aria-label="Open sidebar menu"
          >
            <i class="fas fa-bars" aria-hidden="true"></i>
          </button>
        </div>

        <!-- Logo -->
        <div class="header-column header-column-logo">
          <a href="/" class="header-logo">
            <img
              src="/assets/images/logo/brand/emblem-clean.png"
              alt="OnlineTranslation.ae"
              width="45"
              height="45"
              class="logo-emblem"
              loading="eager"
            />
            <div class="logo-text-block">
              <span class="logo-text">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
              <span class="logo-tagline">Boutique Legal Translation</span>
            </div>
          </a>
        </div>

        <!-- Navigation -->
        <div class="header-column header-column-nav">
          <div class="header-nav">
            <div class="header-nav-main header-nav-main-effect-1">
              <nav id="mainNav" aria-label="Main navigation">
                <ul class="nav nav-pills" role="menubar">
                  {mainNavigation.map((item) => (
                    <li
                      class:list={[
                        item.dropdown ? 'dropdown' : '',
                        isActive(item.href) ? 'active' : '',
                        item.isButton ? 'nav-item-button' : ''
                      ]}
                      role="none"
                    >
                      {item.isButton ? (
                        <a
                          href={item.href}
                          class={`btn ${item.buttonClass || 'btn-primary'}`}
                          target={item.href.startsWith('http') ? '_blank' : undefined}
                          rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                        >
                          {item.icon && <i class={item.icon}></i>}
                          <span>{item.label}</span>
                        </a>
                      ) : item.dropdown ? (
                        <>
                          <a
                            href={item.href}
                            class:list={[
                              'nav-link',
                              'dropdown-toggle',
                              isActive(item.href) ? 'active' : ''
                            ]}
                            role="menuitem"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            {item.label}
                            <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                          </a>

                          <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                            {item.dropdown.categories.map((category, catIndex) => (
                              <>
                                {category.header && (
                                  <li class="dropdown-header" role="presentation">
                                    {category.header}
                                  </li>
                                )}

                                {category.items.map((subItem) => (
                                  <li
                                    class:list={[
                                      subItem.children ? 'dropdown-submenu' : '',
                                      isActive(subItem.href) ? 'active' : ''
                                    ]}
                                    role="none"
                                  >
                                    <a
                                      href={subItem.href}
                                      class="dropdown-item"
                                      role="menuitem"
                                      aria-haspopup={subItem.children ? 'true' : undefined}
                                    >
                                      {subItem.icon && (
                                        <i class={subItem.icon} aria-hidden="true"></i>
                                      )}
                                      <span>{subItem.label}</span>
                                      {subItem.badge && (
                                        <span class={`badge badge-${subItem.badge}`}>
                                          {subItem.badge.toUpperCase()}
                                        </span>
                                      )}
                                    </a>

                                    {subItem.children && (
                                      <ul class="dropdown-menu" role="menu">
                                        {subItem.children.map((child) => (
                                          <li
                                            class:list={[isActive(child.href) ? 'active' : '']}
                                            role="none"
                                          >
                                            <a
                                              href={child.href}
                                              class="dropdown-item"
                                              role="menuitem"
                                            >
                                              <span>{child.label}</span>
                                              {child.badge && (
                                                <span class={`badge badge-${child.badge}`}>
                                                  {child.badge.toUpperCase()}
                                                </span>
                                              )}
                                            </a>
                                          </li>
                                        ))}
                                      </ul>
                                    )}
                                  </li>
                                ))}
                              </>
                            ))}

                            {item.dropdown.footerLink && (
                              <li role="none">
                                <a
                                  href={item.dropdown.footerLink.href}
                                  class="dropdown-footer"
                                  role="menuitem"
                                >
                                  {item.dropdown.footerLink.label}
                                  <i class="fas fa-arrow-right" aria-hidden="true"></i>
                                </a>
                              </li>
                            )}
                          </ul>
                        </>
                      ) : (
                        <a
                          href={item.href}
                          class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                          role="menuitem"
                        >
                          {item.icon && <i class={item.icon}></i>}
                          {item.label}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </nav>
            </div>

            <!-- Mobile Menu Button - RENAMED to avoid duplicate ID with MobileShell -->
            <button
              id="portoMobileToggle"
              class="header-btn-collapse-nav"
              type="button"
              aria-label="Open menu"
            >
              <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        <!-- Search Toggle & Theme Toggle -->
        <div class="header-column header-column-actions">
          <button
            id="desktopSearchToggle"
            class="header-action-btn search-toggle"
            type="button"
            aria-label="Search"
          >
            <i class="fas fa-search" aria-hidden="true"></i>
          </button>
          <button
            id="portoThemeToggle"
            class="header-action-btn theme-toggle"
            type="button"
            aria-label="Toggle dark mode"
          >
            <i class="fas fa-moon theme-icon-dark" aria-hidden="true"></i>
            <i class="fas fa-sun theme-icon-light" aria-hidden="true"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
</div><!-- /.header-wrapper -->

<!-- Spacer for fixed header -->
<div class="header-spacer"></div>

<style>
  /* ====================================
     CSS CUSTOM PROPERTIES FOR HEIGHTS
     Predefined values prevent JS reflow
     ==================================== */
  :root {
    --header-coral-height: 44px;
    --header-main-height: 76px;
    --header-main-scrolled: 52px;
    --header-total: calc(var(--header-coral-height) + var(--header-main-height));
    --header-total-scrolled: var(--header-main-scrolled);
    --header-transition-duration: 0.3s;
    --header-transition-easing: cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* ====================================
     FIXED HEADER WRAPPER
     ==================================== */
  .header-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1030;
    width: 100%;
    /* GPU acceleration for smooth transitions */
    will-change: transform;
    transform: translateZ(0);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }

  /* Spacer uses CSS variables - no JS measurement needed */
  .header-spacer {
    height: var(--header-total);
    transition: height var(--header-transition-duration) var(--header-transition-easing);
  }

  /* When scrolled, spacer shrinks via CSS sibling selector */
  .header-wrapper.is-scrolled + .header-spacer {
    height: var(--header-total-scrolled);
  }

  @media (max-width: 991px) {
    .header-wrapper {
      display: none !important;
    }
    .header-spacer {
      display: none;
    }
  }
</style>

<style>
  /* ====================================
     CORAL TOP BAR - Disappears on scroll
     Uses transform for GPU-accelerated hide (no reflow)
     ==================================== */
  .coral-top-bar {
    background: var(--ot-coral, #FF1654);
    height: var(--header-coral-height);
    font-family: var(--font-primary, 'Montserrat', sans-serif);
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    /* GPU-accelerated transitions - no layout reflow */
    will-change: transform, opacity;
    transform: translateY(0);
    opacity: 1;
    transition:
      transform var(--header-transition-duration) var(--header-transition-easing),
      opacity var(--header-transition-duration) var(--header-transition-easing);
  }

  /* Hidden state - use transform instead of height for smoothness */
  .coral-top-bar.hidden {
    transform: translateY(-100%);
    opacity: 0;
    pointer-events: none;
  }

  .coral-top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .coral-top-left {
    display: flex;
    gap: 20px;
  }

  .coral-top-link,
  .coral-top-hours {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 500;
  }

  /* Force coral bar content to stay white even when global link styles change */
  .coral-top-bar .coral-top-link,
  .coral-top-bar .coral-top-hours,
  .coral-top-bar .coral-top-link:visited {
