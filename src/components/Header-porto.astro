    font-family: var(--font-secondary, 'Open Sans', sans-serif);
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    color: rgba(255, 255, 255, 0.85);
    margin-top: 2px;
    white-space: nowrap;
    transition:
      font-size var(--header-transition-duration) var(--header-transition-easing),
      letter-spacing var(--header-transition-duration) var(--header-transition-easing);
  }

  /* Navigation Column - higher z-index for dropdowns */
  .header-column-nav {
    flex: 1 1 0;
    display: flex;
    justify-content: flex-end;
    position: relative;
    z-index: 10;
    min-width: 0;
    overflow: visible; /* FIX: Ensure dropdowns can extend */
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 15px;
    min-width: 0;
  }

  /* Keep nav pills from forcing the logo to shrink to zero when space is tight */
  .header-nav-main > nav > ul.nav {
    flex-wrap: nowrap;
    min-width: 0;
  }

  /* Tighter logo on slightly smaller screens to leave room for nav */
  @media (max-width: 1400px) {
    .header-column-logo {
      max-width: 240px;
    }

