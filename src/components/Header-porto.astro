---
/**
 * Header-porto.astro - Porto-Style Navigation
 * FIXED VERSION - 2025-01-16
 *
 * Fixes applied:
 * 1. Renamed duplicate #sidebarToggle to #portoMobileToggle (line ~230)
 * 2. Added pointer-events:auto to action buttons
 * 3. Improved logo column spacing to prevent overlap
 * 4. Enhanced click handlers with console logging for debugging
 *
 * Features:
 * - 3-level dropdown menus
 * - White dropdown panels with teal accent
 * - Flyout submenus
 * - Section headers
 * - Badges (NEW, Express, Popular, Hot)
 * - Mobile accordion navigation
 * - Dark mode support
 * - Accessibility compliant
 */

import { mainNavigation } from '../data/navigation-porto';
import { siteContact } from '../data/navigation';

interface Props {
  currentPath?: string;
  isHomepage?: boolean;
}

const { currentPath = Astro.url.pathname, isHomepage = false } = Astro.props;

// Check if current path matches or is child of a nav item
function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<!-- Fixed Header Wrapper -->
<div class="header-wrapper" id="headerWrapper">
  <!-- Coral Top Bar - Disappears on scroll -->
  <div class="coral-top-bar" id="coralTopBar">
    <div class="container">
      <div class="coral-top-content">
        <div class="coral-top-left">
          <a href={`tel:${siteContact.phone.replace(/\s/g, '')}`} class="coral-top-link">
            <i class="fas fa-phone-alt"></i>
            <span>{siteContact.phoneDisplay}</span>
          </a>
          <a href={`mailto:${siteContact.email}`} class="coral-top-link coral-top-email">
            <i class="fas fa-envelope"></i>
            <span>{siteContact.email}</span>
          </a>
        </div>
        <div class="coral-top-right">
          <span class="coral-top-hours">
            <i class="fas fa-clock"></i>
            Daily: 8:00 AM - 10:00 PM
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Sticky Navy Header -->
  <header id="header" class:list={["site-header", { "header-homepage": isHomepage }]}>
  <div class="header-body">
    <!-- Main Header -->
    <div class="header-container container">
      <div class="header-row">
        <!-- Desktop Sidebar Toggle -->
        <div class="header-column header-column-sidebar">
          <button
            id="desktopSidebarToggle"
            class="desktop-sidebar-toggle"
            type="button"
            aria-label="Open sidebar menu"
          >
            <!-- SVG hamburger icon - more reliable than Font Awesome -->
            <svg class="header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" aria-hidden="true">
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <line x1="3" y1="12" x2="21" y2="12"></line>
              <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
          </button>
        </div>

        <!-- Logo -->
        <div class="header-column header-column-logo">
          <a href="/" class="header-logo">
            <img
              src="/assets/images/logo/brand/emblem-clean.png"
              alt="OnlineTranslation.ae"
              width="45"
              height="45"
              class="logo-emblem"
              loading="eager"
            />
            <div class="logo-text-block">
              <span class="logo-text">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
              <span class="logo-tagline">Boutique Legal Translation</span>
            </div>
          </a>
        </div>

        <!-- Navigation -->
        <div class="header-column header-column-nav">
          <div class="header-nav">
            <div class="header-nav-main header-nav-main-effect-1">
              <nav id="mainNav" aria-label="Main navigation">
                <ul class="nav nav-pills" role="menubar">
                  {mainNavigation.map((item) => (
                    <li
                      class:list={[
                        item.dropdown ? 'dropdown' : '',
                        isActive(item.href) ? 'active' : '',
                        item.isButton ? 'nav-item-button' : ''
                      ]}
                      role="none"
                    >
                      {item.isButton ? (
                        <a
                          href={item.href}
                          class={`btn ${item.buttonClass || 'btn-primary'}`}
                          target={item.href.startsWith('http') ? '_blank' : undefined}
                          rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                        >
                          {item.icon && <i class={item.icon}></i>}
                          <span>{item.label}</span>
                        </a>
                      ) : item.dropdown ? (
                        <>
                          <a
                            href={item.href}
                            class:list={[
                              'nav-link',
                              'dropdown-toggle',
                              isActive(item.href) ? 'active' : ''
                            ]}
                            role="menuitem"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            {item.label}
                            <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                          </a>

                          <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                            {item.dropdown.categories.map((category) => (
                              <>
                                {category.header && (
                                  <li class="dropdown-header" role="presentation">
                                    {category.header}
                                  </li>
                                )}

                                {category.items.map((subItem) => (
                                  <li
                                    class:list={[
                                      subItem.children ? 'dropdown-submenu' : '',
                                      isActive(subItem.href) ? 'active' : ''
                                    ]}
                                    role="none"
                                  >
                                    <a
                                      href={subItem.href}
                                      class="dropdown-item"
                                      role="menuitem"
                                      aria-haspopup={subItem.children ? 'true' : undefined}
                                    >
                                      {subItem.icon && (
                                        <i class={subItem.icon} aria-hidden="true"></i>
                                      )}
                                      <span>{subItem.label}</span>
                                      {subItem.badge && (
                                        <span class={`badge badge-${subItem.badge}`}>
                                          {subItem.badge.toUpperCase()}
                                        </span>
                                      )}
                                    </a>

                                    {subItem.children && (
                                      <ul class="dropdown-menu" role="menu">
                                        {subItem.children.map((child) => (
                                          <li
                                            class:list={[isActive(child.href) ? 'active' : '']}
                                            role="none"
                                          >
                                            <a
                                              href={child.href}
                                              class="dropdown-item"
                                              role="menuitem"
                                            >
                                              <span>{child.label}</span>
                                              {child.badge && (
                                                <span class={`badge badge-${child.badge}`}>
                                                  {child.badge.toUpperCase()}
                                                </span>
                                              )}
                                            </a>
                                          </li>
                                        ))}
                                      </ul>
                                    )}
                                  </li>
                                ))}
                              </>
                            ))}

                            {item.dropdown.footerLink && (
                              <li role="none">
                                <a
                                  href={item.dropdown.footerLink.href}
                                  class="dropdown-footer"
                                  role="menuitem"
                                >
                                  {item.dropdown.footerLink.label}
                                  <i class="fas fa-arrow-right" aria-hidden="true"></i>
                                </a>
                              </li>
                            )}
                          </ul>
                        </>
                      ) : (
                        <a
                          href={item.href}
                          class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                          role="menuitem"
                        >
                          {item.icon && <i class={item.icon}></i>}
                          {item.label}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </nav>
            </div>

            <!-- Mobile Menu Button - RENAMED to avoid duplicate ID with MobileShell -->
            <button
              id="portoMobileToggle"
              class="header-btn-collapse-nav"
              type="button"
              aria-label="Open menu"
            >
              <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        <!-- Search Toggle & Theme Toggle -->
        <div class="header-column header-column-actions">
          <button
            id="desktopSearchToggle"
            class="header-action-btn search-toggle"
            type="button"
            aria-label="Search"
          >
            <!-- SVG search icon - more reliable than Font Awesome -->
            <svg class="header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" aria-hidden="true">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
          <button
            id="portoThemeToggle"
            class="header-action-btn theme-toggle"
            type="button"
            aria-label="Toggle dark mode"
          >
            <!-- SVG moon icon for dark mode toggle -->
            <svg class="header-icon theme-icon-dark" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" aria-hidden="true">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
            <!-- SVG sun icon for light mode toggle -->
            <svg class="header-icon theme-icon-light" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" aria-hidden="true">
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
</div><!-- /.header-wrapper -->

<!-- Spacer for fixed header -->
<div class="header-spacer"></div>

<style>
  /* ====================================
     FIXED HEADER WRAPPER
     ==================================== */
  
  /* 
   * CORAL BAR SCROLL FIX (Dec 2024)
   * Problem: Height-based collapse caused jarring layout shifts
   * Solution: Use transform to slide header up, keeping spacer fixed
   */
  
  :root {
    --coral-bar-height: 40px;  /* Height of coral bar when visible */
    --header-height: 70px;     /* Height of navy header */
    --header-compact: 50px;    /* Height of navy header when scrolled */
  }
  
  .header-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1030;
    width: 100%;
    background: transparent;
    /* Smooth slide-up transition */
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
  }

  /* When scrolled, slide entire header UP by coral bar height */
  .header-wrapper.is-scrolled {
    transform: translateY(calc(-1 * var(--coral-bar-height)));
  }

  .header-spacer {
    /* FIXED height - never changes, prevents all layout shift */
    height: calc(var(--coral-bar-height) + var(--header-compact));
    background: var(--surface-base, #ffffff);
  }
  
  [data-theme="dark"] .header-spacer,
  body.theme-dark .header-spacer {
    background: var(--surface-navy, #0a1628);
  }



  @media (max-width: 991px) {
    .header-wrapper {
      display: none !important;
    }
    .header-spacer {
      display: none;
    }
  }

  /* FIX: Hide spacer on homepage - hero extends behind header */
  body.homepage .header-spacer,
  body.is-homepage .header-spacer {
    display: none !important;
  }
</style>

<style>
  /* ====================================
     CORAL TOP BAR - Disappears on scroll
     ==================================== */
  .coral-top-bar {
    background: var(--ot-coral, #FF1654);
    padding: 10px 0;
    font-family: var(--font-secondary, 'Open Sans', sans-serif);
    font-size: 0.8rem;
    font-weight: 500;
    height: var(--coral-bar-height);
    box-sizing: border-box;
    /* Fade out when scrolled (header slides up to hide it) */
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .coral-top-bar.hidden {
    /* Just fade - the transform on .header-wrapper handles the slide */
    opacity: 0;
    pointer-events: none;
  }

  .coral-top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .coral-top-left {
    display: flex;
    gap: 20px;
  }

  .coral-top-link,
  .coral-top-hours {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 500;
  }

  /* Force coral bar content to stay white even when global link styles change */
  .coral-top-bar .coral-top-link,
  .coral-top-bar .coral-top-hours,
  .coral-top-bar .coral-top-link:visited {
    color: #ffffff !important;
  }

  .coral-top-link:hover {
    color: #ffffff;
  }

  .coral-top-hours {
    color: rgba(255, 255, 255, 0.85);
  }

  /* Hide coral bar on mobile */
  @media (max-width: 991px) {
    .coral-top-bar {
      display: none !important;
    }
  }

  /* Hide email on smaller desktops */
  @media (max-width: 1200px) and (min-width: 992px) {
    .coral-top-email {
      display: none;
    }
  }

  /* ====================================
     NAVY HEADER (inside fixed wrapper)
     ==================================== */
  .site-header {
    width: 100%;
    transition: all 0.3s ease;
  }

  .header-body {
    background: linear-gradient(135deg, var(--ot-header-dark, #0a1628) 0%, var(--ot-header-gradient, #1a365d) 100%);
    transition: all 0.3s ease;
    /* FIX: Ensure no white gaps */
    margin: 0;
    padding: 0;
  }

  /* Header Container */
  .header-container {
    padding: 15px 0;
    transition: padding 0.3s ease;
  }

  /* ====================================
     SCROLLED STATE - Compact header
     ==================================== */
  .site-header.scrolled .header-container {
    padding: 4px 0; /* Tighter padding when scrolled */
  }

  .site-header.scrolled .logo-emblem {
    height: 32px;
  }

  .site-header.scrolled .logo-text {
    font-size: 16px;
  }

  .site-header.scrolled .logo-tagline {
    font-size: 8px;
    letter-spacing: 2px;
  }

  .site-header.scrolled .desktop-sidebar-toggle {
    width: 36px;
    height: 36px;
  }

  .site-header.scrolled .header-action-btn {
    width: 32px;
    height: 32px;
  }

  .site-header.scrolled .header-action-btn i {
    font-size: 0.9rem;
  }

  .header-row {
    display: grid;
    grid-template-columns: auto auto 1fr auto; /* sidebar, logo, nav (flexible), actions (fixed) */
    align-items: center;
    gap: 12px; /* Slightly reduced gap */
    width: 100%;
  }

  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  /* Logo - auto width in grid */
  .header-column-logo {
    position: relative;
    z-index: 1;
  }

  .logo-emblem {
    height: 44px;
    width: auto;
    transition: height 0.3s ease;
    flex-shrink: 0; /* FIX: Emblem never shrinks */
  }

  .logo-text-block {
    display: flex;
    flex-direction: column;
    line-height: 1.15;
    min-width: 0;
  }

  .logo-text {
    font-family: var(--font-primary, 'Montserrat', sans-serif);
    font-size: 20px;
    font-weight: 800;
    color: #ffffff;
    letter-spacing: 0.3px;
    transition: font-size 0.3s ease;
    white-space: nowrap;
  }

  .logo-suffix {
    font-weight: 600;
    color: #ffffff;
  }

  .logo-domain {
    color: var(--ot-coral, #FF1654);
    font-weight: 800;
  }

  .logo-tagline {
    font-family: var(--font-secondary, 'Open Sans', sans-serif);
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    color: rgba(255, 255, 255, 0.85);
    margin-top: 2px;
    transition: font-size 0.3s ease;
    white-space: nowrap;
  }

  /* Navigation Column - uses grid area, aligns content to end */
  .header-column-nav {
    display: flex;
    justify-content: flex-end; /* Push nav to right side of its grid cell */
    position: relative;
    z-index: 10;
    min-width: 0; /* Allow grid to shrink this column */
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 10px;
    min-width: 0; /* Allow shrinking */
    max-width: 100%;
  }

  .header-nav-main {
    min-width: 0; /* Allow shrinking */
    max-width: 100%;
    overflow: visible; /* Allow dropdowns to show */
  }

  /* Keep nav pills from forcing width - allow truncation */
  .header-nav-main > nav > ul.nav {
    display: flex;
    flex-wrap: nowrap;
    gap: 2px;
    min-width: 0;
    justify-content: flex-end;
  }

  .header-nav-main > nav > ul.nav > li {
    flex-shrink: 0; /* Don't shrink individual items - hide via CSS if needed */
  }

  /* Very large screens (1600px+) - full spacing */
  @media (min-width: 1600px) {
    .header-row {
      gap: 20px;
    }
  }

  /* Large screens (1200-1600px) - slightly smaller logo text */
  @media (max-width: 1599px) and (min-width: 1200px) {
    .logo-text {
      font-size: 18px;
    }
    
    .logo-tagline {
      font-size: 9px;
      letter-spacing: 2px;
    }
  }

  /* Medium screens (992-1200px) - compact logo */
  @media (max-width: 1199px) and (min-width: 992px) {
    .logo-text {
      font-size: 16px;
    }
    
    .logo-tagline {
      font-size: 8px;
      letter-spacing: 1.5px;
    }
    
    .logo-emblem {
      height: 36px;
    }
    
    .header-row {
      gap: 8px;
    }
  }

  /* Ensure nav links stay white on the navy gradient header */
  .header-body .nav-link,
  .header-body .nav-link i {
    color: #ffffff !important;
  }

  .header-body .nav-link:hover,
  .header-body .nav-link:focus,
  .header-body .nav-link.active {
    color: #ffffff !important;
  }

  /* Header Action Buttons (Search & Theme Toggle) - fixed width in grid */
  .header-column-actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 8px;
    min-width: 100px; /* Guarantee space for 2 buttons */
    padding-left: 15px; /* FIX: Separation from nav items */
    margin-left: auto; /* FIX: Push to far right */
    position: relative;
    z-index: 50; /* Above nav items */
    flex-shrink: 0; /* Never shrink */
  }

  .header-action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 50%;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.2s ease;
    pointer-events: auto !important; /* FIX: Ensure clickable */
    position: relative; /* FIX: Establish stacking context */
    z-index: 100; /* FIX: Above other elements */
  }

  .header-action-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .header-action-btn:active {
    transform: scale(0.95);
  }

  /* SVG icon styling for header buttons */
  .header-icon {
    width: 18px;
    height: 18px;
    stroke: #ffffff;
    pointer-events: none;
    flex-shrink: 0;
  }

  .header-action-btn .header-icon {
    width: 16px;
    height: 16px;
  }

  /* Keep Font Awesome support as fallback */
  .header-action-btn i {
    font-size: 1rem;
    color: #ffffff !important;
    pointer-events: none;
    font-family: "Font Awesome 6 Free", "Font Awesome 5 Free", FontAwesome, sans-serif;
    font-weight: 900;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .theme-icon-light {
    display: none;
  }

  /* FIX: Use :global() to prevent Astro from scoping these selectors */
  /* data-theme is on <html>, not on component elements */
  :global([data-theme="dark"]) .theme-icon-dark {
    display: none;
  }

  :global([data-theme="dark"]) .theme-icon-light {
    display: block;
  }

  :global(html.theme-dark) .theme-icon-dark,
  :global(body.theme-dark) .theme-icon-dark {
    display: none;
  }

  :global(html.theme-dark) .theme-icon-light,
  :global(body.theme-dark) .theme-icon-light {
    display: block;
  }

  /* Desktop Sidebar Toggle */
  .desktop-sidebar-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 8px;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.2s ease;
    pointer-events: auto !important; /* FIX: Ensure clickable */
    position: relative;
    z-index: 100;
  }

  .desktop-sidebar-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .desktop-sidebar-toggle:active {
    transform: scale(0.95);
  }

  .desktop-sidebar-toggle .header-icon {
    width: 20px;
    height: 20px;
  }

  /* Keep Font Awesome support as fallback */
  .desktop-sidebar-toggle i {
    font-size: 1.25rem;
    color: #ffffff !important;
    pointer-events: none;
    font-family: "Font Awesome 6 Free", "Font Awesome 5 Free", FontAwesome, sans-serif;
    font-weight: 900;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .header-column-sidebar {
    flex-shrink: 0;
  }

  /* Mobile Menu Button */
  .header-btn-collapse-nav {
    display: none;
  }

  /* Hide entire Porto header on mobile - use original header-mobile instead */
  @media (max-width: 991px) {
    .site-header {
      display: none !important;
    }
  }

</style>

<script is:inline>
  // Porto Header Desktop Navigation
  // Mobile menu handled by MobileShell via #sidebarToggle (this file now uses #portoMobileToggle)
  document.addEventListener('DOMContentLoaded', () => {
    // ========================================
    // SCROLL BEHAVIOR
    // ========================================
    const coralTopBar = document.getElementById('coralTopBar');
    const header = document.getElementById('header');
    const headerWrapper = document.getElementById('headerWrapper');
    const scrollThreshold = 50;

    // REMOVED: Dynamic spacer height sync - causes CLS
    // Spacer height is now handled purely via CSS

    function handleScrollBehavior() {
      const currentScrollY = window.scrollY;

      if (currentScrollY > scrollThreshold) {
        coralTopBar?.classList.add('hidden');
        header?.classList.add('scrolled');
        headerWrapper?.classList.add('is-scrolled');
      } else {
        coralTopBar?.classList.remove('hidden');
        header?.classList.remove('scrolled');
        headerWrapper?.classList.remove('is-scrolled');
      }
    }

    window.addEventListener('scroll', handleScrollBehavior, { passive: true });
    handleScrollBehavior();

    // ========================================
    // DESKTOP SIDEBAR TOGGLE
    // ========================================
    const desktopSidebarToggle = document.getElementById('desktopSidebarToggle');
    const menuSidebar = document.getElementById('menu-sidebar');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    if (desktopSidebarToggle) {
      desktopSidebarToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        if (menuSidebar) {
          menuSidebar.classList.add('is-open');
        }

        if (sidebarOverlay) {
          sidebarOverlay.classList.add('is-visible');
        }

        document.body.style.overflow = 'hidden';
      });
    }

    // Also connect the renamed mobile toggle (for tablet breakpoint)
    const portoMobileToggle = document.getElementById('portoMobileToggle');
    if (portoMobileToggle) {
      portoMobileToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        if (menuSidebar) {
          menuSidebar.classList.add('is-open');
        }
        if (sidebarOverlay) {
          sidebarOverlay.classList.add('is-visible');
        }
        document.body.style.overflow = 'hidden';
      });
    }

    // ========================================
    // DESKTOP SEARCH TOGGLE
    // ========================================
    const desktopSearchToggle = document.getElementById('desktopSearchToggle');
    const searchOverlay = document.getElementById('search-overlay');
    const searchInput = document.getElementById('searchInput');

    if (desktopSearchToggle) {
      desktopSearchToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        if (searchOverlay) {
          searchOverlay.classList.add('is-open');
          document.body.style.overflow = 'hidden';
          setTimeout(() => {
            searchInput?.focus();
          }, 100);
        }
      });
    }

    // ========================================
    // THEME TOGGLE
    // ========================================
    const themeToggle = document.getElementById('portoThemeToggle');

    if (themeToggle) {
      themeToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        const html = document.documentElement;
        const body = document.body;
        const currentTheme = html.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        html.setAttribute('data-theme', newTheme);
        body.classList.remove('theme-light', 'theme-dark');
        body.classList.add('theme-' + newTheme);
        localStorage.setItem('theme', newTheme);
      });
    }

    // ========================================
    // FLYOUT EDGE DETECTION
    // ========================================
    const flyoutParents = document.querySelectorAll('.dropdown-submenu');

    flyoutParents.forEach(parent => {
      parent.addEventListener('mouseenter', () => {
        const flyout = parent.querySelector('.dropdown-menu');
        if (!flyout || window.innerWidth < 992) return;

        const rect = flyout.getBoundingClientRect();
        const viewportWidth = window.innerWidth;

        if (rect.right > viewportWidth - 20) {
          parent.classList.add('dropdown-reverse');
        } else {
          parent.classList.remove('dropdown-reverse');
        }
      });
    });

    // ========================================
    // KEYBOARD NAVIGATION
    // ========================================
    const nav = document.getElementById('mainNav');

    if (nav) {
      nav.addEventListener('keydown', (e) => {
        const key = e.key;
        const target = e.target;
        const parent = target.closest('li');

        if (!parent) return;

        switch (key) {
          case 'Escape':
            document.querySelectorAll('.dropdown.open').forEach(el => {
              el.classList.remove('open');
            });
            break;

          case 'Enter':
          case ' ':
            if (parent.classList.contains('dropdown')) {
              e.preventDefault();
              parent.classList.toggle('open');
            }
            break;

          case 'ArrowDown': {
            e.preventDefault();
            const nextSibling = parent.nextElementSibling;
            if (nextSibling) {
              const nextLink = nextSibling.querySelector('a');
              nextLink?.focus();
            }
            break;
          }

          case 'ArrowUp': {
            e.preventDefault();
            const prevSibling = parent.previousElementSibling;
            if (prevSibling) {
              const prevLink = prevSibling.querySelector('a');
              prevLink?.focus();
            }
            break;
          }
        }
      });
    }
  });
</script>
