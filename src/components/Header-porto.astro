---
/**
 * Header-porto.astro - Porto-Style Navigation
 *
 * Features:
 * - 3-level dropdown menus
 * - White dropdown panels with teal accent
 * - Flyout submenus
 * - Section headers
 * - Badges (NEW, Express, Popular, Hot)
 * - Mobile accordion navigation
 * - Dark mode support
 * - Accessibility compliant
 */

import { mainNavigation } from '../data/navigation-porto';
import { siteContact } from '../data/navigation';

interface Props {
  currentPath?: string;
  isHomepage?: boolean;
}

const { currentPath = Astro.url.pathname, isHomepage = false } = Astro.props;

// Check if current path matches or is child of a nav item
function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<!-- Fixed Header Wrapper -->
<div class="header-wrapper" id="headerWrapper">
  <!-- Coral Top Bar - Disappears on scroll -->
  <div class="coral-top-bar" id="coralTopBar">
    <div class="container">
      <div class="coral-top-content">
        <div class="coral-top-left">
          <a href={`tel:${siteContact.phone.replace(/\s/g, '')}`} class="coral-top-link">
            <i class="fas fa-phone-alt"></i>
            <span>{siteContact.phoneDisplay}</span>
          </a>
          <a href={`mailto:${siteContact.email}`} class="coral-top-link coral-top-email">
            <i class="fas fa-envelope"></i>
            <span>{siteContact.email}</span>
          </a>
        </div>
        <div class="coral-top-right">
          <span class="coral-top-hours">
            <i class="fas fa-clock"></i>
            Daily: 8:00 AM - 10:00 PM
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Sticky Navy Header -->
  <header id="header" class:list={["site-header", { "header-homepage": isHomepage }]}>
  <div class="header-body">
    <!-- Main Header -->
    <div class="header-container container">
      <div class="header-row">
        <!-- Desktop Sidebar Toggle -->
        <div class="header-column header-column-sidebar">
          <button
            id="desktopSidebarToggle"
            class="desktop-sidebar-toggle"
            aria-label="Open sidebar menu"
          >
            <i class="fas fa-bars" aria-hidden="true"></i>
          </button>
        </div>

        <!-- Logo -->
        <div class="header-column header-column-logo">
          <a href="/" class="header-logo">
            <img
              src="/images/logo/brand/emblem-clean.png"
              alt="OnlineTranslation.ae"
              width="45"
              height="45"
              class="logo-emblem"
              loading="eager"
            />
            <div class="logo-text-block">
              <span class="logo-text">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
              <span class="logo-tagline">Boutique Legal Translation</span>
            </div>
          </a>
        </div>

        <!-- Navigation -->
        <div class="header-column header-column-nav">
          <div class="header-nav">
            <div class="header-nav-main header-nav-main-effect-1">
              <nav id="mainNav" aria-label="Main navigation">
                <ul class="nav nav-pills" role="menubar">
                  {mainNavigation.map((item) => (
                    <li
                      class:list={[
                        item.dropdown ? 'dropdown' : '',
                        isActive(item.href) ? 'active' : '',
                        item.isButton ? 'nav-item-button' : ''
                      ]}
                      role="none"
                    >
                      {item.isButton ? (
                        <a
                          href={item.href}
                          class={`btn ${item.buttonClass || 'btn-primary'}`}
                          target={item.href.startsWith('http') ? '_blank' : undefined}
                          rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                        >
                          {item.icon && <i class={item.icon}></i>}
                          <span>{item.label}</span>
                        </a>
                      ) : item.dropdown ? (
                        <>
                          <a
                            href={item.href}
                            class:list={[
                              'nav-link',
                              'dropdown-toggle',
                              isActive(item.href) ? 'active' : ''
                            ]}
                            role="menuitem"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            {item.label}
                            <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                          </a>

                          <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                            {item.dropdown.categories.map((category, catIndex) => (
                              <>
                                {category.header && (
                                  <li class="dropdown-header" role="presentation">
                                    {category.header}
                                  </li>
                                )}

                                {category.items.map((subItem) => (
                                  <li
                                    class:list={[
                                      subItem.children ? 'dropdown-submenu' : '',
                                      isActive(subItem.href) ? 'active' : ''
                                    ]}
                                    role="none"
                                  >
                                    <a
                                      href={subItem.href}
                                      class="dropdown-item"
                                      role="menuitem"
                                      aria-haspopup={subItem.children ? 'true' : undefined}
                                    >
                                      {subItem.icon && (
                                        <i class={subItem.icon} aria-hidden="true"></i>
                                      )}
                                      <span>{subItem.label}</span>
                                      {subItem.badge && (
                                        <span class={`badge badge-${subItem.badge}`}>
                                          {subItem.badge.toUpperCase()}
                                        </span>
                                      )}
                                    </a>

                                    {subItem.children && (
                                      <ul class="dropdown-menu" role="menu">
                                        {subItem.children.map((child) => (
                                          <li
                                            class:list={[isActive(child.href) ? 'active' : '']}
                                            role="none"
                                          >
                                            <a
                                              href={child.href}
                                              class="dropdown-item"
                                              role="menuitem"
                                            >
                                              <span>{child.label}</span>
                                              {child.badge && (
                                                <span class={`badge badge-${child.badge}`}>
                                                  {child.badge.toUpperCase()}
                                                </span>
                                              )}
                                            </a>
                                          </li>
                                        ))}
                                      </ul>
                                    )}
                                  </li>
                                ))}
                              </>
                            ))}

                            {item.dropdown.footerLink && (
                              <li role="none">
                                <a
                                  href={item.dropdown.footerLink.href}
                                  class="dropdown-footer"
                                  role="menuitem"
                                >
                                  {item.dropdown.footerLink.label}
                                  <i class="fas fa-arrow-right" aria-hidden="true"></i>
                                </a>
                              </li>
                            )}
                          </ul>
                        </>
                      ) : (
                        <a
                          href={item.href}
                          class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                          role="menuitem"
                        >
                          {item.icon && <i class={item.icon}></i>}
                          {item.label}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </nav>
            </div>

            <!-- Mobile Menu Button - triggers MobileShell sidebar -->
            <button
              id="sidebarToggle"
              class="header-btn-collapse-nav"
              aria-label="Open menu"
            >
              <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        <!-- Theme Toggle -->
        <div class="header-column header-column-actions">
          <button
            id="portoThemeToggle"
            class="theme-toggle"
            aria-label="Toggle dark mode"
          >
            <i class="fas fa-moon theme-icon-dark" aria-hidden="true"></i>
            <i class="fas fa-sun theme-icon-light" aria-hidden="true"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
</div><!-- /.header-wrapper -->

<!-- Spacer for fixed header -->
<div class="header-spacer"></div>

<style>
  /* ====================================
     FIXED HEADER WRAPPER
     ==================================== */
  .header-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1030;
    width: 100%;
  }

  .header-spacer {
    height: 100px; /* Approximate header height */
  }

  @media (max-width: 991px) {
    .header-wrapper {
      display: none !important;
    }
    .header-spacer {
      display: none;
    }
  }
</style>

<style>
  /* ====================================
     CORAL TOP BAR - Disappears on scroll
     ==================================== */
  .coral-top-bar {
    background: var(--ot-coral, #FF1654);
    padding: 10px 0;
    font-size: 0.85rem;
    transition: transform 0.3s ease, opacity 0.3s ease, max-height 0.3s ease;
    max-height: 60px;
    overflow: hidden;
  }

  .coral-top-bar.hidden {
    max-height: 0;
    padding: 0;
    opacity: 0;
    transform: translateY(-100%);
    pointer-events: none;
  }

  .coral-top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .coral-top-left {
    display: flex;
    gap: 20px;
  }

  .coral-top-link,
  .coral-top-hours {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 500;
  }

  .coral-top-link:hover {
    color: #ffffff;
  }

  .coral-top-hours {
    color: rgba(255, 255, 255, 0.85);
  }

  /* Hide coral bar on mobile */
  @media (max-width: 991px) {
    .coral-top-bar {
      display: none !important;
    }
  }

  /* Hide email on smaller desktops */
  @media (max-width: 1200px) and (min-width: 992px) {
    .coral-top-email {
      display: none;
    }
  }

  /* ====================================
     NAVY HEADER (inside fixed wrapper)
     ==================================== */
  .site-header {
    width: 100%;
    transition: all 0.3s ease;
  }

  .header-body {
    background: linear-gradient(135deg, var(--ot-header-dark, #0a1628) 0%, var(--ot-header-gradient, #1a365d) 100%);
    transition: all 0.3s ease;
  }

  /* Header Container */
  .header-container {
    padding: 15px 0;
    transition: padding 0.3s ease;
  }

  /* ====================================
     SCROLLED STATE - Compact header
     ==================================== */
  .site-header.scrolled .header-container {
    padding: 6px 0;
  }

  .site-header.scrolled .logo-emblem {
    height: 32px;
  }

  .site-header.scrolled .logo-text {
    font-size: 14px;
  }

  .site-header.scrolled .logo-tagline {
    font-size: 9px;
    letter-spacing: 1.5px;
  }

  .site-header.scrolled .desktop-sidebar-toggle {
    width: 36px;
    height: 36px;
  }

  .site-header.scrolled .theme-toggle {
    width: 32px;
    height: 32px;
  }

  .header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .logo-emblem {
    height: 44px;
    width: auto;
    transition: height 0.3s ease;
  }

  .logo-text-block {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }

  .logo-text {
    font-family: var(--font-primary, 'Montserrat', sans-serif);
    font-size: 18px;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: 0.5px;
    transition: font-size 0.3s ease;
  }

  .logo-suffix {
    font-weight: 400;
    color: #ffffff;
  }

  .logo-domain {
    color: var(--ot-coral, #FF1654);
    font-weight: 700;
  }

  .logo-tagline {
    font-family: var(--font-secondary, 'Open Sans', sans-serif);
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(255, 255, 255, 0.75);
    margin-top: 3px;
    transition: font-size 0.3s ease;
  }

  /* Navigation Column */
  .header-column-nav {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  /* Theme Toggle */
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 50%;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .theme-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .theme-icon-light {
    display: none;
  }

  [data-theme="dark"] .theme-icon-dark {
    display: none;
  }

  [data-theme="dark"] .theme-icon-light {
    display: block;
  }

  /* Desktop Sidebar Toggle */
  .desktop-sidebar-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 8px;
    color: #ffffff;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .desktop-sidebar-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .desktop-sidebar-toggle i {
    font-size: 1.25rem;
  }

  .header-column-sidebar {
    flex-shrink: 0;
  }

  /* Mobile Menu Button */
  .header-btn-collapse-nav {
    display: none;
  }

  /* Hide entire Porto header on mobile - use original header-mobile instead */
  @media (max-width: 991px) {
    .site-header {
      display: none !important;
    }
  }

</style>

<script is:inline>
  // Desktop navigation enhancements
  // Mobile menu is handled by MobileShell via navigation-v2.js (#sidebarToggle)
  document.addEventListener('DOMContentLoaded', () => {
    // ========================================
    // SCROLL BEHAVIOR
    // - Coral bar disappears on scroll
    // - Header shrinks (scrolled class)
    // ========================================
    const coralTopBar = document.getElementById('coralTopBar');
    const header = document.getElementById('header');
    const scrollThreshold = 50;

    function handleScrollBehavior() {
      const currentScrollY = window.scrollY;

      if (currentScrollY > scrollThreshold) {
        coralTopBar?.classList.add('hidden');
        header?.classList.add('scrolled');
      } else {
        coralTopBar?.classList.remove('hidden');
        header?.classList.remove('scrolled');
      }
    }

    window.addEventListener('scroll', handleScrollBehavior, { passive: true });
    handleScrollBehavior();

    // ========================================
    // DESKTOP SIDEBAR TOGGLE
    // ========================================
    const desktopSidebarToggle = document.getElementById('desktopSidebarToggle');
    const menuSidebar = document.getElementById('menu-sidebar');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    if (desktopSidebarToggle && menuSidebar) {
      desktopSidebarToggle.addEventListener('click', () => {
        menuSidebar.classList.add('is-open');
        if (sidebarOverlay) sidebarOverlay.classList.add('is-visible');
        document.body.style.overflow = 'hidden';
      });
    }

    // Flyout edge detection (desktop)
    const flyoutParents = document.querySelectorAll('.dropdown-submenu');

    flyoutParents.forEach(parent => {
      parent.addEventListener('mouseenter', () => {
        const flyout = parent.querySelector('.dropdown-menu');
        if (!flyout || window.innerWidth < 992) return;

        const rect = flyout.getBoundingClientRect();
        const viewportWidth = window.innerWidth;

        if (rect.right > viewportWidth - 20) {
          parent.classList.add('dropdown-reverse');
        } else {
          parent.classList.remove('dropdown-reverse');
        }
      });
    });

    // Theme toggle
    const themeToggle = document.getElementById('portoThemeToggle');

    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const html = document.documentElement;
        const body = document.body;
        const currentTheme = html.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        html.setAttribute('data-theme', newTheme);
        body.classList.remove('theme-light', 'theme-dark');
        body.classList.add('theme-' + newTheme);
        localStorage.setItem('theme', newTheme);
      });
    }

    // Keyboard navigation
    const nav = document.getElementById('mainNav');

    if (nav) {
      nav.addEventListener('keydown', (e) => {
        const key = e.key;
        const target = e.target;
        const parent = target.closest('li');

        if (!parent) return;

        switch (key) {
          case 'Escape':
            // Close any open dropdowns
            document.querySelectorAll('.dropdown.open').forEach(el => {
              el.classList.remove('open');
            });
            break;

          case 'Enter':
          case ' ':
            if (parent.classList.contains('dropdown')) {
              e.preventDefault();
              parent.classList.toggle('open');
            }
            break;

          case 'ArrowDown':
            e.preventDefault();
            const nextSibling = parent.nextElementSibling;
            if (nextSibling) {
              const nextLink = nextSibling.querySelector('a');
              nextLink?.focus();
            }
            break;

          case 'ArrowUp':
            e.preventDefault();
            const prevSibling = parent.previousElementSibling;
            if (prevSibling) {
              const prevLink = prevSibling.querySelector('a');
              prevLink?.focus();
            }
            break;
        }
      });
    }
  });
</script>
