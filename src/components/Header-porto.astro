    width: 32px;
    height: 32px;
  }

  .site-header.scrolled .header-action-btn i {
    font-size: 0.9rem;
  }

  .header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: nowrap;
  }

  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  /* Keep breathing room between the logo block and the navigation */
  .header-column-logo {
    position: relative;
    z-index: 1;
    margin-right: 18px;
    flex: 0 0 auto; /* FIX: Changed from 0 1 240px to prevent shrinking/overlap */
