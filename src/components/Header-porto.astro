---
/**
 * Header-porto.astro - Porto-Authentic Desktop Navigation
 * REFACTORED: 2025-01-17
 *
 * Built from Porto Theme v13.0.0 demo-business-consulting-2 patterns
 *
 * CSS: /styles/header-unified.css
 *
 * BEHAVIORS:
 * 1. Unscrolled: Coral bar visible (50px), navy container full size (100px)
 * 2. Scrolled (>70px): Coral bar collapses to 0, navy shrinks to 70px
 * 3. Logo shrinks via CSS scale when scrolled
 *
 * STRUCTURE (Porto-native):
 * #header.header-effect-shrink
 *   └── .header-body
 *       ├── .header-top (coral bar)
 *       └── .header-container (navy nav)
 *
 * STICKY TRIGGER: html.sticky-header-active (Porto pattern)
 */

import { mainNavigation } from '../data/navigation-porto';
import { siteContact } from '../data/navigation';

interface Props {
  currentPath?: string;
  isHomepage?: boolean;
}

const { currentPath = Astro.url.pathname, isHomepage = false } = Astro.props;

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header
  id="header"
  class:list={["header-effect-shrink", { "header-homepage": isHomepage }]}
  data-plugin-options={JSON.stringify({
    stickyEnabled: true,
    stickyEffect: "shrink",
    stickyStartAt: 70,
    stickyHeaderContainerHeight: 70
  })}
>
  <div class="header-body">
    <!-- Coral Top Bar -->
    <div class="header-top header-top-default">
      <div class="header-top-container container">
        <div class="header-top-left">
          <a href={`tel:${siteContact.phone.replace(/\s/g, '')}`} class="header-top-phone">
            <span class="header-top-icon"><i class="fas fa-phone-alt"></i></span>
            <span class="header-top-text">{siteContact.phoneDisplay}</span>
          </a>
          <a href={`mailto:${siteContact.email}`} class="header-top-email">
            <span class="header-top-icon"><i class="fas fa-envelope"></i></span>
            <span class="header-top-text">{siteContact.email}</span>
          </a>
          <span class="header-top-hours">
            <span class="header-top-icon"><i class="fas fa-clock"></i></span>
            <span class="header-top-text">Daily: 8AM - 10PM</span>
          </span>
        </div>
        <div class="header-top-right">
          <a href={siteContact.whatsapp} class="header-top-cta" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-whatsapp"></i>
            <span>Get Free Quote</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Navy Navigation Container -->
    <div class="header-container container">
      <div class="header-row">
        <!-- Sidebar Toggle -->
        <div class="header-column header-column-sidebar">
          <button
            id="headerSidebarToggle"
            class="btn-sidebar-toggle"
            type="button"
            aria-label="Open sidebar menu"
          >
            <i class="fas fa-bars"></i>
          </button>
        </div>

        <!-- Logo (single image, CSS scale on scroll) -->
        <div class="header-column header-column-logo">
          <div class="header-logo">
            <a href="/">
              <img
                src="/assets/images/logo/brand/emblem-clean.png"
                alt="OnlineTranslation.ae"
                width="44"
                height="44"
                class="header-logo-img"
                loading="eager"
              />
              <span class="logo-text-wrapper">
                <span class="logo-text">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
                <span class="logo-tagline">Boutique Legal Translation</span>
              </span>
            </a>
          </div>
        </div>

        <!-- Navigation -->
        <div class="header-column header-column-nav">
          <div class="header-nav header-nav-links">
            <div class="header-nav-main header-nav-main-effect-1">
              <nav id="mainNav" aria-label="Main navigation">
                <ul class="nav nav-pills" role="menubar">
                  {mainNavigation.map((item) => (
                    <li
                      class:list={[
                        item.dropdown ? 'dropdown' : '',
                        isActive(item.href) ? 'active' : '',
                        item.isButton ? 'nav-item-button' : ''
                      ]}
                      role="none"
                    >
                      {item.isButton ? (
                        <a
                          href={item.href}
                          class={`btn ${item.buttonClass || 'btn-primary'}`}
                          target={item.href.startsWith('http') ? '_blank' : undefined}
                          rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                        >
                          {item.icon && <i class={item.icon}></i>}
                          <span>{item.label}</span>
                        </a>
                      ) : item.dropdown ? (
                        <>
                          <a
                            href={item.href}
                            class:list={['nav-link', 'dropdown-toggle', isActive(item.href) ? 'active' : '']}
                            role="menuitem"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            {item.label}
                            <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                          </a>
                          <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                            {item.dropdown.categories.map((category) => (
                              <>
                                {category.header && (
                                  <li class="dropdown-header" role="presentation">{category.header}</li>
                                )}
                                {category.items.map((subItem) => (
                                  <li
                                    class:list={[
                                      subItem.children ? 'dropdown-submenu' : '',
                                      isActive(subItem.href) ? 'active' : ''
                                    ]}
                                    role="none"
                                  >
                                    <a
                                      href={subItem.href}
                                      class="dropdown-item"
                                      role="menuitem"
                                      aria-haspopup={subItem.children ? 'true' : undefined}
                                    >
                                      {subItem.icon && <i class={subItem.icon} aria-hidden="true"></i>}
                                      <span>{subItem.label}</span>
                                      {subItem.badge && (
                                        <span class={`badge badge-${subItem.badge}`}>{subItem.badge.toUpperCase()}</span>
                                      )}
                                    </a>
                                    {subItem.children && (
                                      <ul class="dropdown-menu" role="menu">
                                        {subItem.children.map((child) => (
                                          <li class:list={[isActive(child.href) ? 'active' : '']} role="none">
                                            <a href={child.href} class="dropdown-item" role="menuitem">
                                              <span>{child.label}</span>
                                              {child.badge && (
                                                <span class={`badge badge-${child.badge}`}>{child.badge.toUpperCase()}</span>
                                              )}
                                            </a>
                                          </li>
                                        ))}
                                      </ul>
                                    )}
                                  </li>
                                ))}
                              </>
                            ))}
                            {item.dropdown.footerLink && (
                              <li role="none">
                                <a href={item.dropdown.footerLink.href} class="dropdown-footer" role="menuitem">
                                  {item.dropdown.footerLink.label}
                                  <i class="fas fa-arrow-right" aria-hidden="true"></i>
                                </a>
                              </li>
                            )}
                          </ul>
                        </>
                      ) : (
                        <a
                          href={item.href}
                          class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                          role="menuitem"
                        >
                          {item.icon && <i class={item.icon}></i>}
                          {item.label}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="header-column header-column-actions">
          <button id="headerSearchToggle" class="btn-action" type="button" aria-label="Search">
            <i class="fas fa-search"></i>
          </button>
          <button id="headerThemeToggle" class="btn-action btn-theme" type="button" aria-label="Toggle theme">
            <i class="fas fa-moon theme-icon-dark"></i>
            <i class="fas fa-sun theme-icon-light"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<!--
  CSS: All styles in /styles/header-unified.css
  Using Porto-authentic html.sticky-header-active pattern
-->

<script is:inline>
/**
 * Porto Header - Sticky Behavior
 * Uses html.sticky-header-active class (Porto pattern)
 */
(function() {
  const header = document.getElementById('header');
  if (!header) return;

  // Parse options from data attribute
  let options = {
    stickyEnabled: true,
    stickyEffect: 'shrink',
    stickyStartAt: 70,
    stickyHeaderContainerHeight: 70
  };

  try {
    const dataOptions = header.getAttribute('data-plugin-options');
    if (dataOptions) {
      options = { ...options, ...JSON.parse(dataOptions) };
    }
  } catch (e) {
    console.warn('[Header] Could not parse options:', e);
  }

  if (!options.stickyEnabled) return;

  const html = document.documentElement;
  let isSticky = false;
  let ticking = false;

  function updateSticky() {
    const scrollY = window.scrollY || window.pageYOffset;
    const shouldBeSticky = scrollY > options.stickyStartAt;

    if (shouldBeSticky !== isSticky) {
      isSticky = shouldBeSticky;
      if (isSticky) {
        html.classList.add('sticky-header-active');
      } else {
        html.classList.remove('sticky-header-active');
      }
    }
    ticking = false;
  }

  function onScroll() {
    if (!ticking) {
      requestAnimationFrame(updateSticky);
      ticking = true;
    }
  }

  window.addEventListener('scroll', onScroll, { passive: true });
  updateSticky(); // Initial check

  // ========================================
  // BUTTON HANDLERS
  // ========================================

  // Sidebar Toggle
  const sidebarToggle = document.getElementById('headerSidebarToggle');
  const menuSidebar = document.getElementById('menu-sidebar');
  const sidebarOverlay = document.getElementById('sidebarOverlay');

  if (sidebarToggle) {
    sidebarToggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();

      if (menuSidebar) {
        menuSidebar.classList.add('is-open');
      }
      if (sidebarOverlay) {
        sidebarOverlay.classList.add('is-visible');
      }
      document.body.style.overflow = 'hidden';
    });
  }

  // Search Toggle
  const searchToggle = document.getElementById('headerSearchToggle');
  const searchOverlay = document.getElementById('search-overlay');
  const searchInput = document.getElementById('searchInput');

  if (searchToggle) {
    searchToggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();

      if (searchOverlay) {
        searchOverlay.classList.add('is-open');
        document.body.style.overflow = 'hidden';
        setTimeout(function() {
          if (searchInput) searchInput.focus();
        }, 100);
      }
    });
  }

  // Theme Toggle
  const themeToggle = document.getElementById('headerThemeToggle');

  if (themeToggle) {
    themeToggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();

      const currentTheme = html.getAttribute('data-theme') || 'light';
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

      html.setAttribute('data-theme', newTheme);
      document.body.classList.remove('theme-light', 'theme-dark');
      document.body.classList.add('theme-' + newTheme);
      localStorage.setItem('theme', newTheme);
    });
  }

  // ========================================
  // FLYOUT EDGE DETECTION
  // ========================================
  document.querySelectorAll('.dropdown-submenu').forEach(function(parent) {
    parent.addEventListener('mouseenter', function() {
      const flyout = parent.querySelector('.dropdown-menu');
      if (!flyout || window.innerWidth < 992) return;

      const rect = flyout.getBoundingClientRect();
      if (rect.right > window.innerWidth - 20) {
        parent.classList.add('dropdown-reverse');
      } else {
        parent.classList.remove('dropdown-reverse');
      }
    });
  });

})();
</script>
