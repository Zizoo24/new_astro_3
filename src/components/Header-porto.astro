---
/**
 * Header-porto.astro - Porto-Style Navigation
 * VERSION 3 - December 2025
 *
 * SCROLL GLITCH FIX - Transform-Only Approach
 * ============================================
 * Previous versions tried to transition height/margin properties which
 * cause layout reflow even with throttling. This version uses:
 *
 * 1. FIXED spacer height (no transition) - changes instantly on state change
 * 2. Transform-only visual transitions (GPU composited, no reflow)
 * 3. Single RAF-based scroll handler with hysteresis
 * 4. CSS containment for isolation
 *
 * Visual Effect:
 * - Coral bar slides up (translateY)
 * - Main header scales down slightly (transform: scale)
 * - Logo/buttons scale down (transform: scale)
 * - NO height/margin/padding animations
 */

import { mainNavigation } from '../data/navigation-porto';
import { siteContact } from '../data/navigation';

interface Props {
  currentPath?: string;
  isHomepage?: boolean;
}

const { currentPath = Astro.url.pathname, isHomepage = false } = Astro.props;

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<!-- Header System Container -->
<div class="header-system" id="headerSystem">
  <!-- Fixed Header Wrapper -->
  <div class="header-wrapper" id="headerWrapper">
    <!-- Coral Top Bar -->
    <div class="coral-top-bar" id="coralTopBar">
      <div class="container">
        <div class="coral-top-content">
          <div class="coral-top-left">
            <a href={`tel:${siteContact.phone.replace(/\s/g, '')}`} class="coral-top-link">
              <i class="fas fa-phone-alt"></i>
              <span>{siteContact.phoneDisplay}</span>
            </a>
            <a href={`mailto:${siteContact.email}`} class="coral-top-link coral-top-email">
              <i class="fas fa-envelope"></i>
              <span>{siteContact.email}</span>
            </a>
          </div>
          <div class="coral-top-right">
            <span class="coral-top-hours">
              <i class="fas fa-clock"></i>
              Daily: 8:00 AM - 10:00 PM
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Navy Header -->
    <header id="header" class:list={["site-header", { "header-homepage": isHomepage }]}>
      <div class="header-body">
        <div class="header-container container">
          <div class="header-row">
            <!-- Desktop Sidebar Toggle -->
            <div class="header-column header-column-sidebar">
              <button
                id="desktopSidebarToggle"
                class="desktop-sidebar-toggle"
                type="button"
                aria-label="Open sidebar menu"
              >
                <i class="fas fa-bars" aria-hidden="true"></i>
              </button>
            </div>

            <!-- Logo -->
            <div class="header-column header-column-logo">
              <a href="/" class="header-logo">
                <div class="logo-emblem-wrap">
                  <img
                    src="/assets/images/logo/brand/emblem-clean.png"
                    alt="OnlineTranslation.ae"
                    width="45"
                    height="45"
                    class="logo-emblem"
                    loading="eager"
                  />
                </div>
                <div class="logo-text-block">
                  <span class="logo-text">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
                  <span class="logo-tagline">Boutique Legal Translation</span>
                </div>
              </a>
            </div>

            <!-- Navigation -->
            <div class="header-column header-column-nav">
              <div class="header-nav">
                <div class="header-nav-main header-nav-main-effect-1">
                  <nav id="mainNav" aria-label="Main navigation">
                    <ul class="nav nav-pills" role="menubar">
                      {mainNavigation.map((item) => (
                        <li
                          class:list={[
                            item.dropdown ? 'dropdown' : '',
                            isActive(item.href) ? 'active' : '',
                            item.isButton ? 'nav-item-button' : ''
                          ]}
                          role="none"
                        >
                          {item.isButton ? (
                            <a
                              href={item.href}
                              class={`btn ${item.buttonClass || 'btn-primary'}`}
                              target={item.href.startsWith('http') ? '_blank' : undefined}
                              rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                            >
                              {item.icon && <i class={item.icon}></i>}
                              <span>{item.label}</span>
                            </a>
                          ) : item.dropdown ? (
                            <>
                              <a
                                href={item.href}
                                class:list={[
                                  'nav-link',
                                  'dropdown-toggle',
                                  isActive(item.href) ? 'active' : ''
                                ]}
                                role="menuitem"
                                aria-haspopup="true"
                                aria-expanded="false"
                              >
                                {item.label}
                                <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                              </a>

                              <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                                {item.dropdown.categories.map((category, catIndex) => (
                                  <>
                                    {category.header && (
                                      <li class="dropdown-header" role="presentation">
                                        {category.header}
                                      </li>
                                    )}

                                    {category.items.map((subItem) => (
                                      <li
                                        class:list={[
                                          subItem.children ? 'dropdown-submenu' : '',
                                          isActive(subItem.href) ? 'active' : ''
                                        ]}
                                        role="none"
                                      >
                                        <a
                                          href={subItem.href}
                                          class="dropdown-item"
                                          role="menuitem"
                                          aria-haspopup={subItem.children ? 'true' : undefined}
                                        >
                                          {subItem.icon && (
                                            <i class={subItem.icon} aria-hidden="true"></i>
                                          )}
                                          <span>{subItem.label}</span>
                                          {subItem.badge && (
                                            <span class={`badge badge-${subItem.badge}`}>
                                              {subItem.badge.toUpperCase()}
                                            </span>
                                          )}
                                        </a>

                                        {subItem.children && (
                                          <ul class="dropdown-menu" role="menu">
                                            {subItem.children.map((child) => (
                                              <li
                                                class:list={[isActive(child.href) ? 'active' : '']}
                                                role="none"
                                              >
                                                <a
                                                  href={child.href}
                                                  class="dropdown-item"
                                                  role="menuitem"
                                                >
                                                  <span>{child.label}</span>
                                                  {child.badge && (
                                                    <span class={`badge badge-${child.badge}`}>
                                                      {child.badge.toUpperCase()}
                                                    </span>
                                                  )}
                                                </a>
                                              </li>
                                            ))}
                                          </ul>
                                        )}
                                      </li>
                                    ))}
                                  </>
                                ))}

                                {item.dropdown.footerLink && (
                                  <li role="none">
                                    <a
                                      href={item.dropdown.footerLink.href}
                                      class="dropdown-footer"
                                      role="menuitem"
                                    >
                                      {item.dropdown.footerLink.label}
                                      <i class="fas fa-arrow-right" aria-hidden="true"></i>
                                    </a>
                                  </li>
                                )}
                              </ul>
                            </>
                          ) : (
                            <a
                              href={item.href}
                              class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                              role="menuitem"
                            >
                              {item.icon && <i class={item.icon}></i>}
                              {item.label}
                            </a>
                          )}
                        </li>
                      ))}
                    </ul>
                  </nav>
                </div>

                <!-- Mobile Menu Button -->
                <button
                  id="portoMobileToggle"
                  class="header-btn-collapse-nav"
                  type="button"
                  aria-label="Open menu"
                >
                  <i class="fas fa-bars" aria-hidden="true"></i>
                </button>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="header-column header-column-actions">
              <button
                id="desktopSearchToggle"
                class="header-action-btn search-toggle"
                type="button"
                aria-label="Search"
              >
                <i class="fas fa-search" aria-hidden="true"></i>
              </button>
              <button
                id="portoThemeToggle"
                class="header-action-btn theme-toggle"
                type="button"
                aria-label="Toggle dark mode"
              >
                <i class="fas fa-moon theme-icon-dark" aria-hidden="true"></i>
                <i class="fas fa-sun theme-icon-light" aria-hidden="true"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </header>
  </div>

  <!-- Spacer - NO TRANSITION, changes height instantly -->
  <div class="header-spacer" id="headerSpacer"></div>
</div>

<style>
  /* ============================================
     V3 CORE PRINCIPLE: Transform-only animations
     Heights change INSTANTLY (no CSS transition)
     Visual changes use transform (GPU composited)
     ============================================ */

  /* Fixed dimensions - these values are constants */
  :root {
    --header-coral-height: 44px;
    --header-main-height: 76px;
    --header-main-scrolled: 52px;
    --header-total-unscrolled: 120px; /* 44 + 76 */
    --header-total-scrolled: 52px;

    /* Animation timing - only for transforms */
    --header-transform-duration: 0.25s;
    --header-transform-easing: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* ============================================
     HEADER SYSTEM - Contains everything
     ============================================ */
  .header-system {
    contain: layout style;
  }

  /* ============================================
     FIXED HEADER WRAPPER
     ============================================ */
  .header-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1030;
    /* GPU layer promotion */
    will-change: transform;
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  /* ============================================
     SPACER - NO TRANSITION
     Height changes instantly via JS
     ============================================ */
  .header-spacer {
    height: var(--header-total-unscrolled);
    /* CRITICAL: No transition property here */
  }

  /* Hide on mobile */
  @media (max-width: 991px) {
    .header-wrapper {
      display: none !important;
    }
    .header-spacer {
      display: none;
    }
  }

  /* ============================================
     CORAL TOP BAR
     Uses transform for hide/show (no height change)
     ============================================ */
  .coral-top-bar {
    background: var(--ot-coral, #FF1654);
    height: var(--header-coral-height);
    font-family: var(--font-primary, 'Montserrat', sans-serif);
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    /* Transform-only animation */
    will-change: transform, opacity;
    transform: translateY(0);
    opacity: 1;
    transition:
      transform var(--header-transform-duration) var(--header-transform-easing),
      opacity var(--header-transform-duration) var(--header-transform-easing);
  }

  /* Scrolled state - slides up */
  .header-wrapper.is-scrolled .coral-top-bar {
    transform: translateY(-100%);
    opacity: 0;
    pointer-events: none;
  }

  .coral-top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .coral-top-left {
    display: flex;
    gap: 20px;
  }

  .coral-top-link,
  .coral-top-hours {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #ffffff !important;
    text-decoration: none;
    font-weight: 500;
  }

  .coral-top-link:hover {
    color: #ffffff;
    opacity: 0.9;
  }

  .coral-top-hours {
    color: rgba(255, 255, 255, 0.9) !important;
  }

  @media (max-width: 991px) {
    .coral-top-bar {
      display: none !important;
    }
  }

  @media (max-width: 1200px) and (min-width: 992px) {
    .coral-top-email {
      display: none;
    }
  }

  /* ============================================
     MAIN HEADER
     Uses transform: translateY to shift up when scrolled
     ============================================ */
  .site-header {
    width: 100%;
    /* Transform-only animation for position shift */
    will-change: transform;
    transform: translateY(0);
    transition: transform var(--header-transform-duration) var(--header-transform-easing);
  }

  /* When scrolled, shift up by coral bar height */
  .header-wrapper.is-scrolled .site-header {
    transform: translateY(calc(-1 * var(--header-coral-height)));
  }

  .header-body {
    background: linear-gradient(135deg, var(--ot-header-dark, #0a1628) 0%, var(--ot-header-gradient, #1a365d) 100%);
  }

  /* Header container - FIXED height, no transition */
  .header-container {
    height: var(--header-main-height);
    display: flex;
    align-items: center;
  }

  .header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: nowrap;
    width: 100%;
  }

  /* ============================================
     LOGO - Uses transform: scale for size change
     ============================================ */
  .header-column-logo {
    position: relative;
    z-index: 1;
    margin-right: 18px;
    flex: 0 0 auto;
    max-width: 280px;
  }

  .header-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    /* Transform origin for scaling */
    transform-origin: left center;
    will-change: transform;
    transition: transform var(--header-transform-duration) var(--header-transform-easing);
  }

  /* Scale down logo when scrolled */
  .header-wrapper.is-scrolled .header-logo {
    transform: scale(0.85);
  }

  .logo-emblem-wrap {
    flex-shrink: 0;
  }

  .logo-emblem {
    height: 44px;
    width: 44px;
    object-fit: contain;
    display: block;
  }

  .logo-text-block {
    display: flex;
    flex-direction: column;
    line-height: 1.15;
  }

  .logo-text {
    font-family: var(--font-primary, 'Montserrat', sans-serif);
    font-size: 20px;
    font-weight: 800;
    color: #ffffff;
    letter-spacing: 0.3px;
    white-space: nowrap;
  }

  .logo-suffix {
    font-weight: 600;
    color: #ffffff;
  }

  .logo-domain {
    color: var(--ot-coral, #FF1654);
    font-weight: 800;
  }

  .logo-tagline {
    font-family: var(--font-secondary, 'Open Sans', sans-serif);
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    color: rgba(255, 255, 255, 0.85);
    margin-top: 2px;
    white-space: nowrap;
  }

  /* Responsive logo adjustments */
  @media (max-width: 1400px) {
    .header-column-logo {
      max-width: 240px;
    }
    .logo-text-block {
      display: none;
    }
  }

  @media (max-width: 1200px) {
    .header-column-logo {
      max-width: 60px;
    }
  }

  /* ============================================
     NAVIGATION COLUMN
     ============================================ */
  .header-column-nav {
    flex: 1 1 0;
    display: flex;
    justify-content: flex-end;
    position: relative;
    z-index: 10;
    min-width: 0;
    overflow: visible;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .header-nav-main > nav > ul.nav {
    flex-wrap: nowrap;
    min-width: 0;
  }

  /* Nav link colors */
  .header-body .nav-link,
  .header-body .nav-link i {
    color: #ffffff !important;
  }

  .header-body .nav-link:hover,
  .header-body .nav-link:focus,
  .header-body .nav-link.active {
    color: #ffffff !important;
  }

  /* ============================================
     ACTION BUTTONS - Uses transform: scale
     ============================================ */
  .header-column-actions {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-shrink: 0;
    /* Scale from right side */
    transform-origin: right center;
    will-change: transform;
    transition: transform var(--header-transform-duration) var(--header-transform-easing);
  }

  /* Scale down when scrolled */
  .header-wrapper.is-scrolled .header-column-actions {
    transform: scale(0.85);
  }

  .header-action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 50%;
    color: #ffffff;
    cursor: pointer;
    pointer-events: auto !important;
    position: relative;
    z-index: 100;
    transition: background 0.2s ease;
  }

  .header-action-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .header-action-btn:active {
    opacity: 0.8;
  }

  .header-action-btn i {
    font-size: 1rem;
    pointer-events: none;
  }

  /* Theme toggle icons */
  .theme-icon-light {
    display: none;
  }

  [data-theme="dark"] .theme-icon-dark {
    display: none;
  }

  [data-theme="dark"] .theme-icon-light {
    display: block;
  }

  /* ============================================
     SIDEBAR TOGGLE - Uses transform: scale
     ============================================ */
  .header-column-sidebar {
    flex-shrink: 0;
    transform-origin: left center;
    will-change: transform;
    transition: transform var(--header-transform-duration) var(--header-transform-easing);
  }

  .header-wrapper.is-scrolled .header-column-sidebar {
    transform: scale(0.85);
  }

  .desktop-sidebar-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 8px;
    color: #ffffff;
    cursor: pointer;
    pointer-events: auto !important;
    position: relative;
    z-index: 100;
    transition: background 0.2s ease;
  }

  .desktop-sidebar-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .desktop-sidebar-toggle:active {
    opacity: 0.8;
  }

  .desktop-sidebar-toggle i {
    font-size: 1.25rem;
    pointer-events: none;
  }

  /* Mobile menu button - hidden on desktop */
  .header-btn-collapse-nav {
    display: none;
  }

  @media (max-width: 991px) {
    .site-header {
      display: none !important;
    }
  }
</style>

<script is:inline>
  /**
   * Header Scroll Handler - V3
   *
   * Key changes from V2:
   * 1. Spacer height changes INSTANTLY (no CSS transition)
   * 2. Visual changes use transform only (GPU composited)
   * 3. Hysteresis prevents flickering at threshold
   * 4. Single RAF-based handler
   */
  (function() {
    'use strict';

    document.addEventListener('DOMContentLoaded', () => {
      const headerWrapper = document.getElementById('headerWrapper');
      const headerSpacer = document.getElementById('headerSpacer');
      const coralTopBar = document.getElementById('coralTopBar');
      const header = document.getElementById('header');

      if (!headerWrapper || !headerSpacer) return;

      // Scroll thresholds with hysteresis to prevent flickering
      const SCROLL_DOWN_THRESHOLD = 60;  // Trigger scrolled state
      const SCROLL_UP_THRESHOLD = 20;    // Trigger unscrolled state

      // Heights (must match CSS variables)
      const HEIGHT_UNSCROLLED = 120;
      const HEIGHT_SCROLLED = 52;

      let isScrolled = false;
      let ticking = false;

      function updateHeaderState(scrollY) {
        // Hysteresis: different thresholds for scroll up vs down
        const shouldBeScrolled = isScrolled
          ? scrollY > SCROLL_UP_THRESHOLD    // Already scrolled: need to go above threshold to unscroll
          : scrollY > SCROLL_DOWN_THRESHOLD; // Not scrolled: need to pass threshold to scroll

        if (shouldBeScrolled !== isScrolled) {
          isScrolled = shouldBeScrolled;

          if (isScrolled) {
            // Scrolled state
            headerWrapper.classList.add('is-scrolled');
            // INSTANT spacer height change (no CSS transition)
            headerSpacer.style.height = HEIGHT_SCROLLED + 'px';
          } else {
            // Unscrolled state
            headerWrapper.classList.remove('is-scrolled');
            // INSTANT spacer height change
            headerSpacer.style.height = HEIGHT_UNSCROLLED + 'px';
          }
        }
      }

      function onScroll() {
        if (!ticking) {
          requestAnimationFrame(() => {
            updateHeaderState(window.scrollY);
            ticking = false;
          });
          ticking = true;
        }
      }

      // Use passive listener for performance
      window.addEventListener('scroll', onScroll, { passive: true });

      // Initial state
      updateHeaderState(window.scrollY);

      // ========================================
      // SIDEBAR TOGGLE
      // ========================================
      const desktopSidebarToggle = document.getElementById('desktopSidebarToggle');
      const menuSidebar = document.getElementById('menu-sidebar');
      const sidebarOverlay = document.getElementById('sidebarOverlay');

      if (desktopSidebarToggle && menuSidebar) {
        desktopSidebarToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          menuSidebar.classList.add('is-open');
          if (sidebarOverlay) sidebarOverlay.classList.add('is-visible');
          document.body.style.overflow = 'hidden';
        });
      }

      const portoMobileToggle = document.getElementById('portoMobileToggle');
      if (portoMobileToggle && menuSidebar) {
        portoMobileToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          menuSidebar.classList.add('is-open');
          if (sidebarOverlay) sidebarOverlay.classList.add('is-visible');
          document.body.style.overflow = 'hidden';
        });
      }

      // ========================================
      // SEARCH TOGGLE
      // ========================================
      const desktopSearchToggle = document.getElementById('desktopSearchToggle');
      const searchOverlay = document.getElementById('search-overlay');
      const searchInput = document.getElementById('searchInput');

      if (desktopSearchToggle && searchOverlay) {
        desktopSearchToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          searchOverlay.classList.add('is-open');
          document.body.style.overflow = 'hidden';
          setTimeout(() => searchInput?.focus(), 100);
        });
      }

      // ========================================
      // THEME TOGGLE
      // ========================================
      const themeToggle = document.getElementById('portoThemeToggle');

      if (themeToggle) {
        themeToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();

          const html = document.documentElement;
          const body = document.body;
          const currentTheme = html.getAttribute('data-theme') || 'light';
          const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

          html.setAttribute('data-theme', newTheme);
          body.classList.remove('theme-light', 'theme-dark');
          body.classList.add('theme-' + newTheme);
          localStorage.setItem('theme', newTheme);
        });
      }

      // ========================================
      // FLYOUT EDGE DETECTION
      // ========================================
      document.querySelectorAll('.dropdown-submenu').forEach(parent => {
        parent.addEventListener('mouseenter', () => {
          const flyout = parent.querySelector('.dropdown-menu');
          if (!flyout || window.innerWidth < 992) return;

          const rect = flyout.getBoundingClientRect();
          parent.classList.toggle('dropdown-reverse', rect.right > window.innerWidth - 20);
        });
      });

      // ========================================
      // KEYBOARD NAVIGATION
      // ========================================
      const nav = document.getElementById('mainNav');

      if (nav) {
        nav.addEventListener('keydown', (e) => {
          const parent = e.target.closest('li');
          if (!parent) return;

          switch (e.key) {
            case 'Escape':
              document.querySelectorAll('.dropdown.open').forEach(el => el.classList.remove('open'));
              break;
            case 'Enter':
            case ' ':
              if (parent.classList.contains('dropdown')) {
                e.preventDefault();
                parent.classList.toggle('open');
              }
              break;
            case 'ArrowDown':
              e.preventDefault();
              parent.nextElementSibling?.querySelector('a')?.focus();
              break;
            case 'ArrowUp':
              e.preventDefault();
              parent.previousElementSibling?.querySelector('a')?.focus();
              break;
          }
        });
      }
    });
  })();
</script>
