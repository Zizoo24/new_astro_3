  }

  @media (max-width: 1200px) {
    .header-column-logo {
      max-width: 60px;
    }
  }

  /* Ensure nav links stay white on the navy gradient header */
  .header-body .nav-link,
  .header-body .nav-link i {
    color: #ffffff !important;
  }

  .header-body .nav-link:hover,
  .header-body .nav-link:focus,
  .header-body .nav-link.active {
    color: #ffffff !important;
  }

  /* Header Action Buttons (Search & Theme Toggle) */
  .header-column-actions {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-shrink: 0; /* FIX: Never shrink action buttons */
  }

  .header-action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 50%;
    color: #ffffff;
    cursor: pointer;
    pointer-events: auto !important; /* FIX: Ensure clickable */
    position: relative; /* FIX: Establish stacking context */
    z-index: 100; /* FIX: Above other elements */
    transition:
      all 0.2s ease,
      width var(--header-transition-duration) var(--header-transition-easing),
      height var(--header-transition-duration) var(--header-transition-easing);
  }

  .header-action-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .header-action-btn:active {
    transform: scale(0.95);
  }

  .header-action-btn i {
    font-size: 1rem;
    pointer-events: none; /* FIX: Let clicks pass through to button */
    transition: font-size var(--header-transition-duration) var(--header-transition-easing);
  }

  .theme-icon-light {
    display: none;
  }

  [data-theme="dark"] .theme-icon-dark {
    display: none;
  }

  [data-theme="dark"] .theme-icon-light {
    display: block;
  }

  /* Desktop Sidebar Toggle */
  .desktop-sidebar-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border: 0;
    border-radius: 8px;
    color: #ffffff;
    cursor: pointer;
    pointer-events: auto !important; /* FIX: Ensure clickable */
    position: relative;
    z-index: 100;
    transition:
      all 0.2s ease,
      width var(--header-transition-duration) var(--header-transition-easing),
      height var(--header-transition-duration) var(--header-transition-easing);
  }

  .desktop-sidebar-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .desktop-sidebar-toggle:active {
    transform: scale(0.95);
  }

  .desktop-sidebar-toggle i {
    font-size: 1.25rem;
    pointer-events: none;
  }

  .header-column-sidebar {
    flex-shrink: 0;
  }

  /* Mobile Menu Button */
  .header-btn-collapse-nav {
    display: none;
  }

  /* Hide entire Porto header on mobile - use original header-mobile instead */
  @media (max-width: 991px) {
    .site-header {
      display: none !important;
    }
  }

</style>

<script is:inline>
  // Porto Header Desktop Navigation - Optimized for smooth scrolling
  // SCROLL GLITCH FIX: Removed syncSpacerHeight() that caused layout reflow during transitions
  // Now uses CSS-driven heights via sibling selector (.header-wrapper.is-scrolled + .header-spacer)
  (function() {
    'use strict';

    // Throttle function for scroll performance (~60fps)
    function throttle(func, limit) {
      let inThrottle;
      return function(...args) {
        if (!inThrottle) {
          func.apply(this, args);
          inThrottle = true;
          setTimeout(() => inThrottle = false, limit);
        }
      };
    }

    document.addEventListener('DOMContentLoaded', () => {
      // ========================================
      // SCROLL BEHAVIOR - Optimized
      // ========================================
      const coralTopBar = document.getElementById('coralTopBar');
      const header = document.getElementById('header');
      const headerWrapper = document.getElementById('headerWrapper');
      const scrollThreshold = 50;

      // Track last scroll state to avoid unnecessary DOM updates
      let lastScrollState = false;

      // Optimized scroll handler - only updates DOM on state change
      const handleScroll = throttle(() => {
        const isScrolled = window.scrollY > scrollThreshold;

        // Only update DOM if state changed - prevents reflow during transitions
        if (isScrolled !== lastScrollState) {
          lastScrollState = isScrolled;

          if (isScrolled) {
            coralTopBar?.classList.add('hidden');
            header?.classList.add('scrolled');
            headerWrapper?.classList.add('is-scrolled');
          } else {
            coralTopBar?.classList.remove('hidden');
            header?.classList.remove('scrolled');
            headerWrapper?.classList.remove('is-scrolled');
          }
        }
      }, 16); // ~60fps throttle

      window.addEventListener('scroll', handleScroll, { passive: true });

      // Initial state check
      handleScroll();

      // ========================================
      // DESKTOP SIDEBAR TOGGLE
      // ========================================
      const desktopSidebarToggle = document.getElementById('desktopSidebarToggle');
      const menuSidebar = document.getElementById('menu-sidebar');
      const sidebarOverlay = document.getElementById('sidebarOverlay');

      if (desktopSidebarToggle && menuSidebar) {
        desktopSidebarToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          menuSidebar.classList.add('is-open');
          if (sidebarOverlay) sidebarOverlay.classList.add('is-visible');
          document.body.style.overflow = 'hidden';
        });
      }

      // Porto mobile toggle (tablet breakpoint)
      const portoMobileToggle = document.getElementById('portoMobileToggle');
      if (portoMobileToggle && menuSidebar) {
        portoMobileToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          menuSidebar.classList.add('is-open');
          if (sidebarOverlay) sidebarOverlay.classList.add('is-visible');
          document.body.style.overflow = 'hidden';
        });
      }

      // ========================================
      // DESKTOP SEARCH TOGGLE
      // ========================================
      const desktopSearchToggle = document.getElementById('desktopSearchToggle');
      const searchOverlay = document.getElementById('search-overlay');
      const searchInput = document.getElementById('searchInput');

      if (desktopSearchToggle && searchOverlay) {
        desktopSearchToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          searchOverlay.classList.add('is-open');
          document.body.style.overflow = 'hidden';
          setTimeout(() => searchInput?.focus(), 100);
        });
      }

      // ========================================
      // THEME TOGGLE
      // ========================================
      const themeToggle = document.getElementById('portoThemeToggle');

      if (themeToggle) {
        themeToggle.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();

          const html = document.documentElement;
          const body = document.body;
          const currentTheme = html.getAttribute('data-theme') || 'light';
          const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

          html.setAttribute('data-theme', newTheme);
          body.classList.remove('theme-light', 'theme-dark');
          body.classList.add('theme-' + newTheme);
          localStorage.setItem('theme', newTheme);
        });
      }

      // ========================================
      // FLYOUT EDGE DETECTION
      // ========================================
      const flyoutParents = document.querySelectorAll('.dropdown-submenu');

      flyoutParents.forEach(parent => {
        parent.addEventListener('mouseenter', () => {
          const flyout = parent.querySelector('.dropdown-menu');
          if (!flyout || window.innerWidth < 992) return;

          const rect = flyout.getBoundingClientRect();
          if (rect.right > window.innerWidth - 20) {
            parent.classList.add('dropdown-reverse');
          } else {
            parent.classList.remove('dropdown-reverse');
          }
        });
      });

      // ========================================
      // KEYBOARD NAVIGATION
      // ========================================
      const nav = document.getElementById('mainNav');

      if (nav) {
        nav.addEventListener('keydown', (e) => {
          const target = e.target;
          const parent = target.closest('li');
          if (!parent) return;

          switch (e.key) {
            case 'Escape':
              document.querySelectorAll('.dropdown.open').forEach(el => el.classList.remove('open'));
              break;
            case 'Enter':
            case ' ':
              if (parent.classList.contains('dropdown')) {
                e.preventDefault();
                parent.classList.toggle('open');
              }
              break;
            case 'ArrowDown':
              e.preventDefault();
              parent.nextElementSibling?.querySelector('a')?.focus();
              break;
            case 'ArrowUp':
              e.preventDefault();
              parent.previousElementSibling?.querySelector('a')?.focus();
              break;
          }
        });
      }
    });
  })();
</script>
