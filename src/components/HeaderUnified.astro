    background: var(--ot-coral, #FF1654);
    padding: 10px 0;
    font-family: var(--font-secondary, 'Open Sans', sans-serif);
    font-size: 0.8rem;
    font-weight: 500;
    height: var(--coral-bar-height);
    box-sizing: border-box;
    transition: height 0.3s ease, padding 0.3s ease, font-size 0.3s ease;
  }

  /* Hide coral bar when scrolled */
  .coral-top-bar.hidden {
    height: 0;
    padding: 0;
    opacity: 0;
    transform: translateY(-100%);
    pointer-events: none;
    overflow: hidden;
  }

  .coral-top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .coral-top-left {
    display: flex;
    gap: 20px;
  }

  .coral-top-link,
  .coral-top-hours {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 500;
  }

  .coral-top-bar .coral-top-link,
  .coral-top-bar .coral-top-hours,
  .coral-top-bar .coral-top-link:visited {
    color: #ffffff !important;
  }

  .coral-top-link:hover {
    color: #ffffff;
  }

  .coral-top-hours {
    color: rgba(255, 255, 255, 0.85);
  }

  @media (max-width: 991px) {
    .coral-top-bar {
      display: none !important;
    }
  }

  @media (max-width: 1200px) and (min-width: 992px) {
    .coral-top-email {
      display: none;
    }
  }

  /* ====================================
     NAVY HEADER
     ==================================== */
  .site-header {
    width: 100%;
    transition: all 0.3s ease;
  }

  .header-body {
    background: linear-gradient(135deg, var(--ot-header-dark, #0a1628) 0%, var(--ot-header-gradient, #1a365d) 100%);
    transition: all 0.3s ease;
