/**
 * HeaderUnified.astro - Unified Bilingual Header
 *
 * Single component that handles both LTR (English) and RTL (Arabic)
 * CSS handles direction via html[lang="ar"] selectors
 * Same HTML structure for both - no HTML reordering for RTL
 *
 * Replaces: Header-porto.astro and Header-porto-ar.astro
 *
 * @props {string} lang - 'en' | 'ar' (default: 'en')
 * @props {string} currentPath - Current page path for active state
 * @props {boolean} isHomepage - Whether this is the homepage
 */

// Navigation data imports
import { mainNavigation } from '../data/navigation-porto';
import { mainNavigationAr, siteContactAr, uiLabelsAr } from '../data/navigation-ar';
import { siteContact } from '../data/navigation';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang?: 'en' | 'ar';
  currentPath?: string;
  isHomepage?: boolean;
}

const {
  lang = 'en',
  currentPath = Astro.url.pathname,
  isHomepage = false
} = Astro.props;

// Select data based on language
const isArabic = lang === 'ar';
const navigation = isArabic ? mainNavigationAr : mainNavigation;
const contact = isArabic ? siteContactAr : siteContact;

// UI labels
const labels = isArabic ? {
  topBarHours: uiLabelsAr.topBarHours,
  openSidebar: 'فتح القائمة',
  search: 'بحث',
  toggleDark: 'تبديل الوضع المظلم',
  mainNav: 'التنقل الرئيسي',
  viewAll: 'عرض الكل',
  more: 'المزيد'
} : {
  topBarHours: 'Daily: 8:00 AM - 10:00 PM',
  openSidebar: 'Open sidebar menu',
  search: 'Search',
  toggleDark: 'Toggle dark mode',
  mainNav: 'Main navigation',
  viewAll: 'View All',
  more: 'more'
};

// Badge translations
const badgeLabels: Record<string, string> = isArabic ? {
  new: 'جديد',
  express: 'سريع',
  popular: 'شائع',
  hot: 'مميز'
} : {
  new: 'NEW',
  express: 'EXPRESS',
  popular: 'POPULAR',
  hot: 'HOT'
};

// Helper function for active state
function isActive(href: string): boolean {
  if (href === '/' || href === '/ar/') return currentPath === href;
  return currentPath.startsWith(href);
}

// ========================================
// DROPDOWN TRUNCATION
// Limits dropdown items to MAX_DROPDOWN_ITEMS
// Shows "+N more" link when truncated
// ========================================
const MAX_DROPDOWN_ITEMS = 6;

interface DropdownMeta {
  truncated: boolean;
  hiddenCount: number;
  displayCategories: typeof navigation[0]['dropdown']['categories'];
}

const dropdownMeta = new Map<string, DropdownMeta>();

navigation.forEach(item => {
  if (!item.dropdown) return;
  
  let totalItems = 0;
  item.dropdown.categories.forEach(cat => totalItems += cat.items.length);
  
  if (totalItems <= MAX_DROPDOWN_ITEMS) {
    dropdownMeta.set(item.label, { 
      truncated: false, 
      hiddenCount: 0, 
      displayCategories: item.dropdown.categories 
    });
    return;
  }
  
  // Truncate: keep first MAX_DROPDOWN_ITEMS across all categories
  let count = 0;
  const displayCategories: typeof item.dropdown.categories = [];
  
  for (const category of item.dropdown.categories) {
    if (count >= MAX_DROPDOWN_ITEMS) break;
    const remaining = MAX_DROPDOWN_ITEMS - count;
    const truncatedItems = category.items.slice(0, remaining);
    count += truncatedItems.length;
    if (truncatedItems.length > 0) {
      displayCategories.push({ ...category, items: truncatedItems });
    }
  }
  
  dropdownMeta.set(item.label, { 
    truncated: true, 
    hiddenCount: totalItems - count, 
    displayCategories 
  });
});
---

<!-- Fixed Header Wrapper -->
<div class="header-wrapper" id="headerWrapper">
  <!-- Coral Top Bar - Hides on scroll -->
  <div class="coral-top-bar" id="coralTopBar">
    <div class="container">
      <div class="coral-top-content">
        <div class="coral-top-left">
          <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="coral-top-link">
            <i class="fas fa-phone-alt"></i>
            <span dir="ltr">{contact.phoneDisplay}</span>
          </a>
          <a href={`mailto:${contact.email}`} class="coral-top-link coral-top-email">
            <i class="fas fa-envelope"></i>
            <span dir="ltr">{contact.email}</span>
          </a>
        </div>
        <div class="coral-top-right">
          <span class="coral-top-hours">
            <i class="fas fa-clock"></i>
            {labels.topBarHours}
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Sticky Navy Header -->
  <header id="header" class:list={["site-header", { "header-homepage": isHomepage }]}>
    <div class="header-body">
      <!-- Main Header -->
      <div class="header-container container">
        <div class="header-row">
          <!-- Desktop Sidebar Toggle -->
          <div class="header-column header-column-sidebar">
            <button
              id="desktopSidebarToggle"
              class="desktop-sidebar-toggle"
              type="button"
              aria-label={labels.openSidebar}
            >
              <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
          </div>

          <!-- Logo -->
          <div class="header-column header-column-logo">
            <a href={isArabic ? '/ar/' : '/'} class="header-logo">
              <img
                src="/assets/images/logo/brand/emblem-clean.png"
                alt="OnlineTranslation.ae"
                width="45"
                height="45"
                class="logo-emblem"
                loading="eager"
              />
              <div class="logo-text-block">
                <span class="logo-text" dir="ltr">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
                <span class="logo-tagline">{isArabic ? 'ترجمة قانونية معتمدة' : 'Boutique Legal Translation'}</span>
              </div>
            </a>
          </div>

          <!-- Navigation -->
          <div class="header-column header-column-nav">
            <div class="header-nav">
              <div class="header-nav-main header-nav-main-effect-1">
                <nav id="mainNav" aria-label={labels.mainNav}>
                  <ul class="nav nav-pills" role="menubar">
                    {navigation.map((item) => {
                      const meta = item.dropdown ? dropdownMeta.get(item.label) : null;
                      const displayCategories = meta?.displayCategories || item.dropdown?.categories;
                      
                      return (
                      <li
                        class:list={[
                          item.dropdown ? 'dropdown' : '',
                          isActive(item.href) ? 'active' : '',
                          item.isButton ? 'nav-item-button' : ''
                        ]}
                        role="none"
                      >
                        {item.isButton ? (
                          <a
                            href={item.href}
                            class={`btn ${item.buttonClass || 'btn-primary'}`}
                            target={item.href.startsWith('http') ? '_blank' : undefined}
                            rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                          >
                            {item.icon && <i class={item.icon}></i>}
                            <span>{item.label}</span>
                          </a>
                        ) : item.dropdown ? (
                          <>
                            <a
                              href={item.href}
                              class:list={[
                                'nav-link',
                                'dropdown-toggle',
                                isActive(item.href) ? 'active' : ''
                              ]}
                              role="menuitem"
                              aria-haspopup="true"
                              aria-expanded="false"
                            >
                              {item.label}
                              <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                            </a>

                            <ul class="dropdown-menu" role="menu" aria-label={item.dropdown.label}>
                              {displayCategories.map((category) => (
                                <>
                                  {category.header && (
                                    <li class="dropdown-header" role="presentation">
                                      {category.header}
                                    </li>
                                  )}

                                  {category.items.map((subItem) => (
                                    <li
                                      class:list={[
                                        subItem.children ? 'dropdown-submenu' : '',
                                        isActive(subItem.href) ? 'active' : ''
                                      ]}
                                      role="none"
                                    >
                                      <a
                                        href={subItem.href}
                                        class="dropdown-item"
                                        role="menuitem"
                                        aria-haspopup={subItem.children ? 'true' : undefined}
                                      >
                                        {subItem.icon && (
                                          <i class={subItem.icon} aria-hidden="true"></i>
                                        )}
                                        <span>{subItem.label}</span>
                                        {subItem.badge && (
                                          <span class={`badge badge-${subItem.badge}`}>
                                            {badgeLabels[subItem.badge]}
                                          </span>
                                        )}
                                      </a>

                                      {subItem.children && (
                                        <ul class="dropdown-menu" role="menu">
                                          {subItem.children.map((child) => (
                                            <li
                                              class:list={[isActive(child.href) ? 'active' : '']}
                                              role="none"
                                            >
                                              <a
                                                href={child.href}
                                                class="dropdown-item"
                                                role="menuitem"
                                              >
                                                <span>{child.label}</span>
                                                {child.badge && (
                                                  <span class={`badge badge-${child.badge}`}>
                                                    {badgeLabels[child.badge]}
                                                  </span>
                                                )}
                                              </a>
                                            </li>
                                          ))}
                                        </ul>
                                      )}
                                    </li>
                                  ))}
                                </>
                              ))}

                              {/* Truncation indicator: "+N more" link */}
                              {meta?.truncated && (
                                <li class="dropdown-more-item" role="none">
                                  <a
                                    href={item.href}
                                    class="dropdown-more-link"
                                    role="menuitem"
                                  >
                                    <i class="fas fa-ellipsis-h" aria-hidden="true"></i>
                                    <span>+{meta.hiddenCount} {labels.more}</span>
                                  </a>
                                </li>
                              )}

                              {item.dropdown.footerLink && (
                                <li role="none">
                                  <a
                                    href={item.dropdown.footerLink.href}
                                    class="dropdown-footer"
                                    role="menuitem"
                                  >
                                    {item.dropdown.footerLink.label}
                                    <i class="fas fa-long-arrow-alt-right dropdown-footer-arrow" aria-hidden="true"></i>
                                  </a>
                                </li>
                              )}
                            </ul>
                          </>
                        ) : (
                          <a
                            href={item.href}
                            class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                            role="menuitem"
                          >
                            {item.icon && <i class={item.icon}></i>}
                            {item.label}
                          </a>
                        )}
                      </li>
                    )})}
                  </ul>
                </nav>
              </div>

              <!-- Mobile Menu Button -->
              <button
                id="portoMobileToggle"
                class="header-btn-collapse-nav"
                type="button"
                aria-label={labels.openSidebar}
              >
                <i class="fas fa-bars" aria-hidden="true"></i>
              </button>
            </div>
          </div>

          <!-- Globe Language Switcher, Search Toggle & Theme Toggle -->
          <div class="header-column header-column-actions">
            <LanguageSwitcher variant="globe" />
            <button
              id="desktopSearchToggle"
              class="header-action-btn search-toggle"
              type="button"
              aria-label={labels.search}
            >
              <i class="fas fa-search" aria-hidden="true"></i>
            </button>
            <button
              id="portoThemeToggle"
              class="header-action-btn theme-toggle"
              type="button"
              aria-label={labels.toggleDark}
            >
              <i class="fas fa-moon theme-icon-dark" aria-hidden="true"></i>
              <i class="fas fa-sun theme-icon-light" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </header>
</div><!-- /.header-wrapper -->

<!-- Spacer for fixed header -->
<div class="header-spacer"></div>

<style>
  /* ====================================
     UNIFIED HEADER STYLES - LTR + RTL
     ==================================== */

  /* CSS Variables */
  :root {
    --coral-bar-height: 40px;
    --coral-bar-compact: 32px;
    --header-height: 70px;
    --header-compact: 50px;
  }

  /* ====================================
     FIXED HEADER WRAPPER
     ==================================== */
  .header-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1030;
    width: 100%;
    background: transparent;
    will-change: auto;
  }

  /* Spacer accounts for coral bar + header */
  .header-spacer {
    height: calc(var(--coral-bar-height) + var(--header-height));
    background: var(--surface-base, #ffffff);
    transition: height 0.3s ease;
  }

  :global([data-theme="dark"]) .header-spacer,
  :global(body.theme-dark) .header-spacer {
    background: var(--surface-navy, #0a1628);
  }

  @media (max-width: 991px) {
    .header-wrapper {
      display: none !important;
    }
    .header-spacer {
      display: none;
    }
  }

  :global(body.homepage) .header-spacer,
  :global(body.is-homepage) .header-spacer {
    display: none !important;
  }

  /* ====================================
     CORAL TOP BAR - Hides on scroll
     ==================================== */
