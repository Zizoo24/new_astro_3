  }

  .logo-text {
    font-family: var(--font-primary, 'Montserrat', sans-serif);
    font-size: 20px;
    font-weight: 800;
    color: #ffffff;
    letter-spacing: 0.3px;
    transition: font-size 0.3s ease;
    white-space: nowrap;
  }

