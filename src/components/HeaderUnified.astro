    color: #ffffff;
  }

  .badge-popular {
    background: #f59e0b;
    color: #ffffff;
  }

  .badge-hot {
    background: #ef4444;
    color: #ffffff;
  }

  /* "+N more" link - compact indicator */
  .dropdown-more-item {
    border-top: 1px dashed rgba(0, 0, 0, 0.08);
    margin-top: 4px;
  }

  .dropdown-more-link {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    color: var(--ot-teal, #0077b6);
    font-size: 13px;
