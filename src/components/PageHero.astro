---
import Breadcrumb from './Breadcrumb.astro';

interface Props {
  title: string;
  subtitle?: string;
  intro?: string;
  breadcrumbs: Array<{label: string; href?: string}>;
  theme?: 'dark' | 'light';
}

const {
  title,
  subtitle,
  intro,
  breadcrumbs,
  theme = 'dark'
} = Astro.props;

const bgClass = theme === 'dark' ? 'bg-dark' : 'bg-light';

// Transform breadcrumbs to Breadcrumb component format
const breadcrumbItems = breadcrumbs.map(crumb => ({
  name: crumb.label,
  url: crumb.href
}));
---

<section class={`hero-section ${bgClass}`} data-theme={theme}>
  <div class="container">
    <Breadcrumb items={breadcrumbItems} theme={theme} inline={true} />

    <h1>{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    {intro && <p class="hero-intro">{intro}</p>}
  </div>
</section>

<style>
  .hero-section {
    padding: 8rem 0 4rem;
  }

  .hero-section.bg-dark {
    background: var(--primary-color);
    color: #fff;
  }

  .hero-section.bg-light {
    background: var(--bg-light, #f8f9fa);
    color: var(--text-dark, #1a1a1a);
  }

  .bg-dark h1 {
    color: #fff;
  }

  .bg-dark .hero-intro {
    color: rgba(255, 255, 255, 0.9);
  }

  .bg-light h1 {
    color: var(--primary-color);
  }

  .bg-light .hero-intro {
    color: var(--text-muted, #666);
  }

  .hero-section h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--accent-color);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .hero-intro {
    font-size: 1.1rem;
    max-width: 700px;
    line-height: 1.7;
  }
</style>
