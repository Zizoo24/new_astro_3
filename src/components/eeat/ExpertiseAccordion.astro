---
/**
 * ExpertiseAccordion.astro
 * Expandable accordion showing translator expertise areas with document types
 */
interface ExpertiseArea {
  title: string;
  description?: string;
  documents: string[];
  defaultOpen?: boolean;
}

interface Props {
  areas: ExpertiseArea[];
  exclusive?: boolean;
}

const { areas, exclusive = true } = Astro.props;
const accordionName = exclusive ? 'expertise-accordion' : undefined;
---

<div class="expertise-accordion">
  {areas.map((area, index) => (
    <details
      class="expertise-item"
      name={accordionName}
      open={area.defaultOpen || index === 0}
    >
      <summary class="expertise-header">
        <span class="expertise-title">{area.title}</span>
        <span class="expertise-toggle">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 12 15 18 9"/>
          </svg>
        </span>
      </summary>
      <div class="expertise-content">
        {area.description && (
          <p class="expertise-description">{area.description}</p>
        )}
        <ul class="expertise-documents">
          {area.documents.map((doc) => (
            <li>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 11 12 14 22 4"/>
                <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
              </svg>
              {doc}
            </li>
          ))}
        </ul>
      </div>
    </details>
  ))}
</div>

<style>
  .expertise-accordion {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .expertise-item {
    background: #ffffff;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.06);
  }

  .expertise-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    cursor: pointer;
    user-select: none;
    transition: background 0.2s ease;
    list-style: none;
  }

  .expertise-header::-webkit-details-marker {
    display: none;
  }

  .expertise-header:hover {
    background: rgba(0, 0, 0, 0.02);
  }

  .expertise-item[open] .expertise-header {
    background: var(--primary-navy, #0E2B48);
  }

  .expertise-item[open] .expertise-title {
    color: #ffffff;
  }

  .expertise-item[open] .expertise-toggle {
    color: #ffffff;
    transform: rotate(180deg);
  }

  .expertise-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--primary-navy, #0E2B48);
    transition: color 0.2s ease;
  }

  .expertise-toggle {
    color: var(--text-muted, #5a6a7a);
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .expertise-content {
    padding: 1.25rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    background: #fafbfc;
  }

  .expertise-description {
    font-size: 0.95rem;
    color: var(--text-muted, #5a6a7a);
    margin: 0 0 1rem;
    line-height: 1.6;
  }

  .expertise-documents {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .expertise-documents li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-dark, #1a1a1a);
    padding: 0.35rem 0;
  }

  .expertise-documents svg {
    color: var(--accent-coral, #FF1654);
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .expertise-documents {
      grid-template-columns: 1fr;
    }
  }

  /* Dark mode */
  :global(body.theme-dark) .expertise-item {
    background: #21262d;
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global(body.theme-dark) .expertise-header:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  :global(body.theme-dark) .expertise-title {
    color: #e6edf3;
  }

  :global(body.theme-dark) .expertise-content {
    background: #161b22;
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global(body.theme-dark) .expertise-description {
    color: #8b949e;
  }

  :global(body.theme-dark) .expertise-documents li {
    color: #c9d1d9;
  }
</style>
