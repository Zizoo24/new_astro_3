---
interface Props {
  variant?: 'pill' | 'detailed';
  class?: string;
}

const { variant = 'pill', class: className = '' } = Astro.props;
const dulLink = 'https://app.invest.dubai.ae/DUL/1DE9D8AA-768A-4CFC-BC27-A6F23017B858';
---

{variant === 'pill' ? (
  <div class={`dul-badge-wrapper ${className}`}>
    <a
      class="dul-pill"
      href={dulLink}
      target="_blank"
      rel="noopener noreferrer"
    >
      <span class="dul-pill-dot"></span>
      <span class="dul-pill-text">Dubai Unified License â€“ Verified by DET</span>
      <svg class="dul-external-icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
        <polyline points="15 3 21 3 21 9"/>
        <line x1="10" y1="14" x2="21" y2="3"/>
      </svg>
    </a>
  </div>
) : (
  <div class={`dul-badge-detailed ${className}`}>
    <div class="dul-badge-icon">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M9 12l2 2 4-4"/>
        <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9-9 9-9-1.8-9-9 1.8-9 9-9z"/>
      </svg>
    </div>
    <div class="dul-badge-content">
      <span class="dul-badge-label">Licensed Business</span>
      <span class="dul-badge-title">Dubai Unified License</span>
      <span class="dul-badge-subtitle">Verified by Department of Economy & Tourism</span>
    </div>
    <a
      class="dul-badge-link"
      href={dulLink}
      target="_blank"
      rel="noopener noreferrer"
    >
      View License <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
    </a>
  </div>
)}

<style>
  .dul-badge-wrapper {
    margin: 0.75rem 0 1rem;
  }

  .dul-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 1rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: rgba(3, 17, 40, 0.6);
    color: #ffffff;
    font-size: 0.8rem;
    font-weight: 500;
    text-decoration: none;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    transition: all 0.3s ease;
  }

  .dul-pill:hover {
    background: rgba(3, 17, 40, 0.8);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-1px);
  }

  .dul-pill-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 999px;
    background: #22c55e;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.6);
    animation: pulse-dot 2s infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
  }

  .dul-pill-text {
    letter-spacing: 0.02em;
  }

  .dul-external-icon {
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .dul-pill:hover .dul-external-icon {
    opacity: 1;
  }

  @media (max-width: 600px) {
    .dul-pill {
      font-size: 0.75rem;
      padding: 0.5rem 1rem;
      width: 100%;
      justify-content: center;
    }
  }

  /* Detailed variant for About page */
  .dul-badge-detailed {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.08) 0%, rgba(34, 197, 94, 0.02) 100%);
    border: 1px solid rgba(34, 197, 94, 0.25);
    border-radius: 1rem;
    transition: all 0.3s ease;
  }

  .dul-badge-detailed:hover {
    border-color: rgba(34, 197, 94, 0.4);
    box-shadow: 0 4px 20px rgba(34, 197, 94, 0.1);
  }

  .dul-badge-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    border-radius: 0.75rem;
    color: white;
    flex-shrink: 0;
  }

  .dul-badge-content {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    flex: 1;
  }

  .dul-badge-label {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #22c55e;
  }

  .dul-badge-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-dark, #1a1a1a);
  }

  .dul-badge-subtitle {
    font-size: 0.85rem;
    color: var(--text-muted, #5a6a7a);
  }

  .dul-badge-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.5rem 1rem;
    background: #22c55e;
    color: white;
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .dul-badge-link:hover {
    background: #16a34a;
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .dul-badge-detailed {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem 1rem;
    }

    .dul-badge-link {
      width: 100%;
      justify-content: center;
      margin-top: 0.5rem;
    }
  }

  /* Dark mode */
  :global(body.theme-dark) .dul-badge-detailed {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.15) 0%, rgba(34, 197, 94, 0.05) 100%);
    border-color: rgba(34, 197, 94, 0.3);
  }

  :global(body.theme-dark) .dul-badge-title {
    color: #f0f6fc;
  }

  :global(body.theme-dark) .dul-badge-subtitle {
    color: #a8b3c2;
  }
</style>
