---
/**
 * Footer.astro - Site Footer
 * Uses navigation.ts as single source of truth
 */
import { footerNav, socialLinks, siteContact } from '../data/navigation';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <div class="footer-emblem">
          <img src="/images/logo/brand/emblem-256.png" alt="OnlineTranslation.ae" width="80" height="80">
        </div>
        <p>Services Executed by MOJ Certified Partners. Formatted for Dubai Courts, DIFC, ADGM, Federal Entities, and Immigration Services.</p>
        <p class="footer-partnership" style="padding: 12px 24px; border-radius: 50px; background: linear-gradient(135deg, #1a2942 0%, #0e1f35 100%); border: 2px solid #d4af37; box-shadow: 0 2px 8px rgba(212, 175, 55, 0.25); color: #ffffff; display: inline-block; max-width: fit-content; margin: 24px auto; text-align: center;">
          <i class="fas fa-handshake" style="color: #ffd700; margin-right: 8px;"></i> Certified translations fulfilled by <strong><a href="https://arkanlegaltranslation.ae/" target="_blank" rel="noopener" class="partner-link" style="color: #ffd700; text-decoration: none; font-weight: 600;">Arkan Legal Translation</a></strong>
        </p>
        <div class="footer-social">
          {socialLinks.map((social) => (
            <a href={social.url} target="_blank" rel="noopener" aria-label={social.platform}>
              <i class={social.icon}></i>
            </a>
          ))}
        </div>
      </div>
      <div class="footer-links">
        <h4>Quick Links</h4>
        <ul>
          {footerNav.quickLinks.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="footer-services">
        <h4>Our Services</h4>
        <ul>
          {footerNav.services.map((service) => (
            <li><a href={service.href}>{service.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="footer-contact">
        <h4>Contact Us</h4>
        <ul>
          <li>
            <i class="fas fa-map-marker-alt"></i>
            <span>{siteContact.address}</span>
          </li>
          <li>
            <i class="fas fa-phone"></i>
            <a href={`tel:${siteContact.phone}`}>{siteContact.phoneDisplay}</a>
          </li>
          <li>
            <i class="fas fa-envelope"></i>
            <a href={`mailto:${siteContact.email}`}>{siteContact.email}</a>
          </li>
          <li>
            <i class="fas fa-clock"></i>
            <span>{siteContact.hours}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="container">
      <p>&copy; {currentYear} OnlineTranslation.ae. All rights reserved. | 
        {footerNav.legal.map((link, i) => (
          <><a href={link.href}>{link.label}</a>{i < footerNav.legal.length - 1 ? ' | ' : ''}</>
        ))}
      </p>
    </div>
  </div>
</footer>