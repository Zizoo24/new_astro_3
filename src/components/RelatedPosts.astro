---
/**
 * RelatedPosts.astro
 * Placeholder component for related blog posts
 * Currently shows nothing as blog posts are not yet available
 */

interface Props {
  currentSlug?: string;
  category?: string;
  tags?: string[];
  relatedSlugs?: string[];
  maxPosts?: number;
  title?: string;
}

const { title = "Related Articles" } = Astro.props;

// No posts available yet
const relatedPosts: any[] = [];
---

{relatedPosts.length > 0 && (
  <section class="related-posts" aria-labelledby="related-posts-heading">
    <h3 id="related-posts-heading" class="related-posts-title">
      <i class="fas fa-newspaper"></i>
      {title}
    </h3>
    <div class="related-posts-grid">
      <!-- Posts will appear here when available -->
    </div>
  </section>
)}
