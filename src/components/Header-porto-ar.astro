---
/**
 * Header-porto-ar.astro - Arabic Porto-Style Navigation
 * RTL version of Header-porto.astro for Arabic pages
 *
 * Uses navigation-ar.ts for Arabic labels and URLs
 * Includes language switcher to switch back to English
 */

import { mainNavigationAr, siteContactAr, uiLabelsAr } from '../data/navigation-ar';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  currentPath?: string;
  isHomepage?: boolean;
}

const { currentPath = Astro.url.pathname, isHomepage = false } = Astro.props;

// Check if current path matches or is child of a nav item
function isActive(href: string): boolean {
  if (href === '/ar/' || href === '/ar') return currentPath === '/ar/' || currentPath === '/ar';
  return currentPath.startsWith(href);
}
---

<!-- Fixed Header Wrapper - RTL -->
<div class="header-wrapper" id="headerWrapper" dir="rtl">
  <!-- Coral Top Bar - Disappears on scroll -->
  <div class="coral-top-bar" id="coralTopBar">
    <div class="container">
      <div class="coral-top-content">
        <div class="coral-top-left">
          <a href={`tel:${siteContactAr.phone.replace(/\s/g, '')}`} class="coral-top-link">
            <i class="fas fa-phone-alt"></i>
            <span dir="ltr">{siteContactAr.phoneDisplay}</span>
          </a>
          <a href={`mailto:${siteContactAr.email}`} class="coral-top-link coral-top-email">
            <i class="fas fa-envelope"></i>
            <span dir="ltr">{siteContactAr.email}</span>
          </a>
        </div>
        <div class="coral-top-right">
          <span class="coral-top-hours">
            <i class="fas fa-clock"></i>
            {uiLabelsAr.topBarHours}
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Sticky Navy Header -->
  <header id="header" class:list={["site-header", { "header-homepage": isHomepage }]}>
  <div class="header-body">
    <!-- Main Header -->
    <div class="header-container container">
      <div class="header-row header-row-rtl">
        <!-- Language Switcher, Search Toggle & Theme Toggle - RTL: on left -->
        <div class="header-column header-column-actions">
          <button
            id="portoThemeToggle"
            class="header-action-btn theme-toggle"
            type="button"
            aria-label={uiLabelsAr.toggleTheme}
          >
            <i class="fas fa-moon theme-icon-dark" aria-hidden="true"></i>
            <i class="fas fa-sun theme-icon-light" aria-hidden="true"></i>
          </button>
          <button
            id="desktopSearchToggle"
            class="header-action-btn search-toggle"
            type="button"
            aria-label={uiLabelsAr.search}
          >
            <i class="fas fa-search" aria-hidden="true"></i>
          </button>
          <LanguageSwitcher variant="pill" size="sm" />
        </div>

        <!-- Navigation - RTL -->
        <div class="header-column header-column-nav">
          <div class="header-nav">
            <div class="header-nav-main header-nav-main-effect-1">
              <nav id="mainNav" aria-label="التنقل الرئيسي">
                <ul class="nav nav-pills" role="menubar">
                  {mainNavigationAr.map((item) => (
                    <li
                      class:list={[
                        item.dropdown ? 'dropdown' : '',
                        isActive(item.href) ? 'active' : '',
                        item.isButton ? 'nav-item-button' : ''
                      ]}
                      role="none"
                    >
                      {item.isButton ? (
                        <a
                          href={item.href}
                          class={`btn ${item.buttonClass || 'btn-primary'}`}
                          target={item.href.startsWith('http') ? '_blank' : undefined}
                          rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                        >
                          {item.icon && <i class={item.icon}></i>}
                          <span>{item.label}</span>
                        </a>
                      ) : item.dropdown ? (
                        <>
                          <a
                            href={item.href}
                            class:list={[
                              'nav-link',
                              'dropdown-toggle',
                              isActive(item.href) ? 'active' : ''
                            ]}
                            role="menuitem"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            {item.label}
                            <i class="fas fa-chevron-down nav-chevron" aria-hidden="true"></i>
                          </a>

                          <ul class="dropdown-menu dropdown-menu-rtl" role="menu" aria-label={item.dropdown.label}>
                            {item.dropdown.categories.map((category) => (
                              <>
                                {category.header && (
                                  <li class="dropdown-header" role="presentation">
                                    {category.header}
                                  </li>
                                )}

                                {category.items.map((subItem) => (
                                  <li
                                    class:list={[
                                      subItem.children ? 'dropdown-submenu dropdown-submenu-rtl' : '',
                                      isActive(subItem.href) ? 'active' : ''
                                    ]}
                                    role="none"
                                  >
                                    <a
                                      href={subItem.href}
                                      class="dropdown-item"
                                      role="menuitem"
                                      aria-haspopup={subItem.children ? 'true' : undefined}
                                    >
                                      {subItem.icon && (
                                        <i class={subItem.icon} aria-hidden="true"></i>
                                      )}
                                      <span>{subItem.label}</span>
                                      {subItem.badge && (
                                        <span class={`badge badge-${subItem.badge}`}>
                                          {subItem.badge === 'new' ? uiLabelsAr.badgeNew :
                                           subItem.badge === 'popular' ? uiLabelsAr.badgePopular :
                                           subItem.badge === 'hot' ? uiLabelsAr.badgeHot :
                                           subItem.badge === 'express' ? uiLabelsAr.badgeExpress :
                                           subItem.badge.toUpperCase()}
                                        </span>
                                      )}
                                    </a>

                                    {subItem.children && (
                                      <ul class="dropdown-menu dropdown-menu-rtl" role="menu">
                                        {subItem.children.map((child) => (
                                          <li
                                            class:list={[isActive(child.href) ? 'active' : '']}
                                            role="none"
                                          >
                                            <a
                                              href={child.href}
                                              class="dropdown-item"
                                              role="menuitem"
                                            >
                                              <span>{child.label}</span>
                                              {child.badge && (
                                                <span class={`badge badge-${child.badge}`}>
                                                  {child.badge === 'new' ? uiLabelsAr.badgeNew :
                                                   child.badge === 'popular' ? uiLabelsAr.badgePopular :
                                                   child.badge.toUpperCase()}
                                                </span>
                                              )}
                                            </a>
                                          </li>
                                        ))}
                                      </ul>
                                    )}
                                  </li>
                                ))}
                              </>
                            ))}

                            {item.dropdown.footerLink && (
                              <li role="none">
                                <a
                                  href={item.dropdown.footerLink.href}
                                  class="dropdown-footer"
                                  role="menuitem"
                                >
                                  {item.dropdown.footerLink.label}
                                  <i class="fas fa-arrow-left" aria-hidden="true"></i>
                                </a>
                              </li>
                            )}
                          </ul>
                        </>
                      ) : (
                        <a
                          href={item.href}
                          class:list={['nav-link', isActive(item.href) ? 'active' : '']}
                          role="menuitem"
                        >
                          {item.icon && <i class={item.icon}></i>}
                          {item.label}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </nav>
            </div>

            <!-- Mobile Menu Button -->
            <button
              id="portoMobileToggle"
              class="header-btn-collapse-nav"
              type="button"
              aria-label={uiLabelsAr.openMenu}
            >
              <i class="fas fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        <!-- Logo - RTL: on right -->
        <div class="header-column header-column-logo">
          <a href="/ar/" class="header-logo">
            <div class="logo-text-block">
              <span class="logo-text">Online<span class="logo-suffix">Translation</span><span class="logo-domain">.ae</span></span>
              <span class="logo-tagline">ترجمة قانونية معتمدة</span>
            </div>
            <img
              src="/assets/images/logo/brand/emblem-clean.png"
              alt="OnlineTranslation.ae"
              width="45"
              height="45"
              class="logo-emblem"
              loading="eager"
            />
          </a>
        </div>

        <!-- Desktop Sidebar Toggle - RTL: on far right -->
        <div class="header-column header-column-sidebar">
          <button
            id="desktopSidebarToggle"
            class="desktop-sidebar-toggle"
            type="button"
            aria-label={uiLabelsAr.openMenu}
          >
            <i class="fas fa-bars" aria-hidden="true"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
</div><!-- /.header-wrapper -->

<!-- Spacer for fixed header -->
<div class="header-spacer"></div>

<style>
  /* RTL Header Row - Reverse order */
  .header-row-rtl {
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    align-items: center;
    gap: 12px;
    width: 100%;
    direction: rtl;
  }

  /* RTL Logo - Reverse flex direction */
  .header-row-rtl .header-logo {
    flex-direction: row-reverse;
  }

  /* RTL Actions - Reverse order */
  .header-row-rtl .header-column-actions {
    flex-direction: row-reverse;
  }

  /* RTL Nav - Reverse order */
  .header-row-rtl .nav.nav-pills {
    flex-direction: row-reverse;
  }

  /* RTL Dropdown positioning */
  .dropdown-menu-rtl {
    left: auto;
    right: 0;
    text-align: right;
  }

  /* RTL Flyout submenus - open to left */
  .dropdown-submenu-rtl > .dropdown-menu {
    left: auto;
    right: 100%;
    margin-left: 0;
    margin-right: 2px;
  }

  /* RTL Dropdown footer arrow */
  .dropdown-menu-rtl .dropdown-footer i {
    margin-left: 0;
    margin-right: 8px;
  }

  /* RTL Dropdown item icons */
  .dropdown-menu-rtl .dropdown-item i {
    margin-left: 8px;
    margin-right: 0;
  }

  /* RTL Badge positioning */
  .dropdown-menu-rtl .badge {
    margin-left: 0;
    margin-right: auto;
  }

  /* RTL Tagline */
  .header-row-rtl .logo-tagline {
    font-family: 'Noto Sans Arabic', var(--font-secondary, 'Open Sans'), sans-serif;
    letter-spacing: 0;
  }

  /* Hide on mobile */
  @media (max-width: 991px) {
    .header-wrapper {
      display: none !important;
    }
    .header-spacer {
      display: none;
    }
  }

  /* Homepage: hide spacer */
  body.homepage .header-spacer,
  body.is-homepage .header-spacer {
    display: none !important;
  }
</style>

<script is:inline>
  // Porto Header Desktop Navigation - RTL version
  document.addEventListener('DOMContentLoaded', () => {
    const coralTopBar = document.getElementById('coralTopBar');
    const header = document.getElementById('header');
    const headerWrapper = document.getElementById('headerWrapper');
    const scrollThreshold = 50;

    function handleScrollBehavior() {
      const currentScrollY = window.scrollY;

      if (currentScrollY > scrollThreshold) {
        coralTopBar?.classList.add('hidden');
        header?.classList.add('scrolled');
        headerWrapper?.classList.add('is-scrolled');
      } else {
        coralTopBar?.classList.remove('hidden');
        header?.classList.remove('scrolled');
        headerWrapper?.classList.remove('is-scrolled');
      }
    }

    window.addEventListener('scroll', handleScrollBehavior, { passive: true });
    handleScrollBehavior();

    // Desktop Sidebar Toggle
    const desktopSidebarToggle = document.getElementById('desktopSidebarToggle');
    if (desktopSidebarToggle) {
      desktopSidebarToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const menuSidebar = document.getElementById('menu-sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        if (menuSidebar) {
          menuSidebar.classList.add('is-open');
        }
        if (sidebarOverlay) {
          sidebarOverlay.classList.add('is-visible');
        }
        document.body.style.overflow = 'hidden';
      });
    }

    // Mobile toggle
    const portoMobileToggle = document.getElementById('portoMobileToggle');
    if (portoMobileToggle) {
      portoMobileToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const menuSidebar = document.getElementById('menu-sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        if (menuSidebar) {
          menuSidebar.classList.add('is-open');
        }
        if (sidebarOverlay) {
          sidebarOverlay.classList.add('is-visible');
        }
        document.body.style.overflow = 'hidden';
      });
    }

    // Search Toggle
    const desktopSearchToggle = document.getElementById('desktopSearchToggle');
    if (desktopSearchToggle) {
      desktopSearchToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const searchOverlay = document.getElementById('search-overlay');
        const searchInput = document.getElementById('searchInput');

        if (searchOverlay) {
          searchOverlay.classList.add('is-open');
          document.body.style.overflow = 'hidden';
          setTimeout(() => {
            if (searchInput) searchInput.focus();
          }, 100);
        }
      });
    }

    // Theme Toggle
    const themeToggle = document.getElementById('portoThemeToggle');
    if (themeToggle) {
      themeToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        const html = document.documentElement;
        const body = document.body;
        const currentTheme = html.getAttribute('data-theme') || 'light';
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        html.setAttribute('data-theme', newTheme);
        body.classList.remove('theme-light', 'theme-dark');
        body.classList.add('theme-' + newTheme);
        localStorage.setItem('theme', newTheme);
      });
    }

    // Flyout Edge Detection for RTL
    const flyoutParents = document.querySelectorAll('.dropdown-submenu-rtl');
    flyoutParents.forEach(parent => {
      parent.addEventListener('mouseenter', () => {
        const flyout = parent.querySelector('.dropdown-menu');
        if (!flyout || window.innerWidth < 992) return;

        const rect = flyout.getBoundingClientRect();
        
        // RTL: check left edge instead of right
        if (rect.left < 20) {
          parent.classList.add('dropdown-reverse');
        } else {
          parent.classList.remove('dropdown-reverse');
        }
      });
    });
  });
</script>
