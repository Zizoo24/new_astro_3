---
interface Props {
  class?: string;
  title?: string;
}

const { class: className = '', title = 'Translations formatted for acceptance by:' } = Astro.props;

const authorities = [
  { name: 'Government of Dubai', logo: '/images/logos/moj.png', alt: 'Government of Dubai' },
  { name: 'Dubai Courts', logo: '/images/logos/dubai-courts.png', alt: 'Dubai Courts' },
  { name: 'Dubai Police', logo: '/images/logos/dubai-police.png', alt: 'Dubai Police' },
  { name: 'Dubai Land Department', logo: '/images/logos/dld.png', alt: 'Dubai Land Department' },
  { name: 'MOFAIC', logo: '/images/logos/mofaic.png', alt: 'UAE Ministry of Foreign Affairs' },
];
---

<section class={`authority-strip ${className}`}>
  <p class="authority-strip-title">{title}</p>
  <div class="authority-carousel">
    <ul class="authority-logos">
      {authorities.map((auth) => (
        <li>
          <img src={auth.logo} alt={auth.alt} loading="lazy" />
          <span class="authority-name">{auth.name}</span>
        </li>
      ))}
      {authorities.map((auth) => (
        <li aria-hidden="true">
          <img src={auth.logo} alt="" loading="lazy" />
          <span class="authority-name">{auth.name}</span>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .authority-strip {
    margin: 2rem 0;
    padding: 1.5rem 0;
    border-radius: 1rem;
    background: transparent;
    overflow: hidden;
  }

  .authority-strip-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.25rem;
    color: #6B7280;
    text-align: center;
    padding: 0 1.5rem;
  }

  .authority-carousel {
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
  }

  .authority-logos {
    display: flex;
    gap: 3rem;
    align-items: center;
    list-style: none;
    padding: 0.5rem 0;
    margin: 0;
    width: max-content;
    animation: scrollLogos 30s linear infinite;
  }

  .authority-carousel:hover .authority-logos {
    animation-play-state: paused;
  }

  @keyframes scrollLogos {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-50% - 1.5rem));
    }
  }

  .authority-logos li {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    flex-shrink: 0;
    padding: 8px 16px;
    border-radius: 10px;
  }

  /* Light mode - transparent, blend mode for clean look */
  .authority-logos li img {
    height: 55px;
    max-width: 140px;
    width: auto;
    object-fit: contain;
    transition: all 0.3s ease;
    mix-blend-mode: multiply;
  }

  .authority-logos li:hover img {
    transform: translateY(-2px) scale(1.05);
    opacity: 0.85;
  }

  .authority-name {
    font-size: 0.7rem;
    font-weight: 600;
    color: #6B7280;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .authority-logos li:hover .authority-name {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .authority-strip {
      padding: 1.25rem 0;
      margin: 1.5rem 0;
    }

    .authority-logos {
      gap: 2rem;
      animation-duration: 25s;
    }

    .authority-logos li img {
      height: 45px;
      max-width: 100px;
    }

    .authority-name {
      font-size: 0.6rem;
      opacity: 1;
    }
  }

  /* Dark mode - white background pill behind each logo */
  :global(body.theme-dark) .authority-strip {
    background: transparent;
  }

  :global(body.theme-dark) .authority-strip-title {
    color: rgba(255, 255, 255, 0.6);
  }

  :global(body.theme-dark) .authority-logos li {
    background: #ffffff;
    padding: 12px 18px;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  :global(body.theme-dark) .authority-logos li:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
  }

  :global(body.theme-dark) .authority-logos li img {
    mix-blend-mode: normal;
    filter: none;
  }

  :global(body.theme-dark) .authority-logos li:hover img {
    opacity: 1;
    filter: none;
  }

  :global(body.theme-dark) .authority-name {
    color: #374151;
  }

  /* [data-theme] for SSR */
  :global([data-theme="dark"]) .authority-strip {
    background: transparent;
  }

  :global([data-theme="dark"]) .authority-strip-title {
    color: rgba(255, 255, 255, 0.6);
  }

  :global([data-theme="dark"]) .authority-logos li {
    background: #ffffff;
    padding: 12px 18px;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  :global([data-theme="dark"]) .authority-logos li img {
    mix-blend-mode: normal;
    filter: none;
  }

  :global([data-theme="dark"]) .authority-name {
    color: #374151;
  }
</style>
