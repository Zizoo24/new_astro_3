---
import HeaderPorto from '../components/Header-porto.astro';
import Footer from '../components/Footer.astro';
import MobileShell from '../components/MobileShell.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  isHomepage?: boolean;
}

const {
  title,
  description,
  canonical = Astro.url.pathname,
  ogImage = '/assets/images/og-image.jpg',
  isHomepage = false
} = Astro.props;

// Use Astro.site from config for consistent URL handling
const siteUrl = Astro.site?.origin || 'https://onlinetranslation.ae';
const fullCanonical = canonical.startsWith('http') ? canonical : `${siteUrl}${canonical}`;
const englishEquivalent = fullCanonical.replace('/ar/', '/').replace('/ar', '/');
---

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=5, viewport-fit=cover">

  <!-- Theme initialization only - no hiding -->
  <script is:inline>
    (function() {
      var theme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', theme);
      document.documentElement.classList.add('theme-' + theme);
    })();
  </script>

  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="OnlineTranslation.ae">
  <meta name="robots" content="index, follow">
  <meta name="googlebot" content="index, follow">
  <link rel="canonical" href={fullCanonical}>

  <!-- Hreflang tags for internationalization -->
  <link rel="alternate" hreflang="ar" href={fullCanonical} />
  <link rel="alternate" hreflang="en-AE" href={englishEquivalent} />
  <link rel="alternate" hreflang="x-default" href={englishEquivalent} />

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={fullCanonical}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={`${siteUrl}${ogImage}`}>
  <meta property="og:locale" content="ar_AE">
  <meta property="og:site_name" content="OnlineTranslation.ae">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={fullCanonical}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": `${siteUrl}/#organization`,
    "name": "OnlineTranslation.ae",
    "alternateName": "ترجمة أونلاين الإمارات",
    "description": "خدمات الترجمة القانونية المعتمدة من وزارة العدل في دبي. ترجمة احترافية للمحاكم والهجرة والوثائق التجارية.",
    "url": siteUrl,
    "logo": `${siteUrl}/assets/images/logo/brand/emblem-256.png`,
    "image": `${siteUrl}/assets/images/og-image.jpg`,
    "telephone": "+971508620217",
    "email": "info@onlinetranslation.ae",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "أم الشيف",
      "addressLocality": "دبي",
      "addressRegion": "دبي",
      "postalCode": "",
      "addressCountry": "AE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 25.1124,
      "longitude": 55.1880
    },
    "openingHoursSpecification": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
      "opens": "08:00",
      "closes": "22:00"
    },
    "priceRange": "$$",
    "currenciesAccepted": "AED, USD",
    "paymentAccepted": "نقداً، بطاقة ائتمان، تحويل بنكي",
    "areaServed": [
      { "@type": "City", "name": "Dubai" },
      { "@type": "City", "name": "Abu Dhabi" },
      { "@type": "City", "name": "Sharjah" },
      { "@type": "Country", "name": "UAE" }
    ],
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "5.0",
      "bestRating": "5",
      "worstRating": "1",
      "ratingCount": "8",
      "reviewCount": "8"
    },
    "review": [
      {
        "@type": "Review",
        "author": { "@type": "Person", "name": "Legal Translator" },
        "datePublished": "2025-11-14",
        "reviewRating": { "@type": "Rating", "ratingValue": "5" },
        "reviewBody": "Highly recommended, trusted and reliable translation firm."
      },
      {
        "@type": "Review",
        "author": { "@type": "Person", "name": "Ali Pourtaheri" },
        "datePublished": "2025-10-08",
        "reviewRating": { "@type": "Rating", "ratingValue": "5" },
        "reviewBody": "Professional and fast service. Excellent quality translations."
      },
      {
        "@type": "Review",
        "author": { "@type": "Person", "name": "Ahmed Khalaf" },
        "datePublished": "2025-09-15",
        "reviewRating": { "@type": "Rating", "ratingValue": "5" },
        "reviewBody": "Outstanding legal translation service. Documents accepted without issues."
      },
      {
        "@type": "Review",
        "author": { "@type": "Person", "name": "Sara Mohamed" },
        "datePublished": "2025-08-22",
        "reviewRating": { "@type": "Rating", "ratingValue": "5" },
        "reviewBody": "Very efficient service. Got my documents translated same day."
      }
    ],
    "contactPoint": [
      {
        "@type": "ContactPoint",
        "telephone": "+971508620217",
        "contactType": "customer service",
        "availableLanguage": ["English", "Arabic"],
        "contactOption": "TollFree",
        "areaServed": "AE"
      },
      {
        "@type": "ContactPoint",
        "telephone": "+971508620217",
        "contactType": "sales",
        "availableLanguage": ["English", "Arabic"],
        "areaServed": "AE"
      }
    ],
    "sameAs": [
      "https://wa.me/971508620217",
      "https://facebook.com/onlinetranslationae",
      "https://instagram.com/onlinetranslationae",
      "https://linkedin.com/company/onlinetranslationae"
    ]
  })} />

  <!-- Theme -->
  <meta name="theme-color" content="#0E2B48">
  <meta name="format-detection" content="telephone=yes">
  <link rel="manifest" href="/manifest.webmanifest">
  <link rel="sitemap" href="/sitemap-index.xml">

  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="64x64" href="/assets/images/icons/favicon-64.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/icons/favicon-32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/icons/favicon-16.png">
  <link rel="apple-touch-icon" href="/assets/images/onedrive/emblem.png">

  <!-- Fonts - Including Arabic -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;500;600;700;800&family=Montserrat:wght@400;500;600;700;800&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" crossorigin="anonymous">

  <!-- CSS -->
  <link rel="stylesheet" href="/styles/base-architecture.css">
  <link rel="stylesheet" href="/styles/porto-desktop.css">
  <link rel="stylesheet" href="/styles/services-enhanced.css">
  <link rel="stylesheet" href="/styles/document-pages.css">
  <link rel="stylesheet" href="/styles/visibility-fixes.css">
  <link rel="stylesheet" href="/styles/subsection-menu.css">
  <link rel="stylesheet" href="/styles/megamenu.css">
  <link rel="stylesheet" href="/styles/porto-dropdown-onlinetranslation.css">
  <link rel="stylesheet" href="/styles/navigation-glassmorphism.css">
  <link rel="stylesheet" href="/styles/sticky-mobile.css">
  <link rel="stylesheet" href="/styles/mobile-action-bar.css">
  <link rel="stylesheet" href="/styles/mobile-ios.css">
  <link rel="stylesheet" href="/styles/mobile-android.css">
  <link rel="stylesheet" href="/styles/desktop-macos.css">
  <link rel="stylesheet" href="/styles/hero-enhancements.css">
  <link rel="stylesheet" href="/styles/footer-redesign.css">
  <link rel="stylesheet" href="/styles/trust-bar.css">
  <link rel="stylesheet" href="/styles/visual-relief.css">
  <link rel="stylesheet" href="/styles/contrast-fixes.css">
  <link rel="stylesheet" href="/styles/dark-mode-tokenized.css">
  <link rel="stylesheet" href="/styles/rtl.css">
  <link rel="stylesheet" href="/styles/print.css">

  <slot name="head" />
</head>
<body class={`rtl-page ${isHomepage ? 'homepage' : ''}`}>

  <a href="#main-content" class="skip-link">تخطي إلى المحتوى الرئيسي</a>

  <HeaderPorto isHomepage={isHomepage} />

  <main id="main-content">
    <slot />
  </main>

  <Footer />

  <MobileShell />

  <!-- Scripts -->
  <script is:inline src="/scripts/os-detect.js"></script>
  <script defer src="/scripts/preferences.js"></script>
  <script defer src="/scripts/analytics.js"></script>
  <script defer src="/scripts/main-v2.js"></script>
  <script defer src="/scripts/navigation-v2.js"></script>
  <script defer src="/scripts/subsection-menu.js"></script>
  <script defer src="/scripts/search-index.js"></script>
  <script defer src="/scripts/form-handler.js"></script>
  <script defer src="/scripts/testimonials-carousel.js"></script>

</body>
</html>
