---
import HeaderPorto from '../components/Header-porto.astro';
import Footer from '../components/Footer.astro';
import MobileShell from '../components/MobileShell.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  isHomepage?: boolean;
  canonicalOverride?: string;
}

const {
  title,
  description,
  canonical = Astro.url.pathname,
  ogImage = '/assets/images/og-image.jpg',
  isHomepage = false,
  canonicalOverride
} = Astro.props;

// Use Astro.site from config for consistent URL handling
const siteUrl = Astro.site?.origin || 'https://onlinetranslation.ae';
const fullCanonical = canonicalOverride || (canonical.startsWith('http') ? canonical : `${siteUrl}${canonical}`);
// Map Arabic URLs to English equivalents
const englishEquivalent = fullCanonical
  .replace('/عربي/', '/')
  .replace('/عربي', '/')
  .replace('/ar/', '/')
  .replace('/ar', '/');
---

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <!-- Google Tag Manager -->
  <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-N7L2H37W');</script>
  <!-- End Google Tag Manager -->

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=5, viewport-fit=cover">

  <!-- Theme initialization only - no hiding -->
  <script is:inline>
    (function() {
      var theme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', theme);
      document.documentElement.classList.add('theme-' + theme);
    })();
  </script>

  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="OnlineTranslation.ae">
  <meta name="robots" content="index, follow">
  <meta name="googlebot" content="index, follow">
  <link rel="canonical" href={fullCanonical}>

  <!-- Hreflang tags for internationalization -->
  <link rel="alternate" hreflang="ar" href={fullCanonical} />
  <link rel="alternate" hreflang="en-AE" href={englishEquivalent} />
  <link rel="alternate" hreflang="x-default" href={englishEquivalent} />

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={fullCanonical}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={`${siteUrl}${ogImage}`}>
  <meta property="og:locale" content="ar_AE">
  <meta property="og:site_name" content="OnlineTranslation.ae">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={fullCanonical}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>

  <!-- JSON-LD Structured Data (Optimized for text-to-HTML ratio) -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": `${siteUrl}/#organization`,
    "name": "OnlineTranslation.ae",
    "description": "خدمات الترجمة القانونية المعتمدة من وزارة العدل في دبي",
    "url": siteUrl,
    "logo": `${siteUrl}/assets/images/logo/brand/emblem-256.png`,
    "telephone": "+971508620217",
    "email": "info@onlinetranslation.ae",
    "address": {"@type": "PostalAddress", "addressLocality": "دبي", "addressCountry": "AE"},
    "geo": {"@type": "GeoCoordinates", "latitude": 25.1124, "longitude": 55.1880},
    "openingHours": "Mo-Su 08:00-22:00",
    "priceRange": "$$",
    "aggregateRating": {"@type": "AggregateRating", "ratingValue": 5.0, "ratingCount": 15}
  })} />

  <!-- Theme -->
  <meta name="theme-color" content="#0E2B48">
  <meta name="format-detection" content="telephone=yes">
  <link rel="manifest" href="/manifest.webmanifest">
  <link rel="sitemap" href="/sitemap-0.xml">

  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="64x64" href="/assets/images/icons/favicon-64.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/icons/favicon-32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/icons/favicon-16.png">
  <link rel="apple-touch-icon" href="/assets/images/onedrive/emblem.png">

  <!-- Fonts - Including Arabic -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;500;600;700;800&family=Montserrat:wght@400;500;600;700;800&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Font Awesome - load async -->
  <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin="anonymous">
  <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" crossorigin="anonymous"></noscript>

  <!-- CSS - Consolidated for improved text-to-HTML ratio -->
  <link rel="preload" href="/styles/base-architecture.css" as="style">
  <link rel="stylesheet" href="/styles/base-architecture.css">
  <link rel="stylesheet" href="/styles/porto-desktop.css">
  <link rel="stylesheet" href="/styles/services-enhanced.css">
  <link rel="stylesheet" href="/styles/document-pages.css">
  <link rel="stylesheet" href="/styles/visibility-fixes.css">
  <link rel="stylesheet" href="/styles/hero-enhancements.css">

  <!-- NAVIGATION (desktop-only) -->
  <link rel="stylesheet" href="/styles/subsection-menu.css" media="(min-width: 992px)">
  <link rel="stylesheet" href="/styles/megamenu.css" media="(min-width: 992px)">
  <link rel="stylesheet" href="/styles/porto-dropdown-onlinetranslation.css" media="(min-width: 992px)">
  <link rel="stylesheet" href="/styles/navigation-glassmorphism.css" media="(min-width: 992px)">
  <link rel="stylesheet" href="/styles/desktop-macos.css" media="(min-width: 992px)">

  <!-- MOBILE + SHARED OVERLAYS -->
  <!-- sticky-mobile.css loads always - contains sidebar/search overlay styles needed on desktop too -->
  <link rel="stylesheet" href="/styles/sticky-mobile.css">
  <link rel="stylesheet" href="/styles/mobile-action-bar.css" media="(max-width: 991px)">
  <link rel="stylesheet" href="/styles/mobile-ios.css" media="(max-width: 991px)">
  <link rel="stylesheet" href="/styles/mobile-android.css" media="(max-width: 991px)">

  <!-- COMPONENTS & POLISH -->
  <link rel="stylesheet" href="/styles/footer-redesign.css">
  <link rel="stylesheet" href="/styles/trust-bar.css">
  <link rel="stylesheet" href="/styles/visual-relief.css">
  <link rel="stylesheet" href="/styles/contrast-fixes.css">
  <link rel="stylesheet" href="/styles/dark-mode-tokenized.css">
  <link rel="stylesheet" href="/styles/rtl.css">
  <link rel="stylesheet" href="/styles/print.css" media="print">

  <slot name="head" />
</head>
<body class={`rtl-page ${isHomepage ? 'homepage' : ''}`}>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N7L2H37W"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->

  <a href="#main-content" class="skip-link">تخطي إلى المحتوى الرئيسي</a>

  <HeaderPorto isHomepage={isHomepage} />

  <main id="main-content">
    <slot />
  </main>

  <Footer />

  <MobileShell />

  <!-- Scripts -->
  <script is:inline src="/scripts/os-detect.js"></script>
  <script defer src="/scripts/preferences.js"></script>
  <script defer src="/scripts/analytics.js"></script>
  <script defer src="/scripts/main-v2.js"></script>
  <script defer src="/scripts/navigation-v2.js"></script>
  <script defer src="/scripts/subsection-menu.js"></script>
  <!-- Search powered by Pagefind -->
  <script defer src="/scripts/form-handler.js"></script>
  <script defer src="/scripts/testimonials-carousel.js"></script>

  <!-- Chatbase Chat Widget - Desktop Only -->
  <script is:inline>
    (function() {
      // Only load on desktop (992px+ matches the site's desktop breakpoint)
      if (window.innerWidth >= 992) {
        (function(){if(!window.chatbase||window.chatbase("getState")!=="initialized"){window.chatbase=(...args)=>{if(!window.chatbase.q){window.chatbase.q=[]}window.chatbase.q.push(args)};window.chatbase=new Proxy(window.chatbase,{get(target,prop){if(prop==="q"){return target.q}return(...a)=>target(prop,...a)}})}const onLoad=function(){const script=document.createElement("script");script.src="https://www.chatbase.co/embed.min.js";script.id="XHyFbKkbLOseA1xEcMAm6";script.domain="www.chatbase.co";document.body.appendChild(script)};if(document.readyState==="complete"){onLoad()}else{window.addEventListener("load",onLoad)}})();
      }
    })();
  </script>

  <!-- ClickRank AI SEO -->
  <script is:inline>
    var clickRankAi = document.createElement("script");
    clickRankAi.src = "https://js.clickrank.ai/seo/2b65fd43-0b12-4d06-b92f-6cfa7699d947/script?" + new Date().getTime();
    clickRankAi.async = true;
    document.head.appendChild(clickRankAi);
  </script>

</body>
</html>
