---
import HeaderUnified from '../components/HeaderUnified.astro';
import Footer from '../components/Footer.astro';
import MobileShell from '../components/MobileShell.astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title: string;
  description: string;
  lang: string;
  dir?: 'ltr' | 'rtl';
  canonical?: string;
  ogImage?: string;
  isHomepage?: boolean;
  canonicalOverride?: string;
  keywords?: string;
}

const {
  title,
  description,
  lang,
  dir = 'ltr',
  canonical = Astro.url.pathname,
  ogImage = '/assets/images/og-image.jpg',
  isHomepage = false,
  canonicalOverride,
  keywords
} = Astro.props;

// Use Astro.site from config for consistent URL handling
const siteUrl = Astro.site?.origin || 'https://onlinetranslation.ae';
const fullCanonical = canonicalOverride || (canonical.startsWith('http') ? canonical : `${siteUrl}${canonical}`);
---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
<head>
  <!-- Google Tag Manager -->
  <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-N7L2H37W');</script>
  <!-- End Google Tag Manager -->

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=5, viewport-fit=cover">

  <!-- Theme initialization only - no hiding -->
  <script is:inline>
    (function() {
      var theme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', theme);
      document.documentElement.classList.add('theme-' + theme);
    })();
  </script>

  <title>{title}</title>
  <meta name="description" content={description}>
  {keywords && <meta name="keywords" content={keywords}>}
  <meta name="author" content="OnlineTranslation.ae">
  <meta name="robots" content="index, follow">
  <meta name="googlebot" content="index, follow">
  <link rel="canonical" href={fullCanonical}>

  <!-- Hreflang tags - All point to English as canonical -->
  <!-- Note: Arabic hreflang points to /ar/ (where content lives), not /عربي/ (which 301 redirects) -->
  <link rel="alternate" hreflang="en-AE" href={`${siteUrl}/`} />
  <link rel="alternate" hreflang="ar" href={`${siteUrl}/ar/`} />
  <link rel="alternate" hreflang="hi" href={`${siteUrl}/hindi/`} />
  <link rel="alternate" hreflang="ur" href={`${siteUrl}/urdu/`} />
  <link rel="alternate" hreflang="tl" href={`${siteUrl}/tagalog/`} />
  <link rel="alternate" hreflang="ru" href={`${siteUrl}/russian/`} />
  <link rel="alternate" hreflang="fr" href={`${siteUrl}/french/`} />
  <link rel="alternate" hreflang="zh" href={`${siteUrl}/chinese/`} />
  <link rel="alternate" hreflang="fa" href={`${siteUrl}/farsi/`} />
  <link rel="alternate" hreflang="bn" href={`${siteUrl}/bengali/`} />
  <link rel="alternate" hreflang="ml" href={`${siteUrl}/malayalam/`} />
  <link rel="alternate" hreflang="x-default" href={`${siteUrl}/`} />

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={fullCanonical}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={`${siteUrl}${ogImage}`}>
  <meta property="og:locale" content={lang}>
  <meta property="og:site_name" content="OnlineTranslation.ae">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={fullCanonical}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>

  <!-- Theme -->
  <meta name="theme-color" content="#0E2B48">
  <meta name="format-detection" content="telephone=yes">
  <link rel="manifest" href="/manifest.webmanifest">
  <link rel="sitemap" href="/sitemap-0.xml">

  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="64x64" href="/assets/images/icons/favicon-64.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/icons/favicon-32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/icons/favicon-16.png">
  <link rel="apple-touch-icon" href="/assets/images/onedrive/emblem.png">

  <!-- Fonts - Including multilingual support -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;600;700&family=Noto+Sans+Arabic:wght@400;500;600;700&family=Noto+Sans+Devanagari:wght@400;500;600;700&family=Noto+Sans+Bengali:wght@400;500;600;700&family=Noto+Sans+Malayalam:wght@400;500;600;700&family=Noto+Sans+SC:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700;800&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" crossorigin="anonymous">

  <!-- CSS -->
  <link rel="stylesheet" href="/styles/base-architecture.css">
  <link rel="stylesheet" href="/styles/porto-desktop.css">
  <link rel="stylesheet" href="/styles/services-enhanced.css">
  <link rel="stylesheet" href="/styles/document-pages.css">
  <link rel="stylesheet" href="/styles/visibility-fixes.css">
  <link rel="stylesheet" href="/styles/subsection-menu.css">
  <link rel="stylesheet" href="/styles/megamenu.css">
  <link rel="stylesheet" href="/styles/porto-dropdown-onlinetranslation.css">
  <link rel="stylesheet" href="/styles/navigation-glassmorphism.css">
  <link rel="stylesheet" href="/styles/sticky-mobile.css">
  <link rel="stylesheet" href="/styles/mobile-action-bar.css">
  <link rel="stylesheet" href="/styles/mobile-ios.css">
  <link rel="stylesheet" href="/styles/mobile-android.css">
  <link rel="stylesheet" href="/styles/desktop-macos.css">
  <link rel="stylesheet" href="/styles/hero-enhancements.css">
  <link rel="stylesheet" href="/styles/footer-redesign.css">
  <link rel="stylesheet" href="/styles/trust-bar.css">
  <link rel="stylesheet" href="/styles/visual-relief.css">
  <link rel="stylesheet" href="/styles/contrast-fixes.css">
  <link rel="stylesheet" href="/styles/dark-mode-tokenized.css">
  {dir === 'rtl' && <link rel="stylesheet" href="/styles/rtl.css">}
  <link rel="stylesheet" href="/styles/print.css">

  <slot name="head" />
  
  <!-- Vercel Web Analytics -->
  <Analytics />
</head>
<body class={`${dir === 'rtl' ? 'rtl-page' : ''} ${isHomepage ? 'homepage' : ''}`}>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N7L2H37W"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->

  <a href="#main-content" class="skip-link">Skip to main content</a>

  <HeaderUnified lang="en" isHomepage={isHomepage} />

  <main id="main-content">
    <slot />
  </main>

  <Footer />

  <MobileShell />

  <!-- Scripts -->
  <script is:inline src="/scripts/os-detect.js"></script>
  <script defer src="/scripts/preferences.js"></script>
  <script defer src="/scripts/analytics.js"></script>
  <script defer src="/scripts/main-v2.js"></script>
  <script defer src="/scripts/navigation-v2.js"></script>
  <script defer src="/scripts/subsection-menu.js"></script>
  <!-- Search powered by Pagefind -->
  <script defer src="/scripts/form-handler.js"></script>
  <script defer src="/scripts/testimonials-carousel.js"></script>

  <!-- Chatbase Chat Widget - Desktop Only -->
  <script is:inline>
    (function() {
      // Only load on desktop (992px+ matches the site's desktop breakpoint)
      if (window.innerWidth >= 992) {
        (function(){if(!window.chatbase||window.chatbase("getState")!=="initialized"){window.chatbase=(...args)=>{if(!window.chatbase.q){window.chatbase.q=[]}window.chatbase.q.push(args)};window.chatbase=new Proxy(window.chatbase,{get(target,prop){if(prop==="q"){return target.q}return(...a)=>target(prop,...a)}})}const onLoad=function(){const script=document.createElement("script");script.src="https://www.chatbase.co/embed.min.js";script.id="XHyFbKkbLOseA1xEcMAm6";script.domain="www.chatbase.co";document.body.appendChild(script)};if(document.readyState==="complete"){onLoad()}else{window.addEventListener("load",onLoad)}})();
      }
    })();
  </script>

  <SpeedInsights />

</body>
</html>
