---
import HeaderPorto from '../components/Header-porto.astro';
import Footer from '../components/Footer.astro';
import MobileShell from '../components/MobileShell.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  isHomepage?: boolean;
}

const {
  title,
  description,
  canonical = Astro.url.pathname,
  ogImage = '/images/og-image.jpg',
  isHomepage = false
} = Astro.props;

// Use Astro.site from config for consistent URL handling
const siteUrl = Astro.site?.origin || 'https://onlinetranslation.ae';
const fullCanonical = canonical.startsWith('http') ? canonical : `${siteUrl}${canonical}`;
---

<!DOCTYPE html>
<html lang="en-AE">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=5, viewport-fit=cover">
  
  <!-- Theme initialization only - no hiding -->
  <script is:inline>
    (function() {
      var theme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', theme);
      document.documentElement.classList.add('theme-' + theme);
    })();
  </script>
  
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="OnlineTranslation.ae">
  <meta name="robots" content="index, follow">
  <meta name="googlebot" content="index, follow">
  <link rel="canonical" href={fullCanonical}>

  <!-- Hreflang tags for internationalization (prepared for Arabic) -->
  <link rel="alternate" hreflang="en-AE" href={fullCanonical} />
  <link rel="alternate" hreflang="x-default" href={fullCanonical} />

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={fullCanonical}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={`${siteUrl}${ogImage}`}>
  <meta property="og:locale" content="en_AE">
  <meta property="og:site_name" content="OnlineTranslation.ae">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={fullCanonical}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": `${siteUrl}/#organization`,
    "name": "OnlineTranslation.ae",
    "alternateName": "Online Translation UAE",
    "description": "MOJ-certified legal translation services in Dubai. Professional translation for courts, immigration, and business documents.",
    "url": siteUrl,
    "logo": `${siteUrl}/images/logo/brand/emblem-256.png`,
    "image": `${siteUrl}/images/og-image.jpg`,
    "telephone": "+971508620217",
    "email": "info@onlinetranslation.ae",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Umm Al Sheif",
      "addressLocality": "Dubai",
      "addressRegion": "Dubai",
      "postalCode": "",
      "addressCountry": "AE"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 25.1124,
      "longitude": 55.1880
    },
    "openingHoursSpecification": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
      "opens": "08:00",
      "closes": "22:00"
    },
    "priceRange": "$$",
    "currenciesAccepted": "AED, USD",
    "paymentAccepted": "Cash, Credit Card, Bank Transfer",
    "areaServed": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": 25.2048,
        "longitude": 55.2708
      },
      "geoRadius": "50000"
    },
    "sameAs": [
      "https://wa.me/971508620217",
      "https://facebook.com/onlinetranslationae",
      "https://instagram.com/onlinetranslationae",
      "https://linkedin.com/company/onlinetranslationae"
    ],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Translation Services",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Legal Translation",
            "description": "MOJ-certified legal document translation for Dubai courts and government entities"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Certificate Translation",
            "description": "Birth, marriage, death, and academic certificate translation"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Attestation Services",
            "description": "MOFA, embassy, and apostille attestation services"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Golden Visa Translation",
            "description": "Document translation for UAE Golden Visa applications"
          }
        }
      ]
    }
  })} />

  <!-- Theme -->
  <meta name="theme-color" content="#0E2B48">
  <meta name="format-detection" content="telephone=yes">
  <link rel="manifest" href="/manifest.webmanifest">
  <link rel="sitemap" href="/sitemap-index.xml">
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="64x64" href="/images/icons/favicon-64.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/icons/favicon-32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/icons/favicon-16.png">
  <link rel="apple-touch-icon" href="/images/onedrive/emblem.png">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" crossorigin="anonymous">
  
  <!-- ============================================
       CSS - SAFE CONFIGURATION
       
       Changes from original:
       - Merged 4 contrast-fix files → contrast-fixes.css
       - Merged 3 visual-relief files → visual-relief.css  
       - Replaced dark-mode.css → dark-mode-tokenized.css
       
       Everything else unchanged.
       ============================================ -->
  
  <!-- FOUNDATION -->
  <link rel="stylesheet" href="/styles/base-architecture.css">
  
  <!-- PAGE STYLES -->
  <link rel="stylesheet" href="/styles/porto-desktop.css">
  <link rel="stylesheet" href="/styles/services-enhanced.css">
  <link rel="stylesheet" href="/styles/document-pages.css">
  <link rel="stylesheet" href="/styles/visibility-fixes.css">
  
  <!-- NAVIGATION -->
  <link rel="stylesheet" href="/styles/subsection-menu.css">
  <link rel="stylesheet" href="/styles/megamenu.css">
  <link rel="stylesheet" href="/styles/porto-dropdown-onlinetranslation.css">
  <link rel="stylesheet" href="/styles/navigation-glassmorphism.css">
  
  <!-- MOBILE -->
  <link rel="stylesheet" href="/styles/sticky-mobile.css">
  <link rel="stylesheet" href="/styles/mobile-action-bar.css">
  <link rel="stylesheet" href="/styles/mobile-ios.css">
  <link rel="stylesheet" href="/styles/mobile-android.css">
  <link rel="stylesheet" href="/styles/desktop-macos.css">
  
  <!-- COMPONENTS -->
  <link rel="stylesheet" href="/styles/hero-enhancements.css">
  <link rel="stylesheet" href="/styles/footer-redesign.css">
  <link rel="stylesheet" href="/styles/trust-bar.css">
  
  <!-- POLISH (NEW - merged files) -->
  <link rel="stylesheet" href="/styles/visual-relief.css">
  <link rel="stylesheet" href="/styles/contrast-fixes.css">
  
  <!-- DARK MODE (NEW - tokenized, replaces dark-mode.css) -->
  <link rel="stylesheet" href="/styles/dark-mode-tokenized.css">
  
  <!-- PRINT -->
  <link rel="stylesheet" href="/styles/print.css">
  
  <slot name="head" />
  <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  <script is:inline>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</head>
<body class={isHomepage ? 'homepage' : ''}>

  <a href="#main-content" class="skip-link">Skip to main content</a>

  <HeaderPorto isHomepage={isHomepage} />

  <main id="main-content">
    <slot />
  </main>

  <Footer />

  <MobileShell />

  <!-- Scripts -->
  <script is:inline src="/scripts/os-detect.js"></script>
  <script defer src="/scripts/preferences.js"></script>
  <script defer src="/scripts/analytics.js"></script>
  <script defer src="/scripts/main-v2.js"></script>
  <script defer src="/scripts/navigation-v2.js"></script>
  <script defer src="/scripts/subsection-menu.js"></script>
  <script defer src="/scripts/search-index.js"></script>
  <script defer src="/scripts/form-handler.js"></script>
  <script defer src="/scripts/testimonials-carousel.js"></script>

</body>
</html>