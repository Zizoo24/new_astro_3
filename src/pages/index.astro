---

<BaseLayout
  title={pageTitle}
  description={metaDescription}
  isHomepage={true}
>
  <!-- Hero Section - Exodus Style -->
  <section id="home" class="hero-section exodus-hero">
    <div class="hero-background">
      <Image
        src={heroImageSrc}
        alt="OnlineTranslation.ae Professional Team"
        class="hero-image"
        widths={[400, 800, 1200, 1920]}
        sizes="(max-width: 640px) 400px, (max-width: 1024px) 800px, (max-width: 1440px) 1200px, 1920px"
        format="webp"
        quality={75}
        loading="eager"
        fetchpriority="high"
        decoding="async"
      />
      <div class="hero-overlay exodus-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <!-- Single H1 - Always accessible, CSS handles visual styling per breakpoint -->
          <h1 class="hero-title exodus-title">
            <span class="title-line">{heroTitle}</span>
          </h1>
          
          <!-- Desktop lead (visually hidden on mobile, kept in accessibility tree) -->
          <p class="hero-lead hero-lead-desktop">{heroLead}</p>
          
          <!-- Mobile eyebrow and lead (visually hidden on desktop) -->
          <span class="hero-eyebrow hero-eyebrow-mobile">{mobileHero.eyebrow}</span>
          <p class="hero-lead hero-lead-mobile">{mobileHero.lead}</p>
          
          <!-- Desktop bullets (visually hidden on mobile) -->
          <ul class="hero-bullets hero-bullets-desktop">
            {heroBullets.map((item) => (
              <li>
                {item.icon && <i class={item.icon}></i>}
                {item.text}
              </li>
            ))}
          </ul>
          
          <!-- Mobile bullets (visually hidden on desktop) -->
          <ul class="hero-bullets hero-bullets-mobile">
            {mobileHero.bullets.map((item) => (
              <li>
                {item.icon && <i class={item.icon}></i>}
                {item.text}
              </li>
            ))}
          </ul>

          <!-- Primary CTA - Single shared CTA works for all breakpoints -->
          <div class="hero-cta-group">
            <a href={primaryCta.url} class="hero-cta exodus-cta">
              <i class="fab fa-whatsapp"></i> {primaryCta.label}
            </a>
            <a href={secondaryCta.url} class="hero-cta-secondary hero-cta-secondary-desktop">
              {secondaryCta.label}
            </a>
            <a href={mobileHero.secondaryCta.url} class="hero-cta-secondary hero-cta-secondary-mobile">
              {mobileHero.secondaryCta.label}
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Exodus Overlap Cards - Trust Stack -->
    <div class="overlap-cards-wrapper">
      <div class="container">
        <h2 class="sr-only">Our Credentials</h2>
        <div class="overlap-cards">
          {overlapCards.map((card) => (
            <a
              href={card.url || '#'}
              class="overlap-card"
              target={card.url?.startsWith('http') ? '_blank' : undefined}
              rel={card.url?.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              <div class="overlap-card-icon">
                {card.icon && <i class={card.icon}></i>}
              </div>
              <div class="overlap-card-content">
                <h3 class="overlap-card-title">{card.title}</h3>
                <p class="overlap-card-desc">{card.desc}</p>
                {card.badge && (
                  <span class="overlap-card-badge">{card.badge}</span>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar - Government Logos -->
  <TrustBar />

  <!-- iOS Feature Cards - Hidden by default, shown via os-detect.js -->
  <section class="feature-cards-section os-ios-only" style="display: none;">
    <div class="container">
      <h2 class="sr-only">Contact Options for iOS</h2>
      <div class="feature-cards ios-unified-channel">
        <article class="feature-card messaging-card unified-messaging">
          <div class="card-icons-dual">
            <div class="card-icon whatsapp-icon">
              <i class="fab fa-whatsapp"></i>
            </div>
            <div class="card-icon imessage-icon">
              <i class="fab fa-apple"></i>
            </div>
          </div>
          <div class="card-divider"></div>
          <h3>{iosLabel}</h3>
          <p>{iosBody}</p>
          <div class="dual-cta-buttons">
            <a href={whatsappConfig.url} class="cta-button whatsapp-btn">
              <i class="fab fa-whatsapp"></i> {whatsappConfig.label}
            </a>
            <a href={imessageConfig.url} class="cta-button imessage-btn">
              <i class="fab fa-apple"></i> {imessageConfig.label}
            </a>
          </div>
        </article>
        <article class="feature-card">
          <div class="card-icon">
            <i class="fas fa-bolt"></i>
          </div>
          <div class="card-divider"></div>
          <h3>{expressCard.title}</h3>
          <p>{expressCard.text}</p>
          <a href={expressCard.url} class="card-link">
            {expressCard.linkLabel} <i class="fas fa-arrow-right"></i>
          </a>
        </article>
      </div>
    </div>
  </section>

  <!-- Services Section - Enhanced Cards -->
  <section id="services" class="section bg-white services-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">{servicesLabel}</span>
        <h2 class="section-title">{servicesTitle}</h2>
      </div>
      <div class="services-grid-enhanced">
        {servicesItems.map((service) => (
          <a href={service.href} class="service-card-v2">
            <div class="card-badge">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
            </div>
            <div class="card-image">
              <img src={service.image} alt={service.imageAlt} loading="lazy" width="400" height="300">
            </div>
            <div class="card-body">
              <h3>{service.heading}</h3>
              <p>{service.text}</p>
              <span class="card-arrow">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section (still template-driven) -->
  <section id="why" class="section bg-light why-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Why Choose Us?</span>
        <h2 class="section-title">
          The Risk Management Standard<br>for Certified Translation Services in Dubai
        </h2>
        <div class="section-divider"></div>
      </div>
      <div class="grid grid-4 grid--auto-fit why-grid">
        <article class="why-card">
          <i class="fas fa-gavel"></i>
          <h3>Ministry of Justice Approved</h3>
          <p>Certified translation with official stamp and signature accepted by all UAE courts and government agencies.</p>
        </article>
        <article class="why-card">
          <i class="fas fa-id-card"></i>
          <h3>All Official Documents</h3>
          <p>Birth certificates, marriage certificates, diplomas, police clearance—authenticated for UAE authorities.</p>
        </article>
        <article class="why-card">
          <i class="fas fa-building"></i>
          <h3>Corporate Ready</h3>
          <p>Certified MOUs, legal contracts, shareholder docs, tenancy contracts, SPAs and DLD forms.</p>
        </article>
        <article class="why-card">
          <i class="fas fa-bolt"></i>
          <h3>Fast &amp; Online</h3>
          <p>WhatsApp-based workflow, same-day authenticated translations and clear written quotations.</p>
        </article>
      </div>
    </div>
  </section>

  <!-- Process Section - Exodus Style -->
  <section id="process" class="section bg-white process-section exodus-process">
    <div class="container">
      <div class="section-header">
        <span class="section-label exodus-label">Our Work Process</span>
        <h2 class="section-title exodus-section-title">Efficient Certified Translation. Simplified.</h2>
      </div>

      <div class="process-steps exodus-process-steps">
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">01</span>
            <div class="step-icon">
              <i class="fas fa-paper-plane"></i>
            </div>
          </div>
          <h3 class="step-title">Submit Your Original Document</h3>
          <p class="step-desc">
            Send via WhatsApp or upload through our secure portal. Accepted formats: PDF, JPG, PNG, DOCX.
          </p>
        </article>
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">02</span>
            <div class="step-icon">
              <i class="fas fa-file-invoice-dollar"></i>
            </div>
          </div>
          <h3 class="step-title">Instant Compliance Review</h3>
          <p class="step-desc">
            We verify document type and confirm whether additional attestation or apostille services are required.
          </p>
        </article>
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">03</span>
            <div class="step-icon">
              <i class="fas fa-certificate"></i>
            </div>
          </div>
          <h3 class="step-title">Authenticated Delivery</h3>
          <p class="step-desc">
            Receive your certified translation with official stamp digitally within hours. Physical copies couriered when needed.
          </p>
        </article>
      </div>
    </div>
  </section>

  <!-- Metrics Strip - Compact Modern Design -->
  <section class="ot-metrics">
    <div class="ot-metrics-inner">
      {metrics.map((metric) => (
        <article class="ot-metric">
          <span class="ot-metric-value">{metric.value}</span>
          <span class="ot-metric-label">{metric.label}</span>
          {metric.note && (
            <span class="ot-metric-note">{metric.note}</span>
          )}
        </article>
      ))}
    </div>
  </section>

  <!-- Specialists Section - Role-Based -->
  <section id="team" class="section bg-alt specialists-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label exodus-label">{specialistsLabel}</span>
        <h2 class="section-title exodus-section-title">{specialistsTitle}</h2>
      </div>
      <div class="grid grid-4 grid--auto-fit specialists-grid">
        {specialistsCards.map((card) => (
          <a href={card.href} class="specialist-card">
            <div class="specialist-icon">
              {card.icon && <i class={card.icon}></i>}
            </div>
            <h3>{card.title}</h3>
            <ul class="specialist-bullets">
              {card.bullets.map((b) => (
                <li>{b}</li>
              ))}
            </ul>
            <div class="specialist-tags">
              {card.tags.map((t) => (
                <span class="tag">{t}</span>
              ))}
