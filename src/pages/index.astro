              {item.question}
              <i class="fas fa-chevron-down"></i>
            </button>
            <div class="faq-answer">
              <p>{item.answer}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <section class="section bg-dark cta-banner">
    <div class="container text-center">
      <h2>{ctaBanner.title}</h2>
      <p>{ctaBanner.body}</p>
      <a href={ctaBanner.buttonUrl} class="cta-btn">
        <i class="fab fa-whatsapp"></i> {ctaBanner.buttonLabel}
      </a>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section bg-dark contact-section">
    <div class="container">
      <div class="contact-wrapper">
        <span class="section-label">{contactSection.label}</span>
        <h2 class="section-title">{contactSection.title}</h2>
        <p class="contact-description">
          {contactSection.description}
        </p>
        <form class="contact-form" id="contactForm" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="name">Your Name</label>
              <input
                type="text"
                id="name"
                name="name"
                autocomplete="name"
                placeholder={contactSection.namePlaceholder}
                required
              >
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                autocomplete="email"
                placeholder={contactSection.emailPlaceholder}
                required
              >
            </div>
          </div>
          <div class="form-group">
            <label for="phone">Phone / WhatsApp Number</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              autocomplete="tel"
              placeholder={contactSection.phonePlaceholder}
            >
          </div>
          <div class="form-group">
            <label for="message">Document Details</label>
            <textarea
              id="message"
              name="message"
              placeholder={contactSection.messagePlaceholder}
              rows={5}
            ></textarea>
          </div>
          <button type="submit" class="submit-btn">Submit Request</button>
          <div id="formResult" class="form-result"></div>
        </form>
        <div class="contact-buttons">
          <a href="https://wa.me/971508620217" class="contact-btn whatsapp">
            <i class="fab fa-whatsapp"></i> WhatsApp
          </a>
          <a href="tel:+971508620217" class="contact-btn phone">
            <i class="fas fa-phone"></i> Call Us
          </a>
          <a href="mailto:info@onlinetranslation.ae" class="contact-btn email">
            <i class="fas fa-envelope"></i> Email
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach((item) => {
      const question = item.querySelector('.faq-question');
      question?.addEventListener('click', () => {
        const isOpen = item.classList.contains('is-open');
        faqItems.forEach((i) => i.classList.remove('is-open'));
        if (!isOpen) {
          item.classList.add('is-open');
        }
      });
    });
  });
</script>
