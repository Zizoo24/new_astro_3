---
import BaseLayout from '../layouts/BaseLayout.astro';
import TestimonialsCarousel from '../components/TestimonialsCarousel.astro';
import DulBadge from '../components/DulBadge.astro';
import AuthorityLogos from '../components/AuthorityLogos.astro';
import { getEntry } from 'astro:content';

const homeEntry = await getEntry('core', 'home');
const data = homeEntry?.data || {};

// SEO
const pageTitle =
  data.pageTitle ??
  'MOJ Certified Legal Translation Dubai | Court-Ready Documents | OnlineTranslation.ae';

const metaDescription =
  data.metaDescription ??
  'Professional legal translation services in Dubai designed for UAE court acceptance. Ministry of Justice certified translators for documents, contracts, and attestation. Fast, secure, reliable.';

// HERO
const hero = data.hero ?? {};
const heroTitle =
  hero.titleLine ?? 'MOJ Certified Legal Translation in Dubai';
const heroLead =
  hero.lead ?? 'Your Digital Document Concierge Across the UAE';
const heroImage =
  hero.image ?? '/images/hero/office-team.png';

const heroBullets =
  hero.bullets ??
  [
    {
      icon: 'fas fa-stamp',
      text: 'MOJ certified for Dubai Courts, DIFC and ADGM',
    },
    {
      icon: 'fas fa-bolt',
      text: 'Standard draft ready in 60 minutes',
    },
    {
      icon: 'fas fa-comments',
      text: 'WhatsApp evidence for Police & Courts (formatted for legal submission)',
    },
  ];

const primaryCta =
  hero.primaryCta ?? {
    label: 'Send Documents on WhatsApp',
    url: 'https://wa.me/971508620217',
  };

const secondaryCta =
  hero.secondaryCta ?? {
    label: 'Or request a written quotation',
    url: '/contact/',
  };

// OVERLAP CARDS
const overlapCards =
  data.overlapCards ??
  [
    {
      icon: 'fas fa-shield-alt',
      title: 'Dubai Unified License',
      desc: 'Official Dubai business registry – click to verify',
      badge: 'We are officially licensed',
      url: 'https://app.invest.dubai.ae/DUL/1DE9D8AA-768A-4CFC-BC27-A6F23017B858',
    },
    {
      icon: 'fas fa-building',
      title: 'Government Accepted',
      desc: 'Recognized by courts, embassies, and ministries',
      badge: '',
      url: '/services/legal-translation/',
    },
    {
      icon: 'fas fa-bolt',
      title: '60-Minute Turnaround',
      desc: 'Fastest certified translation delivery in Dubai for standard documents',
      badge: '',
      url: '/services/legal-translation/',
    },
  ];

// iOS / CONCIERGE BLOCK
const ios = data.iosBlock ?? {};
const iosLabel =
  ios.label ?? 'Your Legal Concierge in Your Pocket';
const iosTitle =
  ios.title ?? 'It's like having an in-house coordinator inside your phone.';
const iosBody =
  ios.body ??
  'Send your documents once and we coordinate between legal translators, attestation providers, and couriers so you don't have to chase anyone.';

// Backward compatible: support both nested objects and flat label/url fields
const whatsappConfig =
  ios.whatsapp ??
  {
    label: ios.whatsappLabel ?? 'WhatsApp',
    url:
      ios.whatsappUrl ??
      'https://wa.me/971508620217',
  };

const imessageConfig =
  ios.imessage ??
  {
    label: ios.imessageLabel ?? 'iMessage',
    url:
      ios.imessageUrl ??
      'sms:+971508620217&body=Hi, I need a translation quote',
  };

const expressCard =
  ios.expressCard ??
  {
    title: 'Express Service',
    text: 'Ultra-urgent translation for critical deadlines. Same-day certified delivery available.',
    url:
      'https://wa.me/971508620217?text=URGENT:%20I%20need%20express%20translation',
    linkLabel: 'Urgent Request',
  };

// SERVICES SECTION
const servicesSection = data.servicesSection ?? {};
const servicesLabel =
  servicesSection.label ?? 'Our Services';
const servicesTitle =
  servicesSection.title ??
  'Professional Translation Services Across Four Practice Areas';

const servicesItems =
  servicesSection.items ??
  [
    {
      href: '/services/legal-translation/',
      image: '/images/tiles/tile-courts.png',
      imageAlt: 'Legal Translation Services',
      heading: 'Legal & Corporate',
      text:
        'Contracts, court judgments, corporate governance, powers of attorney, and litigation documents with MOJ certification.',
    },
    {
      href: '/personal/',
      image: '/images/tiles/tile-immigration.png',
      imageAlt: 'Personal Document Translation',
      heading: 'Personal Documents',
      text:
        'Birth certificates, marriage certificates, academic credentials, police clearance, and immigration documentation.',
    },
    {
      href: '/services/attestation/',
      image: '/images/services/services-4.jpg',
      imageAlt: 'Attestation & MOFAIC',
      heading: 'Attestation Services',
      text:
        'Document attestation for MOFA and government entities. Complete legalization services including secure courier handling.',
    },
    {
      href: '/services/certificate-translation/',
      image: '/images/services/services-5.jpg',
      imageAlt: 'Business Localization',
      heading: 'Business Localization',
      text:
        'Website and app localization, marketing adaptation, menu translation, and technical documentation for UAE market entry.',
    },
    {
      href: '/locations/',
      image: '/images/tiles/tile-corporate.png',
      imageAlt: 'Location Services',
      heading: 'Location Services',
      text:
        'On-site collection and delivery across Dubai, Abu Dhabi, and Northern Emirates. Doorstep service for busy professionals.',
    },
    {
      href: '/services/golden-visa-translation/',
      image: '/images/tiles/tile-immigration.png',
      imageAlt: 'Golden Visa Translation',
      heading: 'Golden Visa',
      text:
        'Complete document packages for UAE Golden Visa applications. Academic, professional, and investment documentation.',
    },
  ];

// METRICS STRIP
const metrics =
  data.metrics ??
  [
    { value: '43+', label: 'Languages', note: 'Certified pairs' },
    { value: '7', label: 'Days a Week', note: 'Always available' },
    { value: 'Court', label: 'Ready Docs', note: 'MOJ certified' },
    { value: '60min', label: 'Standard Draft', note: 'Digital delivery' },
  ];

// SPECIALISTS SECTION
const specialistsSection = data.specialistsSection ?? {};
const specialistsLabel =
  specialistsSection.label ?? 'Our Specialists';
const specialistsTitle =
  specialistsSection.title ??
  'Trusted Legal Translation Services in Dubai';

const rawSpecialistCards =
  specialistsSection.cards ??
  [
    {
      href: '/services/legal-translation/',
      icon: 'fas fa-gavel',
      title: 'Court & Litigation Translation',
      bullets: [
        'Pleadings, memoranda, judgments',
        'Evidence bundles and exhibits',
        'UAE legal terminology',
      ],
      tags: ['Dubai Courts', 'DIFC', 'ADGM'],
    },
    {
      href: '/services/golden-visa-translation/',
      icon: 'fas fa-passport',
      title: 'Immigration & Residency Translation',
      bullets: [
        'Golden Visa applications',
        'Family visa documents',
        'Emirates ID and ICP/GDRFA',
      ],
      tags: ['Golden Visa', 'Family Visa', 'ICP/GDRFA'],
    },
    {
      href: '/industries/real-estate/',
      icon: 'fas fa-building',
      title: 'Real Estate & DLD Translation',
      bullets: [
        'Property contracts and POAs',
        'Title deeds and RERA docs',
        'DLD submission format',
      ],
      tags: ['DLD', 'RERA', 'Property POA'],
    },
    {
      href: '/services/corporate-translation/',
      icon: 'fas fa-briefcase',
      title: 'Corporate & Commercial Translation',
      bullets: [
        'Trade licenses and MOAs',
        'Shareholder agreements',
        'Free zone documentation',
      ],
      tags: ['DMCC', 'Free Zones', 'DED'],
    },
  ];

// Normalize bullets/tags (string OR { bullet } / { tag })
const specialistsCards = rawSpecialistCards.map((card) => ({
  ...card,
  bullets: (card.bullets ?? []).map((b: any) =>
    typeof b === 'string' ? b : b?.bullet ?? '',
  ),
  tags: (card.tags ?? []).map((t: any) =>
    typeof t === 'string' ? t : t?.tag ?? '',
  ),
}));

// FAQ SECTION
const faqSection = data.faqSection ?? {};
const faqLabel =
  faqSection.label ?? 'Common Questions';
const faqTitle =
  faqSection.title ??
  'Common Questions About Legal Translation in Dubai';

const faqItems =
  faqSection.items ??
  [
    {
      question:
        'What makes your translation service different from other translation companies?',
      answer:
        'We operate as a document concierge, not a traditional translation office. This means you get the compliance guarantees of working with certified legal translation providers without the friction of conventional agencies.',
    },
    {
      question: 'Are your translations accepted by UAE courts?',
      answer:
        'Yes. Every legal translation service we coordinate is executed by translators certified by the Ministry of Justice. Our translations are formatted specifically for Dubai Courts, DIFC, ADGM, and federal judicial bodies.',
    },
    {
      question: 'How quickly can you provide certified legal translation?',
      answer:
        'Standard documents (birth certificates, marriage certificates, educational credentials) are typically ready within 3–6 business hours. Express processing available for urgent legal requirements.',
    },
    {
      question: 'Do you provide attestation services?',
      answer:
        'Yes. When your legal documents require attestation from MOFA or other government entities, we coordinate the complete process including secure courier handling of originals.',
    },
    {
      question: 'Can you handle Arabic to English and English to Arabic?',
      answer:
        'Yes. Our certified translators work in both directions for comprehensive Arabic translation services.',
    },
  ];

// CTA BANNER
const ctaBanner =
  data.ctaBanner ??
  {
    title: 'Let Us Handle the Compliance. You Focus on What Matters.',
    body:
      'Join the businesses and individuals across Dubai, Abu Dhabi, and the Northern Emirates who trust OnlineTranslation.ae as their provider of legal translation services.',
    buttonLabel: 'Send Documents on WhatsApp',
    buttonUrl: 'https://wa.me/971508620217',
  };

// CONTACT SECTION
const contactSection =
  data.contactSection ??
  {
    label: 'Get In Touch',
    title: 'Request a Free Quotation',
    description:
      'Share your documents. We will confirm price and delivery time within minutes.',
    namePlaceholder: 'Enter your full name',
    emailPlaceholder: 'your@email.com',
    phonePlaceholder: '+971 XX XXX XXXX',
    messagePlaceholder:
      'Describe your document(s) and requirements...',
  };
---

<BaseLayout
  title={pageTitle}
  description={metaDescription}
  isHomepage={true}
>
  <!-- Hero Section - Exodus Style -->
  <section id="home" class="hero-section exodus-hero">
    <div class="hero-background">
      <img
        src={heroImage}
        alt="OnlineTranslation.ae Professional Team"
        class="hero-image"
        loading="eager"
      >
      <div class="hero-overlay exodus-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1 class="hero-title exodus-title">
            <span class="title-line">{heroTitle}</span>
          </h1>
          <p class="hero-lead">{heroLead}</p>
          <ul class="hero-bullets">
            {heroBullets.map((item) => (
              <li>
                {item.icon && <i class={item.icon}></i>}
                {item.text}
              </li>
            ))}
          </ul>

          <div class="hero-cta-group">
            <a href={primaryCta.url} class="hero-cta exodus-cta">
              <i class="fab fa-whatsapp"></i> {primaryCta.label}
            </a>
            {secondaryCta?.url && (
              <a href={secondaryCta.url} class="hero-cta-secondary">
                {secondaryCta.label}
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Exodus Overlap Cards - Trust Stack -->
    <div class="overlap-cards-wrapper">
      <div class="container">
        <div class="overlap-cards">
          {overlapCards.map((card) => (
            <article class="overlap-card">
              <a
                href={card.url || '#'}
                class="overlap-card-link"
                target={card.url?.startsWith('http') ? '_blank' : undefined}
                rel={card.url?.startsWith('http') ? 'noopener noreferrer' : undefined}
              >
                <div class="overlap-card-icon">
                  {card.icon && <i class={card.icon}></i>}
                </div>
                <div class="overlap-card-content">
                  <h3 class="overlap-card-title">{card.title}</h3>
                  <p class="overlap-card-desc">{card.desc}</p>
                  {card.badge && (
                    <span class="overlap-card-badge">{card.badge}</span>
                  )}
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar - Government Logos -->
  <section class="trust-bar-section">
    <div class="container">
      <div class="trust-bar-header">
        <h3 class="trust-bar-title">Trusted &amp; Recognized By</h3>
      </div>
      <div class="trust-bar-logos">
        <div class="trust-capsule">
          <img src="/images/logos/moj.png" alt="Government of Dubai" loading="lazy">
        </div>
        <div class="trust-capsule">
          <img src="/images/logos/dubai-courts.png" alt="Dubai Courts" loading="lazy">
        </div>
        <div class="trust-capsule">
          <img src="/images/logos/dubai-police.png" alt="Dubai Police" loading="lazy">
        </div>
        <div class="trust-capsule">
          <img src="/images/logos/dld.png" alt="Dubai Land Department" loading="lazy">
        </div>
        <div class="trust-capsule">
          <img src="/images/logos/mofaic.png" alt="MOFAIC" loading="lazy">
        </div>
      </div>
    </div>
  </section>

  <!-- iOS Feature Cards - Hidden by default, shown via os-detect.js -->
  <section class="feature-cards-section os-ios-only" style="display: none;">
    <div class="container">
      <div class="feature-cards ios-unified-channel">
        <article class="feature-card messaging-card unified-messaging">
          <div class="card-icons-dual">
            <div class="card-icon whatsapp-icon">
              <i class="fab fa-whatsapp"></i>
            </div>
            <div class="card-icon imessage-icon">
              <i class="fab fa-apple"></i>
            </div>
          </div>
          <div class="card-divider"></div>
          <h3>{iosLabel}</h3>
          <p>{iosBody}</p>
          <div class="dual-cta-buttons">
            <a href={whatsappConfig.url} class="cta-button whatsapp-btn">
              <i class="fab fa-whatsapp"></i> {whatsappConfig.label}
            </a>
            <a href={imessageConfig.url} class="cta-button imessage-btn">
              <i class="fab fa-apple"></i> {imessageConfig.label}
            </a>
          </div>
        </article>
        <article class="feature-card">
          <div class="card-icon">
            <i class="fas fa-bolt"></i>
          </div>
          <div class="card-divider"></div>
          <h3>{expressCard.title}</h3>
          <p>{expressCard.text}</p>
          <a href={expressCard.url} class="card-link">
            {expressCard.linkLabel} <i class="fas fa-arrow-right"></i>
          </a>
        </article>
      </div>
    </div>
  </section>

  <!-- Services Section - Enhanced Cards -->
  <section id="services" class="section bg-white services-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">{servicesLabel}</span>
        <h2 class="section-title">{servicesTitle}</h2>
      </div>
      <div class="services-grid-enhanced">
        {servicesItems.map((service) => (
          <a href={service.href} class="service-card-v2">
            <div class="card-badge">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
            </div>
            <div class="card-image">
              <img src={service.image} alt={service.imageAlt} loading="lazy">
            </div>
            <div class="card-body">
              <h3>{service.heading}</h3>
              <p>{service.text}</p>
              <span class="card-arrow">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section (still template-driven) -->
  <section id="why" class="section bg-light why-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Why Choose Us?</span>
        <h2 class="section-title">
          The Risk Management Standard<br>for Legal Translation Services in Dubai
        </h2>
        <div class="section-divider"></div>
      </div>
      <div class="grid grid-4 grid--auto-fit why-grid">
        <article class="why-card">
          <i class="fas fa-gavel"></i>
          <h3>MOJ Certified</h3>
          <p>UAE Ministry of Justice certified legal translation accepted by all courts and government entities.</p>
        </article>
        <article class="why-card">
          <i class="fas fa-id-card"></i>
          <h3>All Documents</h3>
          <p>Birth, marriage, education, police clearance and more, formatted for UAE authorities.</p>
        </article>
        <article class="why-card">
          <i class="fas fa-building"></i>
          <h3>Corporate Ready</h3>
          <p>MOUs, contracts, shareholder docs, tenancy contracts, SPAs and DLD forms.</p>
        </article>
        <article class="why-card">
          <i class="fas fa-bolt"></i>
          <h3>Fast &amp; Online</h3>
          <p>WhatsApp-based workflow, same-day options and clear written quotations.</p>
        </article>
      </div>
    </div>
  </section>

  <!-- Process Section - Exodus Style -->
  <section id="process" class="section bg-white process-section exodus-process">
    <div class="container">
      <div class="section-header">
        <span class="section-label exodus-label">Our Work Process</span>
        <h2 class="section-title exodus-section-title">Efficient Translation Services. Simplified.</h2>
      </div>
      <div class="grid grid-3 grid--auto-fit process-steps exodus-process-steps">
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">01</span>
            <div class="step-icon">
              <i class="fas fa-paper-plane"></i>
            </div>
          </div>
          <h3 class="step-title">Submit Your Document</h3>
          <p class="step-desc">
            Send via WhatsApp or upload through our secure portal. Accepted formats: PDF, JPG, PNG, DOCX.
          </p>
        </article>
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">02</span>
            <div class="step-icon">
              <i class="fas fa-file-invoice-dollar"></i>
            </div>
          </div>
          <h3 class="step-title">Instant Compliance Review</h3>
          <p class="step-desc">
            We verify document type and confirm whether additional attestation services are required.
          </p>
        </article>
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">03</span>
            <div class="step-icon">
              <i class="fas fa-certificate"></i>
            </div>
          </div>
          <h3 class="step-title">Immediate Delivery</h3>
          <p class="step-desc">
            Receive your certified translation digitally within hours. Physical copies couriered when needed.
          </p>
        </article>
      </div>
    </div>
  </section>

  <!-- Metrics Strip - Compact Modern Design -->
  <section class="ot-metrics">
    <div class="ot-metrics-inner">
      {metrics.map((metric) => (
        <article class="ot-metric">
          <span class="ot-metric-value">{metric.value}</span>
          <span class="ot-metric-label">{metric.label}</span>
          {metric.note && (
            <span class="ot-metric-note">{metric.note}</span>
          )}
        </article>
      ))}
    </div>
  </section>

  <!-- Specialists Section - Role-Based -->
  <section id="team" class="section bg-alt specialists-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label exodus-label">{specialistsLabel}</span>
        <h2 class="section-title exodus-section-title">{specialistsTitle}</h2>
      </div>
      <div class="grid grid-4 grid--auto-fit specialists-grid">
        {specialistsCards.map((card) => (
          <a href={card.href} class="specialist-card">
            <div class="specialist-icon">
              {card.icon && <i class={card.icon}></i>}
            </div>
            <h3>{card.title}</h3>
            <ul class="specialist-bullets">
              {card.bullets.map((b) => (
                <li>{b}</li>
              ))}
            </ul>
            <div class="specialist-tags">
              {card.tags.map((t) => (
                <span class="tag">{t}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
      <div class="team-cta-wrapper">
        <p class="team-tagline">
          Your documents are handled by dedicated specialists and reviewed before delivery.
        </p>
        <a href="https://wa.me/971508620217" class="team-cta">
          <i class="fab fa-whatsapp"></i> Send Documents on WhatsApp
        </a>
      </div>
    </div>
  </section>

  <!-- Languages Section (still template-driven) -->
  <section class="section bg-dark languages-section exodus-languages">
    <div class="container">
      <div class="section-header">
        <span class="section-label exodus-label">Languages We Support</span>
        <h2 class="section-title exodus-section-title">
          Translation Services in 43+ Languages
        </h2>
      </div>
      <div class="grid grid-3 grid--auto-fit languages-grid">
        <div class="language-item"><i class="fas fa-globe"></i> Arabic</div>
        <div class="language-item"><i class="fas fa-globe"></i> English</div>
        <div class="language-item"><i class="fas fa-globe"></i> Russian</div>
        <div class="language-item"><i class="fas fa-globe"></i> French</div>
        <div class="language-item"><i class="fas fa-globe"></i> Chinese</div>
        <div class="language-item"><i class="fas fa-globe"></i> Hindi</div>
        <div class="language-item"><i class="fas fa-globe"></i> Urdu</div>
        <div class="language-item"><i class="fas fa-globe"></i> Spanish</div>
        <div class="language-item"><i class="fas fa-globe"></i> German</div>
        <div class="language-item"><i class="fas fa-globe"></i> Portuguese</div>
        <div class="language-item"><i class="fas fa-globe"></i> Italian</div>
        <div class="language-item"><i class="fas fa-globe"></i> Turkish</div>
        <div class="language-item"><i class="fas fa-globe"></i> Persian (Farsi)</div>
        <div class="language-item"><i class="fas fa-globe"></i> Japanese</div>
        <div class="language-item"><i class="fas fa-globe"></i> Korean</div>
        <div class="language-item"><i class="fas fa-globe"></i> Dutch</div>
        <div class="language-item"><i class="fas fa-globe"></i> Polish</div>
        <div class="language-item"><i class="fas fa-globe"></i> Romanian</div>
        <div class="language-item"><i class="fas fa-globe"></i> Bengali</div>
        <div class="language-item"><i class="fas fa-globe"></i> Tamil</div>
        <div class="language-item"><i class="fas fa-globe"></i> Tagalog</div>
        <div class="language-item"><i class="fas fa-globe"></i> Indonesian</div>
        <div class="language-item"><i class="fas fa-globe"></i> Thai</div>
        <div class="language-item highlight">
          <i class="fas fa-plus-circle"></i> 20+ More
        </div>
      </div>
      <p class="languages-note">
        Don't see your language? Contact us - we work with native translators in 43+ languages and language combinations.
      </p>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section id="about" class="section bg-white about-section exodus-about">
    <div class="container">
      <div class="about-grid exodus-about-grid">
        <div class="about-image exodus-about-image">
          <img
            src="/images/contact-office.png"
            alt="Professional Legal Translation Dubai"
            loading="lazy"
          >
          <div class="experience-badge exodus-badge">
            <span class="years">Court</span>
            <span class="text">Ready</span>
          </div>
        </div>
        <div class="about-content exodus-about-content">
          <span class="section-label exodus-label">Our Approach</span>
          <h2 class="section-title exodus-section-title">
            Designed for Court Acceptance. Consistent Results.
          </h2>
