  p { line-height: 1.7; margin-bottom: 1rem; }

  /* Need Grid */
  .need-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1.25rem; margin: 1.5rem 0; }
  .need-card { border-radius: 0.75rem; padding: 1.5rem; }
  .need-card h3 { margin: 0 0 1rem; font-size: 1.1rem; }
  .need-card ul { margin: 0; padding-left: 1.25rem; }
