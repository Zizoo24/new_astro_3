  { time: "6:00 PM", day: "Day 1", event: "Second batch (4 documents) completed" },
  { time: "9:00 PM", day: "Day 1", event: "Final batch (2 documents) completed" },
  { time: "10:00 PM", day: "Day 1", event: "Complete package delivered via same-day courier" },
  { time: "9:30 AM", day: "Day 2", event: "Client attends GDRFA interview with full package" },
  { time: "11:00 AM", day: "Day 2", event: "Visa approved at first interview" }
