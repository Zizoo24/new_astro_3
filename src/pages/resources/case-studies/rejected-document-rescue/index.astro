import Breadcrumb from '../../../../components/Breadcrumb.astro';

const timeline = [
  { time: "10:15 AM", event: "Initial WhatsApp contact with rejected document images" },
  { time: "10:25 AM", event: "Issue analysis complete — 4 formatting errors identified" },
  { time: "10:30 AM", event: "Client approval for correction service" },
  { time: "11:45 AM", event: "Corrected translation completed with new stamps" },
  { time: "12:20 PM", event: "Client receives documents at Dubai Courts" },
  { time: "1:30 PM", event: "Court filing accepted on second submission" }
];

const issues = [
  {
    problem: "Header format incorrect",
    detail: "Arabic header missing required court reference number placement",
    solution: "Reformatted to match Dubai Courts template with case number in designated position"
  },
  {
    problem: "Stamp placement issue",
    detail: "MOJ stamp overlapping signature block, making signature verification difficult",
    solution: "Re-stamped with proper 3cm margin from signature as per court requirements"
  },
  {
    problem: "Date format inconsistency",
    detail: "English section used DD/MM/YYYY while Arabic used Hijri — courts require matching formats",
    solution: "Converted both sections to Gregorian with month spelled out (15 March 2024)"
  },
  {
    problem: "Party name transliteration",
    detail: "Surname romanization didn't match passport spelling submitted to court",
    solution: "Cross-referenced passport copy to ensure exact spelling match"
  }
];
