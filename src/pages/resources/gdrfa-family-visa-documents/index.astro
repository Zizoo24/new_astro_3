import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';

const pageTitle = "GDRFA Family Visa: Complete Document Checklist";
const metaDescription = "Every document you need for a UAE family visa at GDRFA. Attestation sequence, translation requirements, typing center steps, and mistakes that cause rejections.";

const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Resources', url: '/resources/' },
