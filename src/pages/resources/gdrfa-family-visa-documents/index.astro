      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer.replace(/<[^>]*>/g, '')
        }
      }))
    })} />

    <!-- HowTo Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "HowTo",
      "name": "How to Prepare Family Visa Documents for GDRFA",
      "description": "Step-by-step guide to preparing, attesting, translating, and submitting family visa documents through GDRFA in the UAE.",
      "step": [
        {
          "@type": "HowToStep",
          "position": 1,
          "name": "Gather original documents from home country",
          "text": "Collect original marriage certificate, birth certificates for children, and other required documents. GDRFA requires originals, not certified copies."
        },
        {
