  .overview-box h2 { display: flex; align-items: center; gap: 0.5rem; }
  .overview-box h2 i { color: var(--accent-color); }
  .quick-list { padding-left: 1.5rem; margin: 1rem 0; }
  .quick-list li { margin-bottom: 0.75rem; }
  .note { font-size: 0.9rem; color: var(--text-muted); margin-top: 1rem; }
  .note i { color: var(--accent-color); margin-right: 0.25rem; }

