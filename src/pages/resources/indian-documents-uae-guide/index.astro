  .badge { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: rgba(255,255,255,0.1); border-radius: 2rem; font-size: 0.85rem; color: rgba(255,255,255,0.9); }
  .badge i { color: var(--accent-color); }
  .content-container { max-width: 900px; }
  .content-container p { line-height: 1.8; margin-bottom: 1rem; }
