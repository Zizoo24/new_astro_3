  .acceptance-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin: 2rem 0; }
  .acceptance-card { background: var(--surface-raised, #f8f9fa); padding: 1.5rem; border-radius: 12px; }
  .acceptance-card h3 { display: flex; align-items: center; gap: 0.5rem; font-size: 1rem; margin-bottom: 1rem; color: var(--text-heading); }
  .acceptance-card.certified h3 i { color: #1a5f7a; }
  .acceptance-card.moj h3 i { color: #8B2635; }
  .acceptance-card ul { list-style: none; padding: 0; margin: 0; }
