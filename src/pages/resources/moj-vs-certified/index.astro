  .acceptance-card li strong { color: var(--text-heading); }

  .doubt-box { background: var(--surface-base, white); padding: 2rem; border-radius: 12px; border: 2px solid var(--accent-color); margin-top: 2rem; }
  .doubt-box h4 { display: flex; align-items: center; gap: 0.5rem; margin: 0 0 1rem; color: var(--text-heading); }
