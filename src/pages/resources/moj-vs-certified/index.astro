  .type-card { background: var(--surface-base, white); padding: 2rem; border-radius: 12px; border: 2px solid var(--border-light, #eee); }
  .type-card.certified { border-color: #1a5f7a; }
  .type-card.moj { border-color: #8B2635; }
  .type-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; }
  .type-header i { font-size: 2rem; }
  .type-card.certified .type-header i { color: #1a5f7a; }
  .type-card.moj .type-header i { color: #8B2635; }
  .type-header h3 { margin: 0; font-size: 1.1rem; color: var(--text-heading); }
  .type-card p { color: var(--text-body); line-height: 1.7; }
  .type-details { margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--border-light, #eee); }
  .type-details p { margin: 0.5rem 0; font-size: 0.95rem; }

  .quality-note { display: flex; gap: 1rem; background: var(--surface-base, white); padding: 1.5rem; border-radius: 8px; border-left: 4px solid var(--primary-color); margin-top: 2rem; }
  .quality-note i { font-size: 1.5rem; color: var(--primary-color); flex-shrink: 0; }
  .quality-note strong { color: var(--text-heading); }
  .quality-note p { margin: 0.5rem 0 0; color: var(--text-body); line-height: 1.7; }

