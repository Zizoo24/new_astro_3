  .guide-block h3 i { color: var(--accent-color); }
  .guide-block p { color: var(--text-body); line-height: 1.7; margin: 0.75rem 0; }
  .guide-block ul { padding-left: 1.5rem; margin: 1rem 0; }
  .guide-block li { margin: 0.5rem 0; color: var(--text-body); }
  .guide-block li strong { color: var(--text-heading); }

  /* CTA Section */
  .cta-section { text-align: center; max-width: 600px; margin: 0 auto; padding: 3rem 1.5rem; background: var(--surface-navy, #0a1628); border-radius: 12px; }
  .cta-section h2 { margin-bottom: 1rem; }
  .cta-section p { margin-bottom: 2rem; }
  .btn { display: inline-flex; align-items: center; gap: 0.5rem; padding: 1rem 2rem; border-radius: 0.5rem; font-weight: 600; text-decoration: none; transition: all 0.3s ease; }
  .btn-primary { background: var(--accent-color); color: #ffffff !important; }
  .btn-primary:hover { background: #e0144c; transform: translateY(-2px); }

  @media (max-width: 600px) {
    .step-branches { grid-template-columns: 1fr; }
    .type-cards { grid-template-columns: 1fr; }
    .acceptance-grid { grid-template-columns: 1fr; }
  }
</style>
