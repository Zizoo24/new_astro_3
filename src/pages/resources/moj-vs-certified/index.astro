  .client-story blockquote p { margin-bottom: 1rem; color: var(--text-body, #2d3748); }
  .story-note { font-style: italic; color: var(--text-muted); }

  /* Decision Flowchart */
  .decision-flowchart { max-width: 700px; margin: 2rem auto; text-align: center; }
  .step-question { background: var(--primary-color, #0E2B48); color: white; padding: 1rem 2rem; border-radius: 8px; font-weight: 600; font-size: 1.1rem; margin-bottom: 1.5rem; }
  .step-branches { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
  .branch { padding: 1rem; border-radius: 8px; background: var(--surface-raised, #f8f9fa); }
