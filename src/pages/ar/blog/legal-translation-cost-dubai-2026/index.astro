  .content-wrapper { max-width: 800px; margin: 0 auto; font-size: 1.1rem; line-height: 1.8; }
  .content-wrapper p { margin-bottom: 1.5rem; }
  .content-wrapper h2 { font-size: 1.5rem; font-weight: 700; color: var(--primary-color, #0E2B48); margin: 3rem 0 1.5rem; padding-top: 1.5rem; border-top: 1px solid rgba(0,0,0,0.08); line-height: 1.6; }
  .content-wrapper h2:first-of-type { border-top: none; padding-top: 0; margin-top: 0; }
  .content-wrapper h3 { font-size: 1.2rem; font-weight: 600; color: var(--primary-color, #0E2B48); margin: 2rem 0 1rem; line-height: 1.6; }
  .content-wrapper ul { margin-bottom: 1.5rem; padding-right: 1.5rem; }
  .content-wrapper li { margin-bottom: 0.5rem; }
