  .price-card.moj { border-top-color: var(--primary-color, #0E2B48); }
  .price-card.certified { border-top-color: #2196f3; }
  .price-card h3 { font-size: 1.1rem; margin: 0 0 0.5rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem; color: var(--primary-color, #0E2B48); }
  .price-card .price { font-size: 1.5rem; font-weight: 700; color: var(--accent-color, #FF1654); margin: 1rem 0; }
  .price-card > p { font-size: 0.9rem; color: var(--text-muted, #5a6a7a); margin: 0 0 1rem; }
