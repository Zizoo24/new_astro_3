  .provider-card { background: #f8f9fa; padding: 1.5rem; border-radius: 8px; }
  .provider-card.recommended { border: 2px solid var(--accent-color, #FF1654); }
  .provider-card h4 { margin: 0 0 1rem; color: var(--primary-color, #0E2B48); }
  .pros-cons { display: grid; gap: 1rem; }
  .pros-cons strong { font-size: 0.9rem; }
  .pros-cons ul { margin: 0.5rem 0 0; padding-right: 1rem; font-size: 0.9rem; }
  .pros-cons li { margin-bottom: 0.25rem; }
  .faq-section { margin: 2rem 0; }
  .faq-item { background: #f8f9fa; border-radius: 8px; margin-bottom: 0.75rem; overflow: hidden; }
  .faq-item summary { padding: 1.25rem 1.5rem; cursor: pointer; font-weight: 600; color: var(--primary-color, #0E2B48); list-style: none; display: flex; justify-content: space-between; align-items: center; }
  .faq-item summary::-webkit-details-marker { display: none; }
  .faq-item summary::after { content: '+'; font-size: 1.5rem; font-weight: 300; }
