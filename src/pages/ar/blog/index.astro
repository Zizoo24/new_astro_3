    background: #EA580C;
  }

  .category-tag[data-category="personal-documents"] {
    background: #2563EB;
  }

  .read-time {
    font-size: 0.8rem;
    color: var(--text-muted, #5a6a7a);
  }

  .post-card h2 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary, #1a1a1a);
    margin: 0 0 0.75rem;
    line-height: 1.6;
  }

  .post-card p {
    font-size: 0.95rem;
    color: var(--text-muted, #5a6a7a);
    line-height: 1.8;
    margin: 0;
    flex-grow: 1;
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }

  .post-footer time {
    font-size: 0.85rem;
    color: var(--text-muted, #5a6a7a);
  }

  .read-more {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--primary-color, #0E2B48);
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }

  .read-more i {
    font-size: 0.7rem;
    transition: transform 0.2s;
  }

  .post-card:hover .read-more i {
    transform: translateX(-4px);
  }

  .post-card.featured {
    grid-column: 1 / -1;
    background: linear-gradient(135deg, #0E2B48 0%, #1a3a5c 100%);
    color: white;
  }

  .post-card.featured h2 {
    font-size: 1.5rem;
    color: white;
  }

  .post-card.featured p {
    color: rgba(255, 255, 255, 0.85);
  }

  .post-card.featured .post-footer {
    border-top-color: rgba(255, 255, 255, 0.2);
  }

  .post-card.featured .post-footer time {
    color: rgba(255, 255, 255, 0.7);
  }

