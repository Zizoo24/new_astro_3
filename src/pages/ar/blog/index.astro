    flex-direction: row-reverse;
    justify-content: flex-end;
  }

  .filter-btn {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    white-space: nowrap;
    background: var(--bg-light, #f8f9fa);
    color: var(--text-muted, #5a6a7a);
    transition: all 0.2s;
    border: 2px solid transparent;
  }

  .filter-btn:hover {
    background: white;
    border-color: var(--cat-color, var(--primary-color));
    color: var(--cat-color, var(--primary-color));
  }

