    background: #f1c40f;
    color: #1a1a1a;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }

  .featured-badge i {
    font-size: 0.6rem;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 0;
  }

  .no-posts i {
    font-size: 3rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

