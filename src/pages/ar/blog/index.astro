  }

  .newsletter-section {
    background: var(--primary-color);
    padding: 3rem 0;
  }

  .newsletter-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .newsletter-content {
    color: white;
  }

  .newsletter-content h2 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
  }

  .newsletter-content p {
    margin: 0;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.8;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn--primary {
    background: var(--accent-color, #FF1654);
    color: white;
  }

  .btn--primary:hover {
