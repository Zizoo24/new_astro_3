 * URL: /ar/services/
 * Target Keywords: خدمات ترجمة, ترجمة معتمدة, مكتب ترجمة
 * Geographic Priority: Abu Dhabi → Dubai → UAE
 */
import BaseLayoutArabic from '../../../layouts/BaseLayoutArabic.astro';

const pageTitle = 'خدمات الترجمة المعتمدة في أبوظبي ودبي | OnlineTranslation.ae';
const metaDescription = 'خدمات ترجمة معتمدة في أبوظبي ودبي. ترجمة قانونية، شهادات، وثائق شخصية، تصديق. معتمد من وزارة العدل. تسليم سريع. واتساب: 971508620217+';

const services = [
  {
    icon: 'fas fa-gavel',
    title: 'الترجمة القانونية',
    description: 'ترجمة معتمدة للعقود والأحكام والتوكيلات ووثائق الشركات. مقبولة في جميع المحاكم الإماراتية.',
    url: '/ar/legal-translation-dubai/',
    items: ['العقود والاتفاقيات', 'الأحكام القضائية', 'التوكيلات', 'وثائق الشركات']
  },
  {
    icon: 'fas fa-user',
    title: 'الوثائق الشخصية',
    description: 'ترجمة شهادات الميلاد والزواج والطلاق والوفاة والشهادات الأكاديمية.',
    url: '/ar/personal-documents/',
    items: ['شهادات الميلاد', 'شهادات الزواج', 'الشهادات الأكاديمية', 'شهادة حسن السيرة']
  },
  {
    icon: 'fas fa-stamp',
    title: 'خدمات التصديق',
    description: 'تصديق الوثائق من وزارة الخارجية والسفارات. سلسلة التصديق الكاملة.',
    url: '/ar/services/attestation/',
    items: ['تصديق وزارة الخارجية', 'تصديق السفارات', 'الأبوستيل', 'التوثيق']
  },
  {
    icon: 'fas fa-passport',
    title: 'ترجمة الفيزا الذهبية',
    description: 'حزمة وثائق كاملة لطلبات الفيزا الذهبية الإماراتية.',
    url: '/ar/services/golden-visa-translation/',
    items: ['الشهادات الأكاديمية', 'كشوف الحسابات البنكية', 'شهادات الراتب', 'صكوك الملكية']
  },
  {
    icon: 'fas fa-globe',
    title: 'توطين الأعمال',
    description: 'توطين المواقع والتطبيقات والمحتوى التسويقي لسوق الإمارات.',
    url: '/ar/specialized-translation/',
    items: ['توطين المواقع', 'تكييف التسويق', 'ترجمة التطبيقات', 'الوثائق التقنية']
  },
  {
    icon: 'fas fa-map-marker-alt',
    title: 'خدمات المواقع',
    description: 'خدمة من الباب إلى الباب في جميع الإمارات.',
    url: '/ar/locations/',
    items: ['أبوظبي', 'دبي', 'الشارقة', 'الإمارات الشمالية']
  }
];

const processSteps = [
  {
    number: 1,
    title: 'أرسل وثائقك',
    description: 'أرسل عبر واتساب أو البريد الإلكتروني. نقبل PDF و JPG و PNG.',
    icon: 'fas fa-mobile-alt'
  },
  {
    number: 2,
    title: 'مراجعة وعرض سعر',
    description: 'خلال دقائق، نؤكد نوع الوثيقة والسعر ووقت التسليم.',
    icon: 'fas fa-clipboard-check'
  },
  {
    number: 3,
    title: 'الترجمة المتخصصة',
    description: 'مترجم متخصص يترجم وثيقتك ومترجم ثانٍ يراجعها.',
    icon: 'fas fa-pen-fancy'
  },
  {
    number: 4,
    title: 'التسليم والتصديق',
    description: 'ترجمة معتمدة بختم وزارة العدل. تسليم رقمي وورقي.',
    icon: 'fas fa-paper-plane'
  }
];

const faqs = [
  {
    question: 'ما الوثائق التي يمكنكم ترجمتها؟',
    answer: 'نترجم جميع الوثائق للاستخدام الحكومي والقضائي والتجاري في الإمارات. الوثائق الشخصية: شهادات الميلاد والزواج والطلاق والوفاة. الوثائق الأكاديمية: الشهادات والكشوف. الوثائق القانونية: العقود والأحكام والتوكيلات.'
  },
  {
    question: 'هل ترجمتكم مقبولة في المحاكم والجهات الحكومية؟',
    answer: 'نعم. مترجمونا مسجلون في وزارة العدل الإماراتية. كل ترجمة تحمل ختم وزارة العدل الرسمي وتوقيع المترجم ورقم تسلسلي ورمز QR. هذا التصديق مقبول في محاكم دبي وأبوظبي ومركز دبي المالي وسوق أبوظبي العالمي وجميع الجهات الحكومية.'
  },
  {
    question: 'كم تستغرق الترجمة؟',
    answer: 'الوثائق ذات الصفحة الواحدة (شهادات الميلاد والزواج) تكتمل خلال 4-6 ساعات. الوثائق متعددة الصفحات (العقود والكشوف) تحتاج 24-48 ساعة. الوثائق القانونية المعقدة قد تحتاج 2-3 أيام عمل. الخدمة العاجلة متاحة.'
  },
  {
    question: 'ما تكلفة خدمات الترجمة؟',
    answer: 'الشهادات القياسية تبدأ من 150 درهم للصفحة مع تصديق وزارة العدل. الوثائق متعددة الصفحات (5+ صفحات) بسعر 120 درهم للصفحة. نقدم عروض أسعار دقيقة بعد مراجعة وثائقك. السعر المعروض نهائي - لا رسوم مخفية.'
  },
  {
    question: 'ما اللغات التي تترجمونها؟',
    answer: 'نترجم أكثر من 43 لغة: العربية، الإنجليزية، الفرنسية، الألمانية، الإسبانية، الروسية، الصينية، الهندية، الأوردية، التاغالوغ، البنغالية، الفارسية، التركية وغيرها. العربية-الإنجليزية هي الأكثر شيوعاً للاستخدام في الإمارات.'
  },
  {
    question: 'هل تقدمون خدمات التصديق؟',
    answer: 'نعم. نتعامل مع سلسلة التصديق الكاملة: التوثيق في بلدك، تصديق وزارة الخارجية، تصديق السفارة الإماراتية، وختم وزارة الخارجية الإماراتية. نتتبع وثائقك في كل خطوة.'
  }
];
---

<BaseLayoutArabic
  title={pageTitle}
  description={metaDescription}
>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <i class="fas fa-certificate"></i>
          <span>معتمد من وزارة العدل</span>
        </div>

        <h1>خدمات الترجمة المعتمدة في الإمارات</h1>

        <p class="hero-lead">
          مكتب ترجمة معتمد في أبوظبي ودبي. ترجمة قانونية وشهادات ووثائق شخصية وتصديق.
          خدمة سريعة وموثوقة مع ضمان القبول في جميع الجهات الحكومية.
        </p>

        <div class="hero-ctas">
          <a href="https://wa.me/971508620217" class="cta-primary">
            <i class="fab fa-whatsapp"></i>
            أرسل وثائقك عبر واتساب
          </a>
          <a href="/ar/contact/" class="cta-secondary">
            اطلب عرض سعر
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="services-section">
    <div class="container">
      <h2>خدماتنا</h2>
      <p class="section-intro">
        نقدم مجموعة شاملة من خدمات الترجمة والتصديق لتلبية جميع احتياجاتك في الإمارات.
      </p>

      <div class="services-grid">
        {services.map(service => (
          <a href={service.url} class="service-card">
            <div class="service-icon">
              <i class={service.icon}></i>
            </div>
            <h3>{service.title}</h3>
            <p>{service.description}</p>
            <ul>
              {service.items.map(item => (
                <li><i class="fas fa-check"></i> {item}</li>
              ))}
            </ul>
            <span class="card-link">اعرف المزيد <i class="fas fa-arrow-left"></i></span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section">
    <div class="container">
      <h2>كيف نعمل</h2>
      <p class="section-intro">
        عملية بسيطة من أربع خطوات للحصول على ترجمتك المعتمدة.
      </p>

      <div class="process-grid">
        {processSteps.map(step => (
          <div class="process-step">
            <div class="step-number">{step.number}</div>
            <div class="step-icon">
              <i class={step.icon}></i>
            </div>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="why-section">
    <div class="container">
      <h2>لماذا تختارنا؟</h2>

      <div class="benefits-grid">
        <div class="benefit-card">
          <i class="fas fa-shield-alt"></i>
          <h3>معتمد رسمياً</h3>
          <p>رخصة وزارة العدل #701. ترجمة مقبولة في جميع المحاكم والجهات الحكومية.</p>
        </div>
        <div class="benefit-card">
          <i class="fas fa-bolt"></i>
          <h3>تسليم سريع</h3>
          <p>ترجمة خلال 60 دقيقة للوثائق القياسية. خدمة عاجلة متاحة.</p>
        </div>
        <div class="benefit-card">
          <i class="fas fa-hand-holding-usd"></i>
          <h3>تسعير شفاف</h3>
          <p>عروض أسعار ثابتة. لا رسوم مخفية. السعر المعروض هو ما تدفعه.</p>
        </div>
        <div class="benefit-card">
          <i class="fas fa-headset"></i>
          <h3>دعم مستمر</h3>
          <p>متاحون 7 أيام في الأسبوع عبر واتساب والهاتف والبريد الإلكتروني.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2>الأسئلة الشائعة</h2>

      <div class="faq-list">
        {faqs.map(faq => (
          <details class="faq-item" name="faq">
            <summary>
              <span class="faq-question">{faq.question}</span>
              <i class="fas fa-chevron-down"></i>
            </summary>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>جاهز للبدء؟</h2>
      <p>أرسل وثائقك عبر واتساب واحصل على عرض سعر فوري.</p>

      <div class="cta-buttons">
        <a href="https://wa.me/971508620217" class="cta-primary">
          <i class="fab fa-whatsapp"></i>
          أرسل عبر واتساب
        </a>
        <a href="tel:+971508620217" class="cta-secondary">
          <i class="fas fa-phone"></i>
          اتصل الآن
        </a>
      </div>

      <p class="contact-info">
        <span class="ltr-content">+971 50 862 0217</span>
      </p>
    </div>
  </section>

  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "خدمات الترجمة المعتمدة",
    "description": "خدمات ترجمة معتمدة في أبوظبي ودبي من وزارة العدل",
    "provider": {
      "@type": "LocalBusiness",
      "name": "OnlineTranslation.ae",
      "telephone": "+971508620217"
    },
    "areaServed": ["أبوظبي", "دبي", "الإمارات"]
  })} />

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />
</BaseLayoutArabic>

<style>
  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, var(--surface-navy, #0E2B48) 0%, #1a3a5c 100%);
    color: #ffffff;
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 22, 84, 0.2);
    color: var(--accent-coral, #FF1654);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .hero-section h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .hero-lead {
    font-size: 1.15rem;
    line-height: 1.8;
    opacity: 0.95;
    margin-bottom: 2rem;
    max-width: 700px;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #25D366;
    color: #ffffff;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .cta-primary:hover {
    background: #20bd5a;
    transform: translateY(-2px);
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: transparent;
    color: #ffffff;
    padding: 1rem 2rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .cta-secondary:hover {
    border-color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Sections */
  section {
    padding: 4rem 0;
  }

  section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--surface-navy, #0E2B48);
    margin-bottom: 1rem;
    text-align: center;
  }

  .section-intro {
    text-align: center;
    font-size: 1.1rem;
    color: var(--text-secondary, #64748b);
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
  }

  /* Services Grid */
  .services-section {
    background: var(--bg-secondary, #f8f9fa);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .service-card {
    background: #ffffff;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    display: block;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .service-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--accent-coral, #FF1654), #ff6b6b);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
  }

  .service-icon i {
    color: #ffffff;
    font-size: 1.5rem;
  }

  .service-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--surface-navy, #0E2B48);
    margin-bottom: 0.75rem;
  }

  .service-card > p {
    color: var(--text-secondary, #64748b);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .service-card ul {
    list-style: none;
    padding: 0;
    margin: 0 0 1rem;
  }

  .service-card li {
    padding: 0.4rem 0;
    color: var(--text-secondary, #64748b);
    font-size: 0.9rem;
  }

  .service-card li i {
    color: var(--accent-coral, #FF1654);
    margin-left: 0.5rem;
    font-size: 0.8rem;
  }

  .card-link {
    color: var(--accent-coral, #FF1654);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .card-link i {
    margin-right: 0.25rem;
    transition: transform 0.2s ease;
  }

  .service-card:hover .card-link i {
    transform: translateX(-4px);
  }

  /* Process Grid */
  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .process-step {
    text-align: center;
  }

  .step-number {
    width: 3rem;
    height: 3rem;
    background: var(--accent-coral, #FF1654);
    color: #ffffff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 auto 1rem;
  }

  .step-icon {
    margin-bottom: 0.75rem;
  }

  .step-icon i {
    font-size: 1.75rem;
    color: var(--surface-navy, #0E2B48);
  }

  .process-step h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--surface-navy, #0E2B48);
    margin-bottom: 0.5rem;
  }

  .process-step p {
    color: var(--text-secondary, #64748b);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Benefits Grid */
  .why-section {
    background: var(--bg-secondary, #f8f9fa);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .benefit-card {
    background: #ffffff;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .benefit-card i {
    font-size: 2.5rem;
    color: var(--accent-coral, #FF1654);
    margin-bottom: 1rem;
  }

  .benefit-card h3 {
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--surface-navy, #0E2B48);
    margin-bottom: 0.75rem;
  }

  .benefit-card p {
    color: var(--text-secondary, #64748b);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* FAQ Section */
  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    background: #ffffff;
    border-radius: 8px;
    margin-bottom: 1rem;
    overflow: hidden;
    border: 1px solid var(--border-light, #e2e8f0);
  }

  .faq-item summary {
    padding: 1.25rem 1.5rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    color: var(--surface-navy, #0E2B48);
    list-style: none;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary i {
    color: var(--accent-coral, #FF1654);
    transition: transform 0.2s ease;
  }

  .faq-item[open] summary i {
    transform: rotate(180deg);
  }

  .faq-answer {
    padding: 0 1.5rem 1.25rem;
    color: var(--text-secondary, #64748b);
    line-height: 1.7;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--surface-navy, #0E2B48) 0%, #1a3a5c 100%);
    color: #ffffff;
    text-align: center;
  }

  .cta-section h2 {
    color: #ffffff;
  }

  .cta-section > .container > p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .contact-info {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .ltr-content {
    direction: ltr;
    unicode-bidi: embed;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 1.75rem;
    }

    .hero-ctas {
      flex-direction: column;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
    }

    section {
      padding: 3rem 0;
    }

    section h2 {
      font-size: 1.5rem;
    }
  }
</style>
