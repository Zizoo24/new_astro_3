  .cta-box h3 { font-size: 1.5rem; margin: 0 0 0.75rem; color: white; }
  .cta-box p { margin: 0 0 1.5rem; color: rgba(255,255,255,0.9); }
  @media (max-width: 768px) { .hero-section { padding: 2rem 0; } .doc-grid, .use-grid, .process-steps { grid-template-columns: 1fr 1fr; } }
