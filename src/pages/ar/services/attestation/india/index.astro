const pageDescription = 'تصديق الوثائق الهندية في أبوظبي ودبي. سلسلة كاملة: كاتب العدل وHRD وMEA وسفارة الإمارات ووزارة الخارجية. تنسيق من الإمارات خلال 2-3 أسابيع.';
---

<BaseLayoutArabic
  title={pageTitle}
  description={pageDescription}
  canonicalURL="https://onlinetranslation.ae/ar/services/attestation/india/"
>
  <!-- FAQ Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />

  <!-- Service Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "India Document Attestation Service",
    "alternateName": "تصديق الوثائق الهندية",
    "description": pageDescription,
    "provider": {
      "@type": "LocalBusiness",
      "name": "OnlineTranslation.ae",
      "@id": "https://onlinetranslation.ae/#organization"
    },
    "areaServed": {
      "@type": "Country",
      "name": "United Arab Emirates"
    },
    "serviceType": "Document Attestation"
  })} />

  <main class="service-page rtl-page" dir="rtl">

    <!-- Hero Section -->
    <section class="hero-section bg-navy">
      <div class="container">
        <nav class="breadcrumb-nav" aria-label="مسار التنقل">
          <ol class="breadcrumb">
            <li><a href="/ar/">الرئيسية</a></li>
            <li><a href="/ar/services/attestation/">تصديق الوثائق</a></li>
            <li aria-current="page">الوثائق الهندية</li>
          </ol>
        </nav>

        <div class="hero-content">
          <div class="service-badge">
            <i class="fas fa-certificate"></i>
            <span>خدمة معتمدة</span>
          </div>

          <h1>تصديق الوثائق الهندية للإمارات</h1>

          <p class="hero-intro">
            سلسلة التصديق الكاملة من الهند إلى الإمارات. نتعامل مع HRD على مستوى الولاية،
            MEA في نيودلهي، سفارة الإمارات، ووزارة الخارجية الإماراتية—كل ذلك من مكتبنا في دبي.
          </p>

          <ul class="hero-features">
            <li><i class="fas fa-clock"></i> 2-3 أسابيع للسلسلة الكاملة</li>
            <li><i class="fas fa-map-marker-alt"></i> جميع الولايات الهندية مشمولة</li>
            <li><i class="fas fa-shield-alt"></i> بدون سفر—ننسق من الإمارات</li>
            <li><i class="fas fa-receipt"></i> تسعير شامل بدون رسوم مخفية</li>
          </ul>

          <div class="hero-cta">
            <a href="https://wa.me/971508620217" class="btn btn-coral btn-lg">
              <i class="fab fa-whatsapp"></i>
              استشارة مجانية عبر واتساب
            </a>
            <a href="tel:+971508620217" class="btn btn-outline-light btn-lg">
              <i class="fas fa-phone"></i>
              <span dir="ltr">+971 50 862 0217</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Attestation Chain Visual -->
    <section class="chain-section">
      <div class="container">
        <h2 class="section-title">سلسلة تصديق الوثائق الهندية</h2>
        <p class="section-subtitle">
          الإمارات ليست عضواً في اتفاقية لاهاي، لذا الوثائق الهندية تحتاج سلسلة تصديق كاملة من 5 خطوات
        </p>

        <div class="attestation-chain">
          {attestationChain.map((step, index) => (
            <div class="chain-step">
              <div class="step-number">{step.step}</div>
              <div class="step-content">
                <h3>{step.title}</h3>
                <span class="step-en">{step.titleEn}</span>
                <p>{step.desc}</p>
                <span class="step-timeline">
                  <i class="fas fa-clock"></i> {step.timeline}
                </span>
              </div>
              {index < attestationChain.length - 1 && (
                <div class="chain-arrow">
                  <i class="fas fa-arrow-left"></i>
                </div>
              )}
            </div>
          ))}
        </div>

        <div class="chain-total">
          <i class="fas fa-calendar-alt"></i>
          <strong>إجمالي المدة:</strong> 2-3 أسابيع (المعالجة السريعة: 10-12 يوم عمل)
        </div>
      </div>
    </section>

    <!-- Document Categories -->
    <section class="documents-section bg-light">
      <div class="container">
        <h2 class="section-title">أنواع الوثائق الهندية التي نصدقها</h2>

        <div class="document-grid">
          {documentCategories.map(cat => (
            <div class="document-card">
              <div class="card-icon">
                <i class={`fas fa-${cat.icon}`}></i>
              </div>
              <h3>{cat.category}</h3>
              <ul class="document-list">
                {cat.items.map(item => (
                  <li><i class="fas fa-check"></i> {item}</li>
                ))}
              </ul>
              <div class="document-path">
                <strong>مسار التصديق:</strong>
                <p>{cat.path}</p>
              </div>
              <div class="document-use">
                <strong>الاستخدام:</strong> {cat.useCase}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- State Requirements -->
    <section class="states-section">
      <div class="container">
        <h2 class="section-title">متطلبات HRD حسب الولاية</h2>
        <p class="section-subtitle">
          كل ولاية هندية لها إجراءات HRD مختلفة. لدينا شبكات في جميع الولايات الرئيسية.
        </p>

        <div class="states-grid">
          {stateRequirements.map(state => (
            <div class="state-card">
              <div class="state-header">
                <h3>{state.state}</h3>
                <span class="state-city">{state.city}</span>
              </div>
              <div class="state-details">
                <div class="detail-row">
                  <span class="label">مكتب HRD:</span>
                  <span class="value" dir="ltr">{state.hrdOffice}</span>
                </div>
                <div class="detail-row">
                  <span class="label">المدة:</span>
                  <span class="value">{state.timeline}</span>
                </div>
                <div class="detail-row">
                  <span class="label">ملاحظات:</span>
                  <span class="value">{state.notes}</span>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="states-note">
          <i class="fas fa-info-circle"></i>
          <p>
            <strong>ولايات أخرى:</strong> نتعامل أيضاً مع غوجارات، راجستان، البنغال الغربية،
            البنجاب، أوتار براديش، وجميع الولايات الأخرى. تواصل معنا للمتطلبات المحددة.
          </p>
        </div>
      </div>
    </section>

    <!-- Why UAE Requires Full Chain -->
    <section class="info-section bg-navy">
      <div class="container">
        <div class="info-grid">
          <div class="info-content">
            <h2>لماذا تحتاج الوثائق الهندية سلسلة تصديق كاملة؟</h2>

            <p>
              الهند عضو في اتفاقية لاهاي منذ يوليو 2005، وتُصدر MEA أبوستيل معترف به دولياً.
              لكن الإمارات ليست عضواً في الاتفاقية.
            </p>

            <p>
              هذا يعني أن الأبوستيل الهندي وحده لا يكفي للإمارات. بدلاً من ذلك،
              تحتاج الوثائق تصديق سفارة الإمارات في نيودلهي ثم وزارة الخارجية الإماراتية.
            </p>

            <div class="info-comparison">
              <div class="comparison-item wrong">
                <i class="fas fa-times-circle"></i>
                <div>
                  <strong>لا يكفي:</strong>
                  <span>أبوستيل MEA فقط</span>
                </div>
              </div>
              <div class="comparison-item correct">
                <i class="fas fa-check-circle"></i>
                <div>
                  <strong>مطلوب:</strong>
                  <span>MEA + سفارة الإمارات + MOFA</span>
                </div>
              </div>
            </div>
          </div>

          <div class="info-highlight">
            <h3>هل لديك وثيقة بتصديق MEA فقط؟</h3>
            <p>
              إذا كان لديك وثيقة هندية مع أبوستيل أو تصديق MEA فقط،
              يمكننا إكمال السلسلة (سفارة الإمارات + MOFA) في 1-2 أسبوع.
            </p>
            <a href="https://wa.me/971508620217?text=لدي%20وثيقة%20هندية%20بتصديق%20MEA%20فقط" class="btn btn-coral">
              <i class="fab fa-whatsapp"></i>
              استفسر الآن
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="process-section">
      <div class="container">
        <h2 class="section-title">كيف نعمل</h2>
        <p class="section-subtitle">عملية واضحة من البداية إلى النهاية</p>

        <div class="process-steps">
          <div class="process-step">
            <div class="step-icon">
              <span>1</span>
            </div>
            <h3>أرسل وثائقك</h3>
            <p>
              صور واضحة عبر واتساب. نتحقق من نوع الوثيقة، الولاية المصدرة،
              والتصديقات الموجودة (إن وجدت).
            </p>
          </div>

          <div class="process-step">
            <div class="step-icon">
              <span>2</span>
            </div>
            <h3>عرض سعر تفصيلي</h3>
            <p>
              تحصل على عرض شامل يتضمن: رسوم الخدمة، رسوم HRD، رسوم MEA،
              رسوم السفارة، MOFA، والشحن. بدون مفاجآت.
            </p>
          </div>

          <div class="process-step">
            <div class="step-icon">
              <span>3</span>
            </div>
            <h3>استلام آمن</h3>
            <p>
              نستلم الأصول من موقعك في دبي، أبوظبي، الشارقة، أو أي مكان
              في الإمارات. شحن مؤمن مع التتبع.
            </p>
          </div>

          <div class="process-step">
            <div class="step-icon">
              <span>4</span>
            </div>
            <h3>ننسق السلسلة الكاملة</h3>
            <p>
              نرسل الوثائق لشركائنا في الهند. نتابع HRD، MEA، السفارة،
              ثم MOFA في الإمارات. تحديثات منتظمة.
            </p>
          </div>

          <div class="process-step">
            <div class="step-icon">
              <span>5</span>
            </div>
            <h3>التسليم</h3>
            <p>
              نسلمك الوثائق المصدقة بالكامل إلى موقعك.
              جاهزة للتقديم لأي جهة في الإمارات.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section class="pricing-section bg-light">
      <div class="container">
        <h2 class="section-title">تكاليف تصديق الوثائق الهندية</h2>
        <p class="section-subtitle">
          الأسعار تشمل جميع الرسوم: الخدمة، HRD، MEA، السفارة، MOFA، والشحن
        </p>

        <div class="pricing-grid">
          <div class="pricing-card">
            <div class="pricing-header">
              <h3>الشهادات التعليمية</h3>
              <span class="pricing-badge">الأكثر طلباً</span>
            </div>
            <div class="pricing-details">
              <div class="price-range">
                <span class="price">من 800 درهم</span>
                <span class="per">للوثيقة الواحدة</span>
              </div>
              <ul class="pricing-includes">
                <li><i class="fas fa-check"></i> كاتب العدل + HRD</li>
                <li><i class="fas fa-check"></i> MEA نيودلهي</li>
                <li><i class="fas fa-check"></i> سفارة الإمارات</li>
                <li><i class="fas fa-check"></i> MOFA الإمارات</li>
                <li><i class="fas fa-check"></i> الشحن من/إلى الهند</li>
              </ul>
              <span class="pricing-timeline">
                <i class="fas fa-clock"></i> 2-3 أسابيع
              </span>
            </div>
          </div>

          <div class="pricing-card">
            <div class="pricing-header">
