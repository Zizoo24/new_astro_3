const faqs = [
  {
    question: "هل جميع مستندات محاكم أبوظبي تحتاج ترجمة عربية؟",
    answer: "نعم. محاكم أبوظبي (ADJD) تعمل بالقانون المدني الإماراتي واللغة العربية هي اللغة الرسمية. كل مستند بلغة أجنبية يُقدم للمحكمة يتطلب ترجمة عربية معتمدة من وزارة العدل. بدون الترجمة المعتمدة، المحكمة لا تقبل المستند."
  },
  {
    question: "ما الفرق بين محاكم ADJD ومحاكم ADGM؟",
    answer: "محاكم ADJD تعمل بالقانون المدني الإماراتي والعربية لغتها الرسمية — كل مستند أجنبي يحتاج ترجمة. محاكم ADGM تعمل بالقانون الإنجليزي العام والإنجليزية لغتها الرسمية — لا تحتاج ترجمة عربية. إذا انتقلت قضية من ADGM للمحاكم المحلية، تحتاج ترجمة كل الملفات."
  },
  {
    question: "كم تستغرق ترجمة مستندات المحاكم؟",
    answer: "المستندات القياسية (1-5 صفحات) تكتمل نفس اليوم خلال 4-6 ساعات. الأحكام والعقود الطويلة تستغرق 24-48 ساعة. ملفات القضايا الكبيرة (50+ صفحة) تحتاج 3-5 أيام. خدمة VIP ساعة واحدة متاحة للمواعيد النهائية العاجلة."
  },
  {
    question: "هل تتعاملون مع قضايا الأحوال الشخصية (الطلاق والحضانة)؟",
    answer: "نعم. قضايا الأحوال الشخصية في محاكم أبوظبي تتطلب ترجمة عقود الزواج، شهادات الميلاد، اتفاقيات الحضانة، والمراسلات. نفهم المصطلحات المتخصصة في قانون الأحوال الشخصية ونضمن الدقة في ترجمة الأسماء والتواريخ."
  },
  {
    question: "ما متطلبات ترجمة تسجيل الوصايا في أبوظبي؟",
    answer: "تسجيل الوصايا في محاكم أبوظبي يتطلب ترجمة عربية معتمدة للوصية الأصلية وأي مرفقات. هذا يختلف عن تسجيل الوصايا في DIFC الذي يقبل الإنجليزية. نترجم الوصايا مع الحفاظ على المصطلحات القانونية الدقيقة لشروط التوزيع والمستفيدين."
  },
  {
    question: "هل ترجماتكم مقبولة في جميع محاكم أبوظبي؟",
    answer: "نعم. ترجماتنا المعتمدة من وزارة العدل (رخصة رقم 701) مقبولة في جميع فروع ADJD: المحكمة الابتدائية، محكمة الاستئناف، محكمة النقض، ومحاكم الأحوال الشخصية. الختم الرسمي وتوقيع المترجم المعتمد يؤكدان صحة الترجمة."
  },
  {
    question: "ما تكلفة ترجمة مستندات المحاكم؟",
    answer: "ترجمة مستندات المحاكم تبدأ من 150 درهم للصفحة شاملة اعتماد وزارة العدل. الأحكام والعقود الطويلة تُسعر بالصفحة مع تخفيض للمستندات الكبيرة. خدمة VIP المستعجلة تضيف 50%. نقدم عرض سعر دقيق بعد مراجعة المستند."
  },
  {
    question: "هل المستندات الأجنبية تحتاج تصديق قبل تقديمها لمحاكم أبوظبي؟",
    answer: "نعم. المستندات الأجنبية تحتاج سلسلة التصديق الكاملة: توثيق في الدولة المصدرة، تصديق سفارة الإمارات، تصديق وزارة الخارجية الإماراتية. الإمارات ليست عضواً في اتفاقية لاهاي، لذا الأبوستيل وحده غير كافٍ. بعد التصديق، تحتاج ترجمة معتمدة."
  },
  {
    question: "هل تتعاملون مع النزاعات التجارية في محاكم أبوظبي؟",
    answer: "نعم. النزاعات التجارية في ADJD تتطلب ترجمة العقود والمراسلات والفواتير والبيانات المالية وتقارير الخبراء. نحتفظ بقواعد بيانات المصطلحات للقضايا المستمرة لضمان الاتساق عبر مستندات متعددة."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
