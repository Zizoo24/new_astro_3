              <i class="fas fa-align-justify"></i>
              <span>محاذاة صحيحة</span>
            </div>
            <div class="bi-feature">
              <i class="fas fa-list-ol"></i>
              <span>ترقيم متطابق</span>
            </div>
            <div class="bi-feature">
              <i class="fas fa-balance-scale"></i>
              <span>سلطة قانونية متساوية</span>
            </div>
          </div>
        </div>

        <div class="bilingual-visual">
          <div class="doc-preview">
            <div class="doc-column arabic">
              <span class="col-label">العربية</span>
              <div class="doc-lines">
                <span></span>
                <span></span>
                <span></span>
              </div>
