const pageDescription = 'ترجمة شهادة حسن السيرة مقبولة في GDRFA وMOHRE. ترجمة معتمدة من وزارة العدل لتأشيرات العمل والإقامة والإقامة الذهبية. تسليم في نفس اليوم.';
---

<BaseLayoutArabic
  title={pageTitle}
  description={pageDescription}
  canonicalURL="https://onlinetranslation.ae/ar/personal/immigration/pcc/"
>
  <!-- FAQ Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />

  <!-- Service Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Police Clearance Certificate Translation",
    "alternateName": "ترجمة شهادة حسن السيرة",
    "description": pageDescription,
    "provider": {
      "@type": "LocalBusiness",
      "name": "OnlineTranslation.ae",
      "@id": "https://onlinetranslation.ae/#organization"
    },
    "areaServed": {
      "@type": "Country",
      "name": "United Arab Emirates"
    },
    "serviceType": "Legal Translation"
  })} />

  <main class="service-page rtl-page" dir="rtl">

    <!-- Hero Section -->
    <section class="hero-section bg-navy">
      <div class="container">
        <nav class="breadcrumb-nav" aria-label="مسار التنقل">
