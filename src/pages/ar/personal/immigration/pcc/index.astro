// Validity periods
const validityPeriods = [
  { country: "الإمارات (GDRFA)", validity: "3-6 أشهر", note: "يختلف حسب نوع التأشيرة" },
  { country: "الهند (MEA)", validity: "6 أشهر", note: "من تاريخ الإصدار" },
