  .freezone-card h3 { font-size: 1.1rem; margin-bottom: 0.75rem; color: var(--primary-color); }
  .freezone-card p { font-size: 0.9rem; color: var(--text-muted); line-height: 1.6; margin: 0; }

  .delivery-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; }
  .delivery-area { background: var(--bg-light); padding: 1.5rem; border-radius: 12px; }
  .delivery-area h3 { font-size: 1.1rem; margin-bottom: 0.75rem; color: var(--primary-color); }
  .delivery-area p { font-size: 0.9rem; color: var(--text-muted); line-height: 1.6; margin: 0; }

