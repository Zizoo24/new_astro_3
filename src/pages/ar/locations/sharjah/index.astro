  .pricing-features li::before { content: '✓'; position: absolute; right: 0; color: var(--accent-color); font-weight: 700; }

  .faq-grid { display: grid; gap: 1.5rem; }
  .faq-item { background: var(--bg-light); padding: 2rem; border-radius: 1rem; }
  .faq-item h3 { font-size: 1.1rem; margin-bottom: 1rem; color: var(--primary-color); }
  .faq-item p { line-height: 1.7; color: var(--text-muted); margin: 0; }

