---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RelatedServices from '../../components/RelatedServices.astro';
import CrossSiloLinks from '../../components/CrossSiloLinks.astro';
---

<BaseLayout
  title="Specialized Translation Dubai | Medical & Technical"
  description="Specialized translation in Dubai. Medical reports, technical manuals, hospitality menus, website localization. Industry experts."
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "Specialized Translation Services Dubai",
      "description": "Industry-specific translation services including medical, technical, hospitality, and digital content translation",
      "provider": {
        "@type": "Organization",
        "name": "OnlineTranslation.ae",
        "address": { "@type": "PostalAddress", "addressLocality": "Dubai", "addressCountry": "AE" }
      },
      "areaServed": ["Dubai", "Abu Dhabi", "Sharjah", "UAE"],
      "serviceType": ["Medical Translation", "Technical Translation", "Hospitality Translation", "Website Localization"],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Specialized Translation Services",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Medical Document Translation" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Technical Manual Translation" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Menu & Hospitality Translation" } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Website Localization" } }
        ]
      }
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://onlinetranslation.ae/" },
        { "@type": "ListItem", "position": 2, "name": "Specialized Translation", "item": "https://onlinetranslation.ae/specialized-translation/" }
      ]
    })} />
  </Fragment>

  <section class="hero-section">
    <div class="container">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">HOME</a>
        <span class="separator">&gt;</span>
        <span class="current">SPECIALIZED TRANSLATION</span>
      </nav>

      <h1>Specialized Translation Services in Dubai</h1>
      <p class="hero-subtitle">Industry Experts for Technical Accuracy</p>
      <p class="hero-intro">Generic translation doesn't work for specialized content. <a href="/specialized/medical/">Medical terminology</a>, <a href="/specialized/technical/">technical specifications</a>, <a href="/industries/legal/">legal jargon</a>, and industry-specific language require translators with subject matter expertise. Our specialized translation teams combine <a href="/legal-translation-dubai/">MOJ-certified</a> linguistic skills with deep industry knowledge to deliver translations that professionals trust.</p>

      <div class="hero-cta">
        <a href="https://wa.me/971508620217?text=I%20need%20specialized%20translation" class="btn btn-accent">
          <i class="fab fa-whatsapp"></i> Discuss Your Project
        </a>
        <a href="#services" class="btn btn-ghost">
          View Services <i class="fas fa-arrow-down"></i>
        </a>
      </div>
    </div>
  </section>

  <section id="services" class="section bg-white">
    <div class="container">
      <div class="section-header">
        <h2>Specialized Translation Categories</h2>
        <p>Select your industry for tailored translation solutions.</p>
      </div>

      <div class="service-grid">
        <a href="/specialized/medical/" class="service-card featured">
          <div class="service-badge">Most Requested</div>
          <div class="service-icon"><i class="fas fa-file-medical"></i></div>
          <h3>Medical Translation</h3>
          <p>Medical reports, patient records, clinical trials, pharmaceutical documents. DHA and HAAD-accepted translations for healthcare compliance.</p>
          <ul class="service-features">
            <li><i class="fas fa-check"></i> Medical terminology expertise</li>
            <li><i class="fas fa-check"></i> Patient confidentiality protocols</li>
            <li><i class="fas fa-check"></i> Regulatory compliance</li>
          </ul>
          <span class="card-link">Learn More <i class="fas fa-arrow-right"></i></span>
        </a>

        <a href="/specialized/technical/" class="service-card">
          <div class="service-icon"><i class="fas fa-cogs"></i></div>
          <h3>Technical Translation</h3>
          <p>Engineering specifications, user manuals, safety documentation, technical drawings. Precision translation for manufacturing and construction.</p>
          <ul class="service-features">
            <li><i class="fas fa-check"></i> Engineering backgrounds</li>
            <li><i class="fas fa-check"></i> CAD documentation support</li>
            <li><i class="fas fa-check"></i> Safety compliance</li>
          </ul>
          <span class="card-link">Learn More <i class="fas fa-arrow-right"></i></span>
        </a>

        <a href="/specialized/hospitality/" class="service-card">
          <div class="service-icon"><i class="fas fa-utensils"></i></div>
          <h3>Hospitality Translation</h3>
          <p>Restaurant menus, hotel collateral, tourism content, guest communications. Culturally-adapted translations that resonate with your audience.</p>
          <ul class="service-features">
            <li><i class="fas fa-check"></i> Menu localization</li>
            <li><i class="fas fa-check"></i> Cultural adaptation</li>
            <li><i class="fas fa-check"></i> Tourism expertise</li>
          </ul>
          <span class="card-link">Learn More <i class="fas fa-arrow-right"></i></span>
        </a>

        <a href="/specialized/digital/" class="service-card">
          <div class="service-icon"><i class="fas fa-globe"></i></div>
          <h3>Website Localization</h3>
          <p>Website content, apps, software interfaces, digital marketing. SEO-optimized translations for Arabic-speaking markets.</p>
          <ul class="service-features">
            <li><i class="fas fa-check"></i> SEO optimization</li>
            <li><i class="fas fa-check"></i> RTL formatting</li>
            <li><i class="fas fa-check"></i> CMS integration</li>
          </ul>
          <span class="card-link">Learn More <i class="fas fa-arrow-right"></i></span>
        </a>
      </div>
    </div>
  </section>

  <section class="section bg-light">
    <div class="container">
      <div class="section-header">
        <h2>Why Specialized Translation Matters</h2>
        <p>The difference between generic and specialized translation.</p>
      </div>

      <div class="comparison-grid">
        <div class="comparison-card bad">
          <div class="comparison-header">
            <i class="fas fa-times-circle"></i>
            <h3>Generic Translation</h3>
          </div>
          <ul>
            <li>Word-for-word translation without context</li>
            <li>Technical terms lost or mistranslated</li>
            <li>Industry conventions ignored</li>
            <li>Potential compliance issues</li>
            <li>Reader confusion and errors</li>
          </ul>
        </div>

        <div class="comparison-card good">
          <div class="comparison-header">
            <i class="fas fa-check-circle"></i>
            <h3>Specialized Translation</h3>
          </div>
          <ul>
            <li>Context-aware translation by experts</li>
            <li>Accurate technical terminology</li>
            <li>Industry standards followed</li>
            <li>Regulatory compliance ensured</li>
            <li>Professional, trustworthy output</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <div class="section-header">
        <h2>Industries We Serve</h2>
        <p>Deep expertise across key sectors of the UAE economy.</p>
      </div>

      <div class="industry-grid">
        <a href="/industries/healthcare/" class="industry-item">
          <i class="fas fa-heartbeat"></i>
          <h3>Healthcare</h3>
          <p>Hospitals, clinics, pharmaceutical companies, <a href="/specialized/medical/">medical document translation</a></p>
        </a>

        <div class="industry-item">
          <i class="fas fa-hard-hat"></i>
          <h3>Construction</h3>
          <p>Contractors, engineering firms, <a href="/specialized/technical/">technical documentation</a></p>
        </div>

        <div class="industry-item">
          <i class="fas fa-oil-can"></i>
          <h3>Oil & Gas</h3>
          <p>Energy companies, offshore operations, HSE documentation</p>
        </div>

        <div class="industry-item">
          <i class="fas fa-plane"></i>
          <h3>Aviation</h3>
          <p>Airlines, airports, <a href="/specialized/technical/">maintenance documentation</a></p>
        </div>

        <div class="industry-item">
          <i class="fas fa-hotel"></i>
          <h3>Hospitality</h3>
          <p>Hotels, restaurants, <a href="/specialized/hospitality/">menu translation</a>, tourism content</p>
        </div>

        <a href="/industries/e-commerce/" class="industry-item">
          <i class="fas fa-laptop-code"></i>
          <h3>Technology</h3>
          <p>Software companies, <a href="/specialized/digital/">website localization</a>, IT providers</p>
        </a>

        <a href="/industries/e-commerce/" class="industry-item">
          <i class="fas fa-shopping-cart"></i>
          <h3>Retail & E-commerce</h3>
          <p>Online retailers, <a href="/specialized/digital/">digital content</a>, consumer brands</p>
        </a>

        <div class="industry-item">
          <i class="fas fa-university"></i>
          <h3>Finance</h3>
          <p>Banks, investment firms, <a href="/specialized/financial/">financial documents</a>, fintech</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-light">
    <div class="container">
      <div class="section-header">
        <h2>Our Specialized Translation Process</h2>
        <p>Quality-assured workflow for complex projects.</p>
      </div>

      <div class="process-grid">
        <div class="process-step">
          <div class="step-number">1</div>
          <h3>Expert Assignment</h3>
          <p>Your project is assigned to a translator with verified expertise in your industry and document type.</p>
        </div>

        <div class="process-step">
          <div class="step-number">2</div>
          <h3>Terminology Research</h3>
          <p>Industry-specific glossaries and reference materials are compiled for consistent terminology.</p>
        </div>

        <div class="process-step">
          <div class="step-number">3</div>
          <h3>Translation & Review</h3>
          <p>Primary translation followed by expert review for technical accuracy and linguistic quality.</p>
        </div>

        <div class="process-step">
          <div class="step-number">4</div>
          <h3>Quality Assurance</h3>
          <p>Final QA check including terminology verification, formatting review, and compliance check.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-dark">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-number">50+</div>
          <div class="stat-label">Industry Experts</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">15</div>
          <div class="stat-label">Specialized Sectors</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">10K+</div>
          <div class="stat-label">Technical Projects</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">99%</div>
          <div class="stat-label">Accuracy Rate</div>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <div class="section-header">
        <h2>Popular Service Packages</h2>
        <p>Bundled solutions for common requirements.</p>
      </div>

      <div class="package-grid">
        <a href="/services/golden-visa-translation/" class="package-card">
          <div class="package-icon"><i class="fas fa-star"></i></div>
          <div class="package-badge">Popular</div>
          <h3>Golden Visa Package</h3>
          <p>Complete document package for <a href="/services/golden-visa-translation/">Golden Visa applications</a> including <a href="/personal/vital-records/birth/">birth certificates</a>, <a href="/personal/immigration/bank/">bank statements</a>, and supporting documents.</p>
          <span class="package-link">View Package <i class="fas fa-arrow-right"></i></span>
        </a>

        <a href="/services/corporate-translation/" class="package-card">
          <div class="package-icon"><i class="fas fa-building"></i></div>
          <h3>Business Setup Package</h3>
          <p>All documents for company formation including <a href="/legal/corporate/moa/">MOA</a>, <a href="/legal/corporate/license/">licenses</a>, and <a href="/legal/corporate/">corporate documents</a>.</p>
          <span class="package-link">View Package <i class="fas fa-arrow-right"></i></span>
        </a>

        <a href="/personal/academic/degree/" class="package-card">
          <div class="package-icon"><i class="fas fa-graduation-cap"></i></div>
          <h3>Academic Package</h3>
          <p><a href="/personal/academic/degree/">Degrees</a>, <a href="/personal/academic/transcripts/">transcripts</a>, and certificates for MOHESR equivalency and professional licensing.</p>
          <span class="package-link">View Package <i class="fas fa-arrow-right"></i></span>
        </a>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <RelatedServices
        pageKey="specialized"
        title="Related Services"
        showFamily={true}
        showPrerequisites={true}
        showNextSteps={true}
        showCrossSilo={true}
        maxItems={8}
      />
    </div>
  </section>

  <section class="section bg-light">
    <div class="container">
      <CrossSiloLinks pageKey="specialized" title="Explore More Services" />
    </div>
  </section>

  <section class="section bg-primary">
    <div class="container cta-section">
      <h2>Have a Specialized Translation Project?</h2>
      <p>Describe your project and we'll match you with the right expert. Share your documents, timeline, and any specific requirements for a customized quote.</p>
      <div class="cta-buttons">
        <a href="https://wa.me/971508620217?text=I%20have%20a%20specialized%20translation%20project" class="btn btn-accent">
          <i class="fab fa-whatsapp"></i> Start Your Project
        </a>
        <a href="/contact/" class="btn btn-outline">
          <i class="fas fa-envelope"></i> Contact Form
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section {
    padding: 8rem 0 5rem;
    background: linear-gradient(135deg, var(--primary-color) 0%, #1a3a5c 100%);
    color: #fff;
  }

  .breadcrumb {
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: #fff;
  }

  .breadcrumb .separator {
    margin: 0 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .breadcrumb .current {
    color: #fff;
  }

  h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-weight: 800;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--accent-color);
    margin-bottom: 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hero-intro {
    font-size: 1.15rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 800px;
    line-height: 1.8;
    margin-bottom: 2.5rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-accent {
    background: var(--accent-color);
    color: #fff;
  }

  .btn-accent:hover {
    background: var(--accent-dark, #d41448);
    transform: translateY(-2px);
  }

  .btn-ghost {
    background: transparent;
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .btn-ghost:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #fff;
  }

  .btn-outline {
    background: transparent;
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #fff;
  }

  .section {
    padding: 5rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.25rem;
    margin-bottom: 0.75rem;
    color: var(--primary-color);
  }

  .section-header p {
    font-size: 1.1rem;
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .service-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .service-card {
    background: #fff;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.12);
  }

  .service-card.featured {
    border: 2px solid var(--accent-color);
  }

  .service-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--accent-color);
    color: #fff;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .service-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark, #0a1a30));
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .service-icon i {
    font-size: 1.75rem;
    color: #fff;
  }

  .service-card h3 {
    font-size: 1.35rem;
    margin-bottom: 0.75rem;
    color: var(--primary-color);
  }

  .service-card > p {
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.25rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.25rem 0;
  }

  .service-features li {
    font-size: 0.9rem;
    color: var(--text-muted);
    padding: 0.35rem 0;
  }

  .service-features i {
    color: var(--accent-color);
    margin-right: 0.5rem;
    font-size: 0.8rem;
  }

  .card-link {
    color: var(--accent-color);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .card-link i {
    margin-left: 0.25rem;
    transition: transform 0.2s ease;
  }

  .service-card:hover .card-link i {
    transform: translateX(4px);
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .comparison-card {
    background: #fff;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
  }

  .comparison-card.bad {
    border-top: 4px solid #dc3545;
  }

  .comparison-card.good {
    border-top: 4px solid #28a745;
  }

  .comparison-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .comparison-header i {
    font-size: 1.5rem;
  }

  .comparison-card.bad .comparison-header i {
    color: #dc3545;
  }

  .comparison-card.good .comparison-header i {
    color: #28a745;
  }

  .comparison-header h3 {
    font-size: 1.25rem;
    color: var(--primary-color);
    margin: 0;
  }

  .comparison-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .comparison-card li {
    padding: 0.6rem 0;
    border-bottom: 1px solid #eee;
    font-size: 0.95rem;
    color: var(--text-muted);
  }

  .comparison-card li:last-child {
    border-bottom: none;
  }

  .industry-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .industry-item {
    text-align: center;
    padding: 2rem 1.5rem;
    background: var(--bg-light);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .industry-item:hover {
    background: #fff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transform: translateY(-3px);
  }

  .industry-item i {
    font-size: 2.5rem;
    color: var(--accent-color);
    margin-bottom: 1rem;
  }

  .industry-item h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .industry-item p {
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .process-step {
    text-align: center;
    padding: 2rem 1.5rem;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
  }

  .step-number {
    width: 50px;
    height: 50px;
    background: var(--accent-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.25rem;
    color: #fff;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .process-step h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    color: var(--primary-color);
  }

  .process-step p {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
  }

  .bg-dark {
    background: var(--primary-color);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .stat-item {
    padding: 2rem;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    color: var(--accent-color);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .package-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .package-card {
    background: var(--bg-light);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
  }

  a.package-card:hover {
    background: #fff;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transform: translateY(-3px);
  }

  .package-icon {
    width: 60px;
    height: 60px;
