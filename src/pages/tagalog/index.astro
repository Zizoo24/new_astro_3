      <div class="grid grid-3 grid--auto-fit languages-grid">{languages.map((lang) => (<div class="language-item"><i class="fas fa-globe"></i> {lang}</div>))}<div class="language-item highlight"><i class="fas fa-plus-circle"></i> 20+ Pa</div></div>
      <p class="languages-note">{languagesNote}</p>
    </div>
  </section>

  <section id="about" class="section bg-white about-section exodus-about">
    <div class="container"><div class="about-grid exodus-about-grid">
      <div class="about-image exodus-about-image"><img src="/assets/images/onedrive/contact-office.png" alt="Professional Legal Translation Dubai" loading="lazy" width="600" height="400"><div class="experience-badge exodus-badge"><span class="years">Court</span><span class="text">Ready</span></div></div>
      <div class="about-content exodus-about-content"><span class="section-label exodus-label">{aboutLabel}</span><h2 class="section-title exodus-section-title">{aboutTitle}</h2>
        <div class="exodus-features-list">{aboutFeatures.map((feature) => (<div class="exodus-feature-item"><i class="fas fa-check-circle"></i><span>{feature}</span></div>))}</div>
        <p class="about-summary">{aboutSummary}</p><a href="https://wa.me/971508620217" class="about-cta exodus-cta-btn"><i class="fab fa-whatsapp"></i> Magpadala ng Dokumento sa WhatsApp</a>
      </div>
    </div></div>
  </section>

  <TestimonialsCarousel />

  <section id="faq" class="section bg-white faq-section">
    <div class="container container--narrow"><div class="section-header"><span class="section-label">{faqLabel}</span><h2 class="section-title">{faqTitle}</h2></div>
      <div class="faq-list">{faqItems.map((item) => (<article class="faq-item"><button class="faq-question">{item.question}<i class="fas fa-chevron-down"></i></button><div class="faq-answer"><p>{item.answer}</p></div></article>))}</div>
    </div>
  </section>

  <section class="section bg-dark cta-banner"><div class="container text-center"><h2>{ctaBanner.title}</h2><p>{ctaBanner.body}</p><a href={ctaBanner.buttonUrl} class="cta-btn"><i class="fab fa-whatsapp"></i> {ctaBanner.buttonLabel}</a></div></section>

  <section id="contact" class="section bg-dark contact-section">
    <div class="container"><div class="contact-wrapper">
      <span class="section-label">{contactSection.label}</span><h2 class="section-title">{contactSection.title}</h2><p class="contact-description">{contactSection.description}</p>
      <form class="contact-form" id="contactForm" method="POST">
        <div class="form-row"><div class="form-group"><label for="name">Ang Iyong Pangalan</label><input type="text" id="name" name="name" autocomplete="name" placeholder={contactSection.namePlaceholder} required></div><div class="form-group"><label for="email">Email Address</label><input type="email" id="email" name="email" autocomplete="email" placeholder={contactSection.emailPlaceholder} required></div></div>
        <div class="form-group"><label for="phone">Phone / WhatsApp Number</label><input type="tel" id="phone" name="phone" autocomplete="tel" placeholder={contactSection.phonePlaceholder}></div>
        <div class="form-group"><label for="message">Detalye ng Dokumento</label><textarea id="message" name="message" placeholder={contactSection.messagePlaceholder} rows="5"></textarea></div>
        <button type="submit" class="submit-btn">I-submit ang Request</button><div id="formResult" class="form-result"></div>
      </form>
      <div class="contact-buttons"><a href="https://wa.me/971508620217" class="contact-btn whatsapp"><i class="fab fa-whatsapp"></i> WhatsApp</a><a href="tel:+971508620217" class="contact-btn phone"><i class="fas fa-phone"></i> Tumawag</a><a href="mailto:info@onlinetranslation.ae" class="contact-btn email"><i class="fas fa-envelope"></i> Email</a></div>
    </div></div>
  </section>
</BaseLayoutMultilingual>

<script>document.addEventListener('DOMContentLoaded', () => { const faqItems = document.querySelectorAll('.faq-item'); faqItems.forEach((item) => { const question = item.querySelector('.faq-question'); question?.addEventListener('click', () => { const isOpen = item.classList.contains('is-open'); faqItems.forEach((i) => i.classList.remove('is-open')); if (!isOpen) item.classList.add('is-open'); }); }); });</script>
