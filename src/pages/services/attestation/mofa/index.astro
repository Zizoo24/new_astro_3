    background: var(--primary-color);
  }

  .bg-primary h2,
  .bg-primary p {
    color: #fff;
  }

  .cta-section {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-section p {
    opacity: 0.9;
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-accent {
    background: var(--accent-color);
    color: #fff;
  }

  .btn-accent:hover {
    background: var(--accent-dark, #d41448);
  }

  .btn-outline {
    background: transparent;
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #fff;
  }

  @media (max-width: 992px) {
    .info-grid,
    .document-grid,
    .service-features {
      grid-template-columns: repeat(2, 1fr);
    }

    .process-arrow {
      display: none;
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .info-grid,
    .document-grid,
    .service-features {
      grid-template-columns: 1fr;
    }

    .hero-section {
      padding: 6rem 0 3rem;
    }
  }
</style>
