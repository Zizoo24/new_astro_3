  }

  .document-category li:last-child {
    border-bottom: none;
  }

  .process-flow {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .process-step {
    flex: 1;
    min-width: 200px;
    max-width: 280px;
    text-align: center;
    padding: 2rem;
    background: var(--bg-light);
    border-radius: 12px;
  }

  .process-step.current {
    background: var(--accent-color);
    color: #fff;
  }

  .process-step.current h3,
  .process-step.current p {
    color: #fff;
  }

  .step-number {
    width: 50px;
    height: 50px;
    background: var(--primary-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
