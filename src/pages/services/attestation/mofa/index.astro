    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .process-step p {
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .process-arrow {
    display: flex;
    align-items: center;
    color: var(--accent-color);
    font-size: 1.5rem;
    padding-top: 2rem;
  }

  .service-features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .feature-item {
    text-align: center;
    padding: 2rem;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
  }

  .feature-item i {
    font-size: 2rem;
    color: var(--accent-color);
    margin-bottom: 1rem;
  }

  .feature-item h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .feature-item p {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

