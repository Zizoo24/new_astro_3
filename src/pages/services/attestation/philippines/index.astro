---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import RelatedServices from '../../../../components/RelatedServices.astro';
---

<BaseLayout
  title="Philippines Document Attestation in Dubai - DFA & UAE Embassy | OnlineTranslation.ae"
  description="Philippines document attestation for UAE. DFA authentication, UAE Embassy Manila attestation, and MOFA legalization. Complete OFW document services."
>
  <section class="hero-section bg-dark" data-theme="dark">
    <div class="container">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <a href="/">HOME</a>
        <span class="separator">&gt;</span>
        <a href="/services/attestation/">ATTESTATION</a>
        <span class="separator">&gt;</span>
        <span class="current">PHILIPPINES</span>
      </nav>

      <div class="hero-flag">ðŸ‡µðŸ‡­</div>
      <h1>Philippines Document Attestation</h1>
      <p class="hero-subtitle">DFA Authentication for UAE Use</p>
      <p class="hero-intro">Filipino documents require authentication by the Department of Foreign Affairs (DFA) before UAE Embassy attestation. We coordinate the complete attestation chain from Manila to Dubai, supporting OFWs and Filipino professionals with efficient document processing.</p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <h2>Philippines Attestation Process</h2>

      <div class="process-steps">
        <div class="step">
          <div class="step-number">1</div>
          <h3>PSA / NSO Documents</h3>
          <p>Obtain certified copies from Philippine Statistics Authority</p>
        </div>

        <div class="step">
          <div class="step-number">2</div>
          <h3>DFA Authentication</h3>
          <p>Department of Foreign Affairs red ribbon authentication</p>
        </div>

        <div class="step">
          <div class="step-number">3</div>
          <h3>UAE Embassy Manila</h3>
          <p>Attestation at UAE Embassy in the Philippines</p>
        </div>

        <div class="step">
          <div class="step-number">4</div>
          <h3>MOFA UAE</h3>
          <p>Final attestation at Ministry of Foreign Affairs Dubai</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-light">
    <div class="container">
      <h2>Common Filipino Documents for UAE</h2>

      <div class="document-grid">
        <div class="document-card">
          <i class="fas fa-baby"></i>
          <h3>Birth Certificate (PSA)</h3>
          <p>Required for dependent visa sponsorship, school enrollment, and family documentation</p>
        </div>

        <div class="document-card">
          <i class="fas fa-ring"></i>
          <h3>Marriage Certificate</h3>
          <p>For spouse visa applications and family status documentation</p>
        </div>

        <div class="document-card">
          <i class="fas fa-shield-alt"></i>
          <h3>NBI Clearance</h3>
          <p>Police clearance for employment visa and residency applications</p>
        </div>

        <div class="document-card">
          <i class="fas fa-graduation-cap"></i>
          <h3>CHED / DepEd Certificates</h3>
          <p>Educational credentials for professional licensing and employment</p>
        </div>

        <div class="document-card">
          <i class="fas fa-file-medical"></i>
          <h3>PRC License</h3>
          <p>Professional Regulation Commission licenses for nurses, engineers, etc.</p>
        </div>

        <div class="document-card">
          <i class="fas fa-file-contract"></i>
          <h3>CENOMAR</h3>
          <p>Certificate of No Marriage for single status verification</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <h2>OFW Document Support</h2>
      <p class="section-intro">Specialized services for Overseas Filipino Workers in UAE.</p>

      <div class="ofw-grid">
        <div class="ofw-item">
          <i class="fas fa-home"></i>
          <h3>Family Sponsorship</h3>
          <p>Complete document packages for bringing family to UAE under OFW sponsorship</p>
        </div>

        <div class="ofw-item">
          <i class="fas fa-briefcase"></i>
          <h3>Employment Documents</h3>
          <p>NBI clearance, PRC licenses, and educational credentials for job requirements</p>
        </div>

        <div class="ofw-item">
          <i class="fas fa-heartbeat"></i>
          <h3>Healthcare Licensing</h3>
          <p>DHA/DOH requirements for Filipino nurses and healthcare professionals</p>
        </div>

        <div class="ofw-item">
          <i class="fas fa-exchange-alt"></i>
          <h3>Document Updates</h3>
          <p>Renewal and re-attestation of expired documents</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-light">
    <div class="container">
      <h2>Processing Timeline</h2>

      <div class="timeline-grid">
        <div class="timeline-item">
          <span class="time">3-5 Days</span>
          <h3>DFA Authentication</h3>
          <p>Red ribbon processing in Manila</p>
        </div>

        <div class="timeline-item">
          <span class="time">5-7 Days</span>
          <h3>UAE Embassy</h3>
          <p>Embassy processing in Manila</p>
        </div>

        <div class="timeline-item">
          <span class="time">2-3 Days</span>
          <h3>MOFA UAE</h3>
          <p>Final attestation in Dubai</p>
        </div>

        <div class="timeline-item highlight">
          <span class="time">10-15 Days</span>
          <h3>Total Processing</h3>
          <p>Complete attestation chain</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <RelatedServices
        pageKey="philippinesAttestation"
        title="You May Also Need"
        showFamily={true}
        showNextSteps={true}
        maxItems={6}
      />
    </div>
  </section>

  <section class="section bg-primary">
    <div class="container cta-section">
      <h2>Need Philippines Documents Attested?</h2>
      <p>Send your Filipino documents via WhatsApp. We'll guide you through DFA, UAE Embassy, and MOFA attestation.</p>
      <div class="cta-buttons">
        <a href="https://wa.me/971508620217?text=I%20need%20Philippines%20document%20attestation" class="btn btn-accent">
          <i class="fab fa-whatsapp"></i> Start Attestation
        </a>
        <a href="/services/attestation/" class="btn btn-outline">
          <i class="fas fa-arrow-left"></i> All Attestation Services
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section { padding: 8rem 0 4rem; background: var(--primary-color); }
  .hero-flag { font-size: 4rem; margin-bottom: 1rem; }
  .breadcrumb { font-size: 0.85rem; letter-spacing: 0.1em; margin-bottom: 2rem; }
  .breadcrumb a { color: rgba(255, 255, 255, 0.7); text-decoration: none; }
  .breadcrumb a:hover { color: #fff; }
  .breadcrumb .separator { margin: 0 0.75rem; color: rgba(255, 255, 255, 0.4); }
  .breadcrumb .current { color: #fff; }
  h1 { font-size: 3rem; margin-bottom: 1rem; color: #fff; }
  .hero-subtitle { font-size: 1.25rem; color: var(--accent-color); margin-bottom: 1.5rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; }
  .hero-intro { font-size: 1.1rem; color: rgba(255, 255, 255, 0.9); max-width: 800px; line-height: 1.8; }
  .section { padding: 5rem 0; }
  .section h2 { font-size: 2rem; margin-bottom: 1rem; color: var(--primary-color); }
  .section-intro { font-size: 1.1rem; color: var(--text-muted); margin-bottom: 2.5rem; }
  .process-steps { display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem; }
  .step { text-align: center; padding: 2rem; background: var(--bg-light); border-radius: 12px; }
  .step-number { width: 50px; height: 50px; background: var(--accent-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: #fff; font-size: 1.25rem; font-weight: 700; }
  .step h3 { font-size: 1rem; margin-bottom: 0.5rem; color: var(--primary-color); }
  .step p { font-size: 0.85rem; color: var(--text-muted); line-height: 1.5; }
  .document-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; }
  .document-card { background: #fff; border-radius: 12px; padding: 2rem; box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05); text-align: center; }
  .document-card i { font-size: 2.5rem; color: var(--accent-color); margin-bottom: 1rem; }
  .document-card h3 { font-size: 1.1rem; margin-bottom: 0.75rem; color: var(--primary-color); }
  .document-card p { font-size: 0.9rem; color: var(--text-muted); line-height: 1.6; }
  .ofw-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem; }
  .ofw-item { text-align: center; padding: 2rem; background: var(--bg-light); border-radius: 12px; }
  .ofw-item i { font-size: 2rem; color: var(--accent-color); margin-bottom: 1rem; }
  .ofw-item h3 { font-size: 1rem; margin-bottom: 0.5rem; color: var(--primary-color); }
  .ofw-item p { font-size: 0.9rem; color: var(--text-muted); }
  .timeline-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem; }
  .timeline-item { text-align: center; padding: 2rem; background: #fff; border-radius: 12px; box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05); }
  .timeline-item.highlight { background: var(--accent-color); color: #fff; }
  .timeline-item.highlight h3, .timeline-item.highlight p { color: #fff; }
  .time { display: block; font-size: 1.5rem; font-weight: 700; color: var(--accent-color); margin-bottom: 0.5rem; }
  .timeline-item.highlight .time { color: #fff; }
  .timeline-item h3 { font-size: 1rem; margin-bottom: 0.5rem; color: var(--primary-color); }
  .timeline-item p { font-size: 0.85rem; color: var(--text-muted); }
  .bg-primary { background: var(--primary-color); }
  .bg-primary h2, .bg-primary p { color: #fff; }
  .cta-section { text-align: center; max-width: 700px; margin: 0 auto; }
  .cta-section p { opacity: 0.9; margin-bottom: 2rem; font-size: 1.1rem; }
  .cta-buttons { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }
  .btn { display: inline-flex; align-items: center; gap: 0.75rem; padding: 1rem 2rem; border-radius: 8px; font-weight: 600; text-decoration: none; transition: all 0.3s ease; }
  .btn-accent { background: var(--accent-color); color: #fff; }
  .btn-outline { background: transparent; color: #fff; border: 2px solid rgba(255, 255, 255, 0.5); }
  @media (max-width: 992px) { .process-steps, .ofw-grid, .timeline-grid { grid-template-columns: repeat(2, 1fr); } .document-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 768px) { h1 { font-size: 2rem; } .process-steps, .document-grid, .ofw-grid, .timeline-grid { grid-template-columns: 1fr; } .hero-section { padding: 6rem 0 3rem; } }
</style>
