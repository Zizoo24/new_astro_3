---
/**
 * /services/[slug] - Dynamic Service Page
 * Renders service pages from the content collection (CMS-created)
 * Existing hardcoded pages in subdirectories take precedence
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map(service => ({
    params: { slug: service.slug },
    props: { service }
  }));
}

const { service } = Astro.props;
const { Content } = await service.render();

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Services', url: '/services/' },
  { name: service.data.title, url: `/services/${service.slug}/` }
];
---

<BaseLayout
  title={service.data.pageTitle || service.data.title}
  description={service.data.metaDescription || service.data.description || ''}
>
  <Breadcrumb items={breadcrumbs} theme="dark" />

  <!-- Hero Section -->
  <section class="section section--hero bg-dark">
    <div class="container">
      <div class="row">
        <div class="col col--8">
          <h1 class="hero-title">{service.data.heroHeading || service.data.title}</h1>
          {service.data.heroSubheading && (
            <h2 class="hero-subtitle">{service.data.heroSubheading}</h2>
          )}
          {service.data.heroLead && (
            <p class="hero-intro">{service.data.heroLead}</p>
          )}
          <div class="hero-cta-group">
            <a href="https://wa.me/971508620217" class="btn btn--primary btn--lg">
              <i class="fab fa-whatsapp"></i>
              Send Your Document
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  {service.data.features && service.data.features.length > 0 && (
    <section class="section bg-light">
      <div class="container">
        <h2>Key Features</h2>
        <div class="features-grid">
          {service.data.features.map((feature: { icon?: string; title: string; text: string }) => (
            <div class="feature-card">
              {feature.icon && <i class={feature.icon}></i>}
              <h3>{feature.title}</h3>
              <p>{feature.text}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <section class="section">
    <div class="container">
      <div class="content-body">
        <Content />
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  {service.data.faq && service.data.faq.length > 0 && (
    <section class="section bg-light">
      <div class="container">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-list">
          {service.data.faq.map((item: { question: string; answer: string }) => (
            <details class="faq-item">
              <summary class="faq-question">{item.question}</summary>
              <div class="faq-answer">
                <p>{item.answer}</p>
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="section bg-dark">
    <div class="container text-center">
      <h2>{service.data.ctaTitle || 'Ready to Get Started?'}</h2>
      <p style="max-width: 600px; margin: 0 auto 2rem;">
        {service.data.ctaBody || 'Send your document via WhatsApp for a free assessment.'}
      </p>
      <a href={service.data.ctaButtonUrl || 'https://wa.me/971508620217'} class="btn btn--primary btn--lg">
        <i class="fab fa-whatsapp"></i>
        {service.data.ctaButtonLabel || 'Start on WhatsApp'}
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin: 0 0 0.5rem;
  }

  .hero-subtitle {
    font-size: clamp(1.25rem, 3vw, 2rem);
    color: var(--accent-color, #FF1654);
    margin: 0 0 1.5rem;
  }

  .hero-intro {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    max-width: 700px;
  }

  .hero-cta-group {
    margin-top: 2rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  .feature-card i {
    font-size: 2rem;
    color: var(--accent-color, #FF1654);
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.25rem;
  }

  .feature-card p {
    margin: 0;
    color: var(--text-muted);
  }

  .content-body {
    max-width: 800px;
    line-height: 1.8;
  }

  .text-center {
    text-align: center;
  }

  .faq-list {
    max-width: 800px;
  }

  .faq-item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding: 1rem 0;
  }

  .faq-question {
    font-weight: 600;
    cursor: pointer;
    list-style: none;
  }

  .faq-answer {
    padding-top: 1rem;
  }
</style>
