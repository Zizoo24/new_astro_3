      </InlineCallout>

      <RelatedServices 
        pageKey="legalTranslation"
        title="Related Legal Services"
        maxItems={6}
      />
      
      <CrossSiloLinks 
        pageKey="legalTranslation"
        title="Explore by Location"
      />
    </div>
  </section>

</ServiceLayout>

