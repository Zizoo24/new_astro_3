      <div class="related-grid">
        <a href="/services/attestation/" class="related-card">
          <i class="fas fa-stamp"></i>
          <h3>Attestation Services</h3>
          <p>MOFA and embassy attestation for certificates</p>
        </a>
        <a href="/services/golden-visa-translation/" class="related-card">
          <i class="fas fa-star"></i>
          <h3>Golden Visa Package</h3>
          <p>Complete document packages for 10-year visa</p>
        </a>
        <a href="/personal-documents/" class="related-card">
          <i class="fas fa-user"></i>
          <h3>Personal Documents</h3>
          <p>Full range of personal document translation</p>
        </a>
        <a href="/legal-translation-dubai/" class="related-card">
          <i class="fas fa-balance-scale"></i>
          <h3>Legal Translation</h3>
          <p>Court documents and legal certificates</p>
        </a>
      </div>
    </div>
  </section>

</CategoryLayout>

