    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .info-callout {
    background: linear-gradient(135deg, #e8f4f8 0%, #d4ecf4 100%);
    border-radius: 1rem;
    padding: 1.5rem;
    margin: 2rem 0;
    border-left: 4px solid #0077b6;
  }

  .info-callout h4 {
    margin: 0 0 0.75rem;
    font-size: 1rem;
    color: #0077b6;
  }

  .info-callout h4 i {
    margin-right: 0.5rem;
  }

  .info-callout p {
    margin: 0;
    line-height: 1.6;
  }
</style>
