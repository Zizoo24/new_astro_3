const heroImage = "/assets/images/onedrive/hero/city-cyber.webp";

const faqs = [
  {
    question: "Do Dubai restaurants need Arabic menus?",
    answer: "While not universally mandated, many Dubai municipalities encourage or require Arabic menus, especially for restaurants in certain areas or hotel classifications. More importantly, Arabic menus expand your customer base and show respect for local guests. We translate menus with appetizing descriptions that sell."
  },
  {
    question: "Can you translate guest policies and liability waivers?",
    answer: "Yes. We translate guest policies, liability waivers, activity disclaimers, and terms and conditions. For adventure tourism, spa waivers, or activity centers, Arabic versions ensure Arabic-speaking guests understand the terms. We maintain legal accuracy while keeping the language accessible."
  },
  {
    question: "Do you handle hotel T&Cs and booking policies?",
    answer: "Yes. We translate hotel terms and conditions, booking policies, cancellation policies, and guest agreements. For international hotel chains operating in UAE, we ensure brand consistency while adapting content for local requirements and cultural expectations."
  },
  {
    question: "Can you translate in-room notices and signage?",
    answer: "Yes. We translate in-room directories, safety notices, Wi-Fi instructions, minibar menus, and all guest-facing signage. We can work with your designer to deliver print-ready bilingual PDFs or provide text for your layout team."
  },
  {
    question: "How do you handle menu items with no Arabic equivalent?",
    answer: "For specialty dishes, fusion cuisine, or chef's creations without direct Arabic equivalents, we use transliteration (phonetic Arabic) plus a brief Arabic description. This approach maintains the dish's identity while helping Arabic-speaking guests understand what they're ordering."
  },
  {
    question: "Can you produce print-ready bilingual PDFs?",
    answer: "Yes. We can deliver bilingual layouts with English and Arabic side-by-side or on facing pages. For menus, we work with RTL formatting and appropriate Arabic fonts. Send your InDesign file or PDF and we'll return a print-ready bilingual version."
  },
  {
    question: "Do you translate spa and wellness content?",
    answer: "Yes. We translate spa menus, treatment descriptions, wellness program guides, and health disclaimers. Arabic wellness content requires sensitivity to cultural preferences—we adapt descriptions appropriately while maintaining the spa's brand voice and luxury positioning."
  },
  {
    question: "What about seasonal menu updates?",
    answer: "For hotels and restaurants with frequent menu changes, we offer quick turnaround on updates. Send your new menu items via WhatsApp and we typically return translations same-day. For regular clients, we maintain terminology consistency across all menu versions."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
