  .info-callout { background: linear-gradient(135deg, #e6f7ff 0%, #d6f0ff 100%); border-left: 4px solid var(--link-color); padding: 1.5rem; border-radius: 0 0.75rem 0.75rem 0; margin-top: 2rem; }
