    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 1rem;
    padding: 1.5rem;
    margin: 2rem 0;
    border-left: 4px solid var(--primary-color);
  }

  .process-breakdown h4 {
    margin: 0 0 0.75rem;
    font-size: 1rem;
    color: var(--primary-color);
  }

  .process-breakdown h4:not(:first-child) {
    margin-top: 1.5rem;
  }

  .process-breakdown p {
    margin: 0;
    line-height: 1.6;
  }

  .mistake-list {
    background: #fff5f5;
    border-radius: 1rem;
    padding: 1.5rem;
    margin: 2rem 0;
  }

  .mistake-item {
    display: flex;
    gap: 1rem;
    padding: 0.75rem 0;
