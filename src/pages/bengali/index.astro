        <div class="form-group"><label for="phone">ফোন / WhatsApp</label><input type="tel" id="phone" name="phone" autocomplete="tel" placeholder={contactSection.phonePlaceholder}></div>
        <div class="form-group"><label for="message">নথির বিবরণ</label><textarea id="message" name="message" placeholder={contactSection.messagePlaceholder} rows="5"></textarea></div>
