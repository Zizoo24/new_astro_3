---
import BaseLayoutMultilingual from '../../layouts/BaseLayoutMultilingual.astro';
import TestimonialsCarousel from '../../components/TestimonialsCarousel.astro';
import TrustBar from '../../components/TrustBar.astro';

// SEO - Bengali
const pageTitle = 'দুবাইতে আইনি অনুবাদ সেবা | MOJ সার্টিফাইড | OnlineTranslation.ae';
const metaDescription = 'দুবাইতে পেশাদার আইনি অনুবাদ সেবা। বিচার মন্ত্রণালয় (MOJ) সার্টিফাইড অনুবাদক। আদালত, ইমিগ্রেশন এবং সরকারি নথির জন্য। দ্রুত এবং নির্ভরযোগ্য সেবা।';

const heroTitle = 'দুবাইতে MOJ সার্টিফাইড আইনি অনুবাদ';
