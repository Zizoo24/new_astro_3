      <div class="section-header">
        <span class="section-label">{attestationLabel}</span>
        <h2 class="section-title">{attestationTitle}</h2>
      </div>
      <div class="grid grid-3 grid--auto-fit process-steps exodus-process-steps">
        {attestationSteps.map((step) => (
