---
/**
 * Client Reviews Hub
 * E-E-A-T: Demonstrates Experience through social proof
 * URL: /about/reviews/
 */
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import ReviewCard from '../../../components/eeat/ReviewCard.astro';
import { siteConfig } from '../../../config/site';

// Page metadata (title max 60, desc max 155)
const pageTitle = "Client Reviews | OnlineTranslation.ae Dubai";
const metaDescription = "Verified client reviews: 5.0 Google rating. Real testimonials from visa approvals, court cases, and business translations in Dubai.";

// Real testimonials - from Google Reviews and website
const reviews = [
  // From Google Reviews (screenshot)
  {
    quote: "Great speedy service! 10/10 would recommend",
    name: "Mustafa Hassan",
    role: "Verified Client",
    date: "2024-02-15",
    rating: 5,
    service: "Legal Translation",
    outcome: "Document Accepted",
    verified: true,
    source: 'google' as const,
    reviewCount: 11
  },
  {
    quote: "Amazing service",
    name: "Wael Hussein",
    role: "Verified Client",
    date: "2024-02-10",
    rating: 5,
    verified: true,
    source: 'google' as const,
    reviewCount: 4
  },
  // From website testimonials
  {
    quote: "OnlineTranslation.ae provided exceptional service for my Golden Visa application. The translation was accurate, and the process was incredibly fast. Highly recommended!",
    name: "Sarah M.",
    role: "Golden Visa Applicant",
    date: "2024-11-20",
    rating: 5,
    service: "Golden Visa Package",
    outcome: "Visa Approved",
    verified: true,
    source: 'google' as const
  },
  {
    quote: "I needed urgent legal translation for court documents. Their team delivered within 24 hours with perfect accuracy. The WhatsApp support was a game-changer.",
    name: "Mohammed A.",
    role: "Legal Professional",
    date: "2024-10-15",
    rating: 5,
    service: "Court Documents",
    outcome: "Court Accepted",
    verified: true,
    source: 'google' as const
  },
  {
    quote: "Professional, reliable, and efficient. They handled our corporate documents with utmost confidentiality. The best translation service in Dubai.",
    name: "Ahmed K.",
    role: "Business Owner",
    date: "2024-09-08",
    rating: 5,
    service: "Corporate Translation",
    outcome: "MOA Approved",
    verified: true,
    source: 'google' as const
  },
  {
    quote: "Incredibly fast and professional service. Sent my documents via WhatsApp in the morning and had the certified translation by afternoon. Accepted by Dubai Courts without any issues.",
    name: "Fatima R.",
    role: "Verified Client",
    date: "2024-08-22",
    rating: 5,
    service: "Court Documents",
    outcome: "Same-Day Delivery",
    verified: true,
    source: 'google' as const
  },
  {
    quote: "The XoneHour service saved my visa application. Needed an urgent translation and they delivered within the hour. Exceptional quality under pressure.",
    name: "James L.",
    role: "Expat Professional",
    date: "2024-07-30",
    rating: 5,
    service: "Express Translation",
    outcome: "Visa Approved",
    verified: true,
    source: 'google' as const
  },
  {
    quote: "We've used other agencies before and had documents rejected. OnlineTranslation.ae got it right the first time. The MOJ stamp was properly placed and the court accepted our verdict translation immediately.",
    name: "Law Firm Associate",
    role: "Legal Sector",
    date: "2024-06-15",
    rating: 5,
    service: "Verdict Translation",
    outcome: "First-Time Acceptance",
    verified: true,
    source: 'direct' as const
  },
  {
    quote: "Speedy and smooth process with good quality at reasonable price.",
    name: "Ali Pourtaheri",
    role: "Verified Client",
    date: "2024-02-12",
    rating: 5,
    verified: true,
    source: 'google' as const
  },
  {
    quote: "Highly recommended, trusted and reliable translation firm.",
    name: "Legal Translator",
    role: "Industry Professional",
    date: "2024-01-20",
    rating: 5,
    verified: true,
    source: 'google' as const
  },
  {
    quote: "They translated my medical degree and Good Standing Certificate for DHA licensing. DataFlow verification passed on first submission. Very thorough work.",
    name: "Dr. Priya S.",
    role: "Healthcare Professional",
    date: "2024-05-10",
    rating: 5,
    service: "Medical Documents",
    outcome: "DHA License Approved",
    verified: true,
    source: 'google' as const
  },
  {
    quote: "Needed birth and marriage certificates translated for family visa. Everything was done correctly and GDRFA accepted without questions. Great attention to detail.",
    name: "Rashid M.",
    role: "Family Visa Applicant",
    date: "2024-04-25",
    rating: 5,
    service: "Personal Documents",
    outcome: "Family Visa Approved",
    verified: true,
    source: 'google' as const
  }
];

// Calculate stats
const totalReviews = reviews.length;
const averageRating = (reviews.reduce((acc, r) => acc + r.rating, 0) / totalReviews).toFixed(1);

// Individual Review schemas that reference the LocalBusiness from BaseLayout
// This avoids "multiple aggregate ratings" error - BaseLayout handles the aggregateRating
const reviewsSchema = reviews.map((review) => ({
  "@context": "https://schema.org",
  "@type": "Review",
  "itemReviewed": {
    "@type": "LocalBusiness",
    "@id": `${siteConfig.url}/#organization`
  },
  "reviewRating": {
    "@type": "Rating",
    "ratingValue": review.rating,
    "bestRating": "5",
    "worstRating": "1"
  },
  "author": {
    "@type": "Person",
    "name": review.name
  },
  "reviewBody": review.quote,
  ...(review.date && { "datePublished": review.date })
}));
---

<BaseLayout
  title={pageTitle}
  description={metaDescription}
>
  <!-- Individual Review schemas - aggregateRating handled by BaseLayout's LocalBusiness -->
  <script type="application/ld+json" set:html={JSON.stringify(reviewsSchema)} />

  <!-- Hero Section -->
  <section class="page-hero reviews-hero">
    <div class="hero-background">
      <div class="hero-overlay"></div>
    </div>
    <Breadcrumb items={[
      { name: "Home", url: "/" },
      { name: "About", url: "/about/" },
      { name: "Reviews" }
    ]} inline={true} theme="light" />
    <div class="container">
      <h1 class="page-title">What Our Clients Say</h1>
      <p class="page-lead">
        Real feedback from real clients. We're proud of our 5.0 Google rating and
        the outcomes we've helped achieve.
      </p>

      <!-- Rating Summary -->
      <div class="rating-summary">
        <div class="rating-stars">
          {Array.from({ length: 5 }).map(() => (
            <span class="star filled">★</span>
          ))}
        </div>
        <div class="rating-text">
          <span class="rating-value">{averageRating}</span>
          <span class="rating-max">/ 5.0</span>
        </div>
        <span class="rating-count">Based on {totalReviews}+ verified reviews</span>
        <a href="https://maps.app.goo.gl/44R91mFhfHpJTXhw6?g_st=ipc" target="_blank" rel="noopener" class="google-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          View on Google
        </a>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-card">
          <span class="stat-value">5.0★</span>
          <span class="stat-label">Google Rating</span>
        </div>
        <div class="stat-card">
          <span class="stat-value">100%</span>
          <span class="stat-label">Would Recommend</span>
        </div>
        <div class="stat-card">
          <span class="stat-value">2min</span>
          <span class="stat-label">Avg Response</span>
        </div>
        <div class="stat-card">
          <span class="stat-value">99%</span>
          <span class="stat-label">First-Time Acceptance</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Reviews Grid -->
  <section class="section reviews-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Verified Client Reviews</h2>
        <p class="section-description">
          Testimonials from clients who used our MOJ-certified translation services
          for visas, court documents, and business filings.
        </p>
      </div>

      <div class="reviews-grid">
        {reviews.map((review) => (
          <ReviewCard {...review} />
        ))}
      </div>
    </div>
  </section>

  <!-- Leave a Review CTA -->
  <section class="section leave-review-section">
    <div class="container">
      <div class="leave-review-card">
        <h2>Share Your Experience</h2>
        <p>
          If we've helped with your documents, we'd love to hear from you.
          Your review helps others find trusted translation services in Dubai.
        </p>
        <div class="review-buttons">
          <a href="https://search.google.com/local/writereview?placeid=ChIJZZ9d2X1rXz4RiwOmNQuCJJA" target="_blank" rel="noopener" class="review-button google">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Review on Google
          </a>
          <a href="https://wa.me/971508620217?text=I'd%20like%20to%20share%20feedback%20about%20my%20translation%20experience" class="review-button whatsapp">
            <i class="fab fa-whatsapp"></i>
            Send Feedback via WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Experience Our Service?</h2>
        <p>Join hundreds of satisfied clients who trust us with their important documents.</p>
        <div class="cta-links">
          <a href="/legal-translation-dubai/" class="cta-link">Legal Translation</a>
          <a href="/services/golden-visa-translation/" class="cta-link">Golden Visa</a>
          <a href="/services/" class="cta-link">All Services</a>
        </div>
        <a href="https://wa.me/971508620217" class="cta-button">
          <i class="fab fa-whatsapp"></i> Start Your Translation
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .reviews-hero {
    background: linear-gradient(135deg, var(--primary-navy, #0E2B48) 0%, #1a3a5c 100%);
    padding: 3rem 0 4rem;
    position: relative;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 0%, rgba(14, 43, 72, 0.4) 100%);
  }

  .container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: #ffffff;
  }

  .breadcrumb .separator {
    color: rgba(255, 255, 255, 0.4);
  }

  .breadcrumb .current {
    color: var(--accent-coral, #FF1654);
    font-weight: 600;
  }

  .page-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 1rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .page-lead {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
    line-height: 1.6;
    margin: 0 0 2rem;
  }

  .rating-summary {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .rating-stars {
    display: flex;
    gap: 0.15rem;
  }

  .star {
    font-size: 1.5rem;
    color: #d1d5db;
  }

  .star.filled {
    color: #fbbf24;
  }

  .rating-text {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
  }

  .rating-value {
    font-size: 2rem;
    font-weight: 800;
    color: #ffffff;
  }

  .rating-max {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .rating-count {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .google-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: #ffffff;
    color: var(--primary-navy, #0E2B48);
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    margin-left: auto;
    transition: all 0.2s ease;
  }

  .google-link:hover {
    background: #f0f0f0;
    transform: translateY(-1px);
  }

  /* Stats Section */
  .stats-section {
    background: #ffffff;
    padding: 2rem 0;
    margin-top: -2rem;
    position: relative;
    z-index: 2;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
    background: #ffffff;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .stat-card {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--accent-coral, #FF1654);
    line-height: 1;
    margin-bottom: 0.35rem;
  }

  .stat-label {
    font-size: 0.8rem;
    color: var(--text-muted, #5a6a7a);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Reviews Section */
  .section {
    padding: 3rem 0;
  }

  .reviews-section {
    background: var(--bg-light, #f8f9fa);
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--primary-navy, #0E2B48);
    margin: 0 0 0.75rem;
  }

  .section-description {
    font-size: 1rem;
    color: var(--text-muted, #5a6a7a);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  /* Leave Review Section */
  .leave-review-section {
    background: #ffffff;
  }

  .leave-review-card {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    padding: 2.5rem;
    background: var(--bg-light, #f8f9fa);
    border-radius: 1rem;
  }

  .leave-review-card h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-navy, #0E2B48);
    margin: 0 0 1rem;
  }

  .leave-review-card p {
    font-size: 1rem;
    color: var(--text-muted, #5a6a7a);
    line-height: 1.6;
    margin: 0 0 1.5rem;
  }

  .review-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .review-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .review-button.google {
    background: #ffffff;
    color: #4285f4;
    border: 2px solid #4285f4;
  }

  .review-button.google:hover {
    background: #4285f4;
    color: #ffffff;
  }

  .review-button.whatsapp {
    background: #25d366;
    color: #ffffff;
  }

  .review-button.whatsapp:hover {
    background: #1da851;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--primary-navy, #0E2B48) 0%, #1a3a5c 100%);
    padding: 4rem 0;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 1rem;
  }

  .cta-content p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .cta-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .cta-link {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 0.5rem;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .cta-link:hover {
    color: #ffffff;
    border-color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.1);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: var(--accent-coral, #FF1654);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .cta-button:hover {
    background: #e81447;
    transform: translateY(-2px);
  }

  @media (max-width: 992px) {
    .reviews-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .rating-summary {
      flex-direction: column;
      text-align: center;
    }

    .google-link {
      margin-left: 0;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .reviews-grid {
      grid-template-columns: 1fr;
    }

    .review-buttons {
      flex-direction: column;
    }
  }

  /* Dark mode */
  :global(body.theme-dark) .stats-section {
    background: #0d1117;
  }

  :global(body.theme-dark) .stats-grid {
    background: #21262d;
  }

  :global(body.theme-dark) .stat-label {
    color: #8b949e;
  }

  :global(body.theme-dark) .reviews-section {
    background: #161b22;
  }

  :global(body.theme-dark) .section-title {
    color: #f0f6fc;
  }

  :global(body.theme-dark) .section-description {
    color: #8b949e;
  }

  :global(body.theme-dark) .leave-review-section {
    background: #0d1117;
  }

  :global(body.theme-dark) .leave-review-card {
    background: #21262d;
  }

  :global(body.theme-dark) .leave-review-card h2 {
    color: #f0f6fc;
  }

  :global(body.theme-dark) .leave-review-card p {
    color: #8b949e;
  }
</style>
