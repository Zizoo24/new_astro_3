];

const primaryCta = { label: '通过WhatsApp发送文件', url: 'https://wa.me/971508620217' };
const secondaryCta = { label: '或获取书面报价', url: '/contact/' };

const overlapCards = [
  { icon: 'fas fa-shield-alt', title: '迪拜统一许可证', desc: '官方迪拜商业登记 — 验证', badge: '官方许可', url: 'https://app.invest.dubai.ae/DUL/1DE9D8AA-768A-4CFC-BC27-A6F23017B858' },
  { icon: 'fas fa-building', title: '政府认可', desc: '法院、大使馆和部委接受', badge: '', url: '/services/legal-translation/' },
  { icon: 'fas fa-bolt', title: '60分钟交付', desc: '迪拜最快的认证翻译服务', badge: '', url: '/services/legal-translation/' },
];

const servicesLabel = '我们的服务';
const servicesTitle = '四大专业领域的专业翻译服务';

const servicesItems = [
  { href: '/services/legal-translation/', image: '/assets/images/onedrive/tiles/tile-courts.png', imageAlt: '法律翻译服务', heading: '法律与企业', text: '合同、法院命令、公司治理、授权委托书和诉讼文件，附MOJ认证。' },
  { href: '/personal/', image: '/assets/images/onedrive/tiles/tile-immigration.png', imageAlt: '个人文件翻译', heading: '个人文件', text: '出生证明、结婚证、学历证书、无犯罪证明和移民文件。' },
  { href: '/services/attestation/', image: '/assets/images/onedrive/services/services-4.jpg', imageAlt: '认证和MOFA', heading: '认证服务', text: 'MOFA和政府机构的文件认证。包括安全运输在内的完整认证服务。' },
  { href: '/services/certificate-translation/', image: '/assets/images/onedrive/services/services-5.jpg', imageAlt: '商业本地化', heading: '商业本地化', text: '网站和应用本地化、营销改编、菜单翻译和阿联酋市场的技术文档。' },
  { href: '/locations/', image: '/assets/images/onedrive/tiles/tile-corporate.png', imageAlt: '位置服务', heading: '位置服务', text: '迪拜、阿布扎比和北部酋长国的取件和送达。为繁忙专业人士提供上门服务。' },
  { href: '/services/golden-visa-translation/', image: '/assets/images/onedrive/tiles/tile-immigration.png', imageAlt: '黄金签证翻译', heading: '黄金签证', text: '阿联酋黄金签证申请的完整文件包。学术、专业和投资文件。' },
