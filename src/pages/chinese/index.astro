      <form class="contact-form" id="contactForm" method="POST">
        <div class="form-row"><div class="form-group"><label for="name">您的姓名</label><input type="text" id="name" name="name" autocomplete="name" placeholder={contactSection.namePlaceholder} required></div><div class="form-group"><label for="email">电子邮件</label><input type="email" id="email" name="email" autocomplete="email" placeholder={contactSection.emailPlaceholder} required></div></div>
