---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Our Translation Services Dubai | MOJ Certified';
const metaDescription = 'Certified translation services in Dubai: legal documents, personal papers, attestation. MOJ approved, same-day delivery. WhatsApp now.';
---

<BaseLayout title={pageTitle} description={metaDescription}>
  <!-- Hero Section -->
  <section class="exodus-services-hero">
    <div class="hero-overlay"></div>
    <div class="container">
      <div class="hero-content">
        <span class="hero-eyebrow">Our Translation Services</span>
        <h1 class="hero-title">Certified Translation for Every Document</h1>
        <p class="hero-subtitle">
          From personal certificates to complex legal contracts, we handle all your translation needs with 
          MOJ-certified accuracy and professional care. Accepted by Dubai Courts, DIFC, and all UAE government agencies.
        </p>
        <a href="https://wa.me/971508620217" class="hero-btn">
          <i class="fab fa-whatsapp"></i> Get a Free Quote
        </a>
      </div>
    </div>
  </section>

  <!-- About Section with Stats -->
  <section class="exodus-about-section">
    <div class="container">
      <div class="about-grid">
        <div class="about-content">
          <span class="section-label">Your Document Concierge</span>
          <h2 class="section-title">Professional Translation with a Personal Touch</h2>
          <div class="title-underline"></div>
          <p class="about-text">
            We understand that navigating UAE paperwork can feel overwhelming. That's why we've built a 
            boutique translation service that combines MOJ-certified accuracy with genuine human care. 
            Every document is handled by specialist translators, reviewed for compliance, and delivered 
            with authentication ready for government submission.
          </p>
          
          <div class="features-list">
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>MOJ Licensed Translators</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>Official Stamp & Signature</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>60-Minute Digital Delivery</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>Government Acceptance Guaranteed</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>WhatsApp-First Support</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check-circle"></i>
              <span>Hard Copy Courier Available</span>
            </div>
          </div>
          
          <a href="/about/" class="learn-more-btn">Learn More About Us</a>
        </div>
        
        <div class="about-visual">
          <div class="about-image-container">
            <img src="/assets/images/onedrive/stamped-hardcopy.png" alt="MOJ certified translated document with official stamp" class="about-image">
            <div class="stats-cards-overlay">
              <div class="stat-card">
                <h3 class="stat-number">60</h3>
                <p class="stat-label">Minutes Digital Delivery</p>
              </div>
              <div class="stat-card">
                <h3 class="stat-number">35+</h3>
                <p class="stat-label">Languages Supported</p>
              </div>
              <div class="stat-card">
                <h3 class="stat-number">10K+</h3>
                <p class="stat-label">Documents Translated</p>
              </div>
              <div class="stat-card">
                <h3 class="stat-number">100%</h3>
                <p class="stat-label">Acceptance Rate</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="exodus-services-section">
    <div class="container">
      <span class="section-label">Our Services</span>
      <h2 class="section-title">Certified Translation for All Document Types</h2>
      <div class="section-divider"></div>
      
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon-wrapper">
            <div class="service-icon">
              <i class="fas fa-gavel"></i>
            </div>
          </div>
          <h3 class="service-title">Legal Translation</h3>
          <p class="service-description">Court documents, contracts, powers of attorney, and legal agreements translated with precision for Dubai Courts, DIFC, and ADGM proceedings.</p>
          <a href="/legal-translation-dubai/" class="service-link">View Legal Services <i class="fas fa-arrow-right"></i></a>
        </div>
        
        <div class="service-card">
          <div class="service-icon-wrapper">
            <div class="service-icon">
              <i class="fas fa-file-alt"></i>
            </div>
          </div>
          <h3 class="service-title">Personal Documents</h3>
          <p class="service-description">Birth certificates, marriage certificates, educational degrees, and passports. Perfect for visa applications, family sponsorship, and residency.</p>
          <a href="/personal-documents/" class="service-link">View Personal Services <i class="fas fa-arrow-right"></i></a>
        </div>
        
        <div class="service-card">
          <div class="service-icon-wrapper">
            <div class="service-icon">
              <i class="fas fa-stamp"></i>
            </div>
          </div>
          <h3 class="service-title">Attestation Services</h3>
          <p class="service-description">Complete attestation and legalization for UAE and international use. MOFA, embassy attestation, and apostille services included.</p>
          <a href="/services/attestation/" class="service-link">View Attestation <i class="fas fa-arrow-right"></i></a>
        </div>
        
        <div class="service-card">
          <div class="service-icon-wrapper">
            <div class="service-icon">
              <i class="fas fa-building"></i>
            </div>
          </div>
          <h3 class="service-title">Corporate Translation</h3>
          <p class="service-description">Trade licenses, MOA, shareholder agreements, and company documents for business setup, audits, and regulatory compliance.</p>
          <a href="/services/corporate-translation/" class="service-link">Corporate Services <i class="fas fa-arrow-right"></i></a>
        </div>
        
        <div class="service-card">
          <div class="service-icon-wrapper">
            <div class="service-icon">
              <i class="fas fa-industry"></i>
            </div>
          </div>
          <h3 class="service-title">Specialized Industries</h3>
          <p class="service-description">Medical reports, engineering documents, financial statements, and technical manuals by subject-matter expert translators.</p>
          <a href="/specialized-translation/" class="service-link">Specialized Services <i class="fas fa-arrow-right"></i></a>
        </div>
        
        <div class="service-card">
          <div class="service-icon-wrapper">
            <div class="service-icon">
              <i class="fas fa-map-marker-alt"></i>
            </div>
          </div>
          <h3 class="service-title">Location Services</h3>
          <p class="service-description">Serving all UAE locations including Dubai, Abu Dhabi, Sharjah, and free zones. Collection and delivery available.</p>
          <a href="/locations/" class="service-link">Find Your Location <i class="fas fa-arrow-right"></i></a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="exodus-why-section">
    <div class="container">
      <span class="section-label">Why Choose Us</span>
      <h2 class="section-title">What Sets Our Service Apart</h2>
      <div class="section-divider"></div>
      
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-image">
            <img src="/assets/images/onedrive/steps-upload.png" alt="WhatsApp document submission">
            <div class="feature-icon">
              <i class="fab fa-whatsapp"></i>
            </div>
          </div>
          <div class="feature-content">
            <h3 class="feature-title">WhatsApp-First</h3>
            <p class="feature-description">Send documents instantly via WhatsApp. Get quotes, updates, and certified PDFs without email delays.</p>
          </div>
        </div>
        
        <div class="feature-card">
          <div class="feature-image">
            <img src="/assets/images/onedrive/whatsapp-translation.png" alt="60 minute delivery">
            <div class="feature-icon">
              <i class="fas fa-bolt"></i>
            </div>
          </div>
          <div class="feature-content">
            <h3 class="feature-title">60-Minute Promise</h3>
            <p class="feature-description">Standard certificates delivered digitally within 60 minutes. Perfect for urgent submissions.</p>
          </div>
        </div>
        
        <div class="feature-card">
          <div class="feature-image">
            <img src="/assets/images/onedrive/stamped-hardcopy-2.png" alt="MOJ certified stamp">
            <div class="feature-icon">
              <i class="fas fa-certificate"></i>
            </div>
          </div>
          <div class="feature-content">
            <h3 class="feature-title">MOJ Certified</h3>
            <p class="feature-description">Every translation carries official stamp and signature. Accepted by all UAE authorities.</p>
          </div>
        </div>
        
        <div class="feature-card">
          <div class="feature-image">
            <img src="/assets/images/onedrive/steps-quote.png" alt="Transparent pricing">
            <div class="feature-icon">
              <i class="fas fa-shield-alt"></i>
            </div>
          </div>
          <div class="feature-content">
            <h3 class="feature-title">Pre-Validation</h3>
            <p class="feature-description">We check document requirements before translation to ensure government acceptance.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="exodus-process-section">
    <div class="container">
      <div class="process-header">
        <span class="section-label">How It Works</span>
        <h2 class="section-title">Simple Steps to Certified Translation</h2>
        <div class="section-divider"></div>
        <p class="section-description">From submission to certified delivery, we've streamlined the process so you can focus on what matters.</p>
      </div>
      
      <div class="process-grid">
        <div class="process-card">
          <div class="process-number">01</div>
          <h3 class="process-title">Submit Your Document</h3>
          <p class="process-description">Send via WhatsApp or email. We accept PDF, JPG, PNG, and Word documents. Clear photos work perfectly.</p>
        </div>
        
        <div class="process-card">
          <div class="process-number">02</div>
          <h3 class="process-title">Instant Quote & Review</h3>
          <p class="process-description">Receive pricing within minutes. We verify document type and confirm any additional requirements.</p>
        </div>
        
        <div class="process-card">
          <div class="process-number">03</div>
          <h3 class="process-title">Translation & Certification</h3>
          <p class="process-description">Our MOJ-licensed translators handle your document with care and apply official authentication.</p>
        </div>
        
        <div class="process-card">
          <div class="process-number">04</div>
          <h3 class="process-title">Digital Delivery</h3>
          <p class="process-description">Receive certified PDF via WhatsApp or email. Hard copies couriered within Dubai same-day.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="exodus-stats-section">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fas fa-file-signature"></i>
          </div>
          <div class="stat-number">10,000+</div>
          <div class="stat-label">Documents Translated</div>
        </div>
        
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fas fa-language"></i>
          </div>
          <div class="stat-number">35+</div>
          <div class="stat-label">Languages Supported</div>
        </div>
        
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-number">60</div>
          <div class="stat-label">Minute Delivery</div>
        </div>
        
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fas fa-award"></i>
          </div>
          <div class="stat-number">100%</div>
          <div class="stat-label">Acceptance Rate</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="exodus-cta-section">
    <div class="container">
      <span class="section-label">Ready to Start?</span>
      <h2 class="section-title">Get Your Free Quote in Minutes</h2>
      <div class="section-divider"></div>
      <p class="section-description">
        Send your document via WhatsApp and receive an instant quote. No registration, no waiting.
        Our team is available 7 days a week to assist you.
      </p>
      <div class="cta-buttons">
        <a href="https://wa.me/971508620217" class="cta-button primary">
          <i class="fab fa-whatsapp"></i> Send on WhatsApp
        </a>
        <a href="/contact/" class="cta-button secondary">
          Request Written Quote
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

