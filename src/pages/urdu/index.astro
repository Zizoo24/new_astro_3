---

<BaseLayoutMultilingual
  title={pageTitle}
  description={metaDescription}
  lang="ur"
  dir="rtl"
  isHomepage={true}
  canonicalOverride="https://onlinetranslation.ae/"
>
  <!-- Hero Section -->
  <section id="home" class="hero-section exodus-hero">
    <div class="hero-background">
      <img
        src={heroImage}
        alt="OnlineTranslation.ae پیشہ ور ٹیم"
        class="hero-image"
        loading="eager"
      >
      <div class="hero-overlay exodus-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1 class="hero-title exodus-title">
            <span class="title-line">{heroTitle}</span>
          </h1>
          <p class="hero-lead">{heroLead}</p>
          <ul class="hero-bullets">
            {heroBullets.map((item) => (
              <li>
                {item.icon && <i class={item.icon}></i>}
                {item.text}
              </li>
            ))}
          </ul>

          <div class="hero-cta-group">
            <a href={primaryCta.url} class="hero-cta exodus-cta">
              <i class="fab fa-whatsapp"></i> {primaryCta.label}
            </a>
            {secondaryCta?.url && (
              <a href={secondaryCta.url} class="hero-cta-secondary">
                {secondaryCta.label}
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Overlap Cards -->
    <div class="overlap-cards-wrapper">
      <div class="container">
        <div class="overlap-cards">
          {overlapCards.map((card) => (
            <a
              href={card.url || '#'}
              class="overlap-card"
              target={card.url?.startsWith('http') ? '_blank' : undefined}
              rel={card.url?.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              <div class="overlap-card-icon">
                {card.icon && <i class={card.icon}></i>}
              </div>
              <div class="overlap-card-content">
                <h3 class="overlap-card-title">{card.title}</h3>
                <p class="overlap-card-desc">{card.desc}</p>
                {card.badge && (
                  <span class="overlap-card-badge">{card.badge}</span>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <TrustBar />

  <!-- Services Section -->
  <section id="services" class="section bg-white services-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">{servicesLabel}</span>
        <h2 class="section-title">{servicesTitle}</h2>
      </div>
      <div class="services-grid-enhanced">
        {servicesItems.map((service) => (
          <a href={service.href} class="service-card-v2">
            <div class="card-badge">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
            </div>
            <div class="card-image">
              <img src={service.image} alt={service.imageAlt} loading="lazy" width="400" height="300">
            </div>
            <div class="card-body">
              <h3>{service.heading}</h3>
              <p>{service.text}</p>
              <span class="card-arrow">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Metrics Strip -->
  <section class="ot-metrics">
    <div class="ot-metrics-inner">
      {metrics.map((metric) => (
        <article class="ot-metric">
          <span class="ot-metric-value">{metric.value}</span>
          <span class="ot-metric-label">{metric.label}</span>
          {metric.note && (
            <span class="ot-metric-note">{metric.note}</span>
          )}
        </article>
      ))}
    </div>
  </section>

  <!-- FAQ Section -->
  <section id="faq" class="section bg-white faq-section">
    <div class="container container--narrow">
      <div class="section-header">
        <span class="section-label">{faqLabel}</span>
        <h2 class="section-title">{faqTitle}</h2>
      </div>
      <div class="faq-list">
        {faqItems.map((item) => (
          <article class="faq-item">
            <button class="faq-question">
              {item.question}
              <i class="fas fa-chevron-down"></i>
            </button>
            <div class="faq-answer">
              <p>{item.answer}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <section class="section bg-dark cta-banner">
    <div class="container text-center">
      <h2>{ctaBanner.title}</h2>
      <p>{ctaBanner.body}</p>
      <a href={ctaBanner.buttonUrl} class="cta-btn">
        <i class="fab fa-whatsapp"></i> {ctaBanner.buttonLabel}
      </a>
    </div>
  </section>

  <!-- Testimonials -->
  <TestimonialsCarousel />
</BaseLayoutMultilingual>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach((item) => {
      const question = item.querySelector('.faq-question');
      question?.addEventListener('click', () => {
        const isOpen = item.classList.contains('is-open');
        faqItems.forEach((i) => i.classList.remove('is-open'));
        if (!isOpen) {
          item.classList.add('is-open');
        }
      });
    });
  });
</script>
