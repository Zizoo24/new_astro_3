---
/**
 * /locations/[slug] - Dynamic Location Page
 * Renders location pages from the content collection (CMS-created)
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

export async function getStaticPaths() {
  const locations = await getCollection('locations');
  return locations.map(location => ({
    params: { slug: location.slug },
    props: { location }
  }));
}

const { location } = Astro.props;
const { Content } = await location.render();

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Locations', url: '/locations/' },
  { name: location.data.title, url: `/locations/${location.slug}/` }
];
---

<BaseLayout
  title={location.data.pageTitle || location.data.title}
  description={location.data.metaDescription || location.data.description || ''}
>
  <Breadcrumb items={breadcrumbs} theme="dark" />

  <!-- Hero Section -->
  <section class="section section--hero bg-dark">
    <div class="container">
      <div class="row">
        <div class="col col--8">
          <h1 class="hero-title">{location.data.heroHeading || location.data.title}</h1>
          {location.data.heroSubheading && (
            <h2 class="hero-subtitle">{location.data.heroSubheading}</h2>
          )}
          {location.data.description && (
            <p class="hero-intro">{location.data.description}</p>
          )}
          <div class="hero-cta-group">
            <a href="https://wa.me/971508620217" class="btn btn--primary btn--lg">
              <i class="fab fa-whatsapp"></i>
              Contact This Location
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  {(location.data.address || location.data.phone || location.data.whatsapp) && (
    <section class="section bg-light">
      <div class="container">
        <h2>Contact Information</h2>
        <div class="contact-grid">
          {location.data.address && (
            <div class="contact-card">
              <i class="fas fa-map-marker-alt"></i>
              <h3>Address</h3>
              <p>{location.data.address}</p>
            </div>
          )}
          {location.data.phone && (
            <div class="contact-card">
              <i class="fas fa-phone"></i>
              <h3>Phone</h3>
              <p><a href={`tel:${location.data.phone}`}>{location.data.phone}</a></p>
            </div>
          )}
          {location.data.whatsapp && (
            <div class="contact-card">
              <i class="fab fa-whatsapp"></i>
              <h3>WhatsApp</h3>
              <p><a href={`https://wa.me/${location.data.whatsapp.replace(/\D/g, '')}`}>{location.data.whatsapp}</a></p>
            </div>
          )}
        </div>
        {location.data.mapUrl && (
          <div class="map-embed">
            <a href={location.data.mapUrl} target="_blank" rel="noopener" class="btn btn--secondary">
              <i class="fas fa-map"></i>
              View on Google Maps
            </a>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Features Section -->
  {location.data.features && location.data.features.length > 0 && (
    <section class="section">
      <div class="container">
        <h2>Location Features</h2>
        <div class="features-grid">
          {location.data.features.map((feature: { icon?: string; title: string; text: string }) => (
            <div class="feature-card">
              {feature.icon && <i class={feature.icon}></i>}
              <h3>{feature.title}</h3>
              <p>{feature.text}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Nearby Landmarks -->
  {location.data.nearbyLandmarks && location.data.nearbyLandmarks.length > 0 && (
    <section class="section bg-light">
      <div class="container">
        <h2>Nearby Landmarks</h2>
        <ul class="landmarks-list">
          {location.data.nearbyLandmarks.map((landmark: string) => (
            <li><i class="fas fa-location-dot"></i> {landmark}</li>
          ))}
        </ul>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <section class="section">
    <div class="container">
      <div class="content-body">
        <Content />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-dark">
    <div class="container text-center">
      <h2>Visit Us Today</h2>
      <p style="max-width: 600px; margin: 0 auto 2rem;">
        Get your documents translated by our certified translators.
      </p>
      <a href="https://wa.me/971508620217" class="btn btn--primary btn--lg">
        <i class="fab fa-whatsapp"></i>
        Start on WhatsApp
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin: 0 0 0.5rem;
  }

  .hero-subtitle {
    font-size: clamp(1.25rem, 3vw, 2rem);
    color: var(--accent-color, #FF1654);
    margin: 0 0 1.5rem;
  }

  .hero-intro {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    max-width: 700px;
  }

  .hero-cta-group {
    margin-top: 2rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .contact-card {
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  .contact-card i {
    font-size: 2rem;
    color: var(--accent-color, #FF1654);
    margin-bottom: 1rem;
  }

  .contact-card h3 {
    margin: 0 0 0.5rem;
  }

  .contact-card a {
    color: var(--primary-color);
  }

  .map-embed {
    margin-top: 2rem;
    text-align: center;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }

  .feature-card i {
    font-size: 2rem;
    color: var(--accent-color, #FF1654);
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.25rem;
  }

  .feature-card p {
    margin: 0;
    color: var(--text-muted);
  }

  .landmarks-list {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .landmarks-list li {
    padding: 0.5rem 0;
  }

  .landmarks-list i {
    color: var(--accent-color);
    margin-right: 0.5rem;
  }

  .content-body {
    max-width: 800px;
    line-height: 1.8;
  }

  .text-center {
    text-align: center;
  }
</style>
