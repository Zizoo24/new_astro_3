---
import ServiceLayout from '../../../layouts/ServiceLayout.astro';

const pageData = {
  title: "Sharjah Translation Services â€“ MOJ Certified | OnlineTranslation.ae",
  description: "MOJ-certified translation services for Sharjah. Personal and business documents with next-day delivery. Same quality, convenient remote workflow.",
  keywords: "Sharjah translation, MOJ certified translation Sharjah, document translation Sharjah",
  heroTitle: "Sharjah Translation Services",
  heroSubtitle: "MOJ Certified with Next-Day Delivery",
  heroIntro: "Serving Sharjah clients with the same MOJ-certified quality we provide in Dubai. Send documents via WhatsApp and receive certified translations delivered to your Sharjah address. Next-day delivery standard, same-day available for urgent needs.",
  snapshot: [
    { icon: "clock", bold: "Digital drafts", text: "typically within 60 minutes" },
    { icon: "mobile-alt", bold: "WhatsApp-based workflow", text: "no office visit needed" },
    { icon: "check-circle", bold: "Sharjah courts accepted", text: "and all authorities" },
    { icon: "stamp", bold: "MOJ legal stamp", text: "with QR verification" }
  ],
  breadcrumbs: [
    { name: "Home", url: "/" },
    { name: "Locations", url: "/locations/" },
    { name: "Sharjah", url: "/locations/sharjah/" }
  ],
  
  trustStrip: [
    "MOJ-licensed partner",
    "Next-day Sharjah delivery",
    "WhatsApp concierge support"
  ],
  
  processSteps: [
    {
      title: "Send your documents",
      text: "WhatsApp photos or scans from anywhere in Sharjah."
    },
    {
      title: "We prepare your translation",
      text: "Same MOJ-certified quality as our Dubai clients receive."
    },
    {
      title: "Next-day Sharjah delivery",
      text: "Courier to your Sharjah address. Digital PDF sent immediately."
    }
  ],
  
  benefitCards: [
    {
      icon: "document",
      title: "Personal documents",
      text: "Birth certificates, marriage certificates, and educational credentials."
    },
    {
      icon: "briefcase",
      title: "Business documents",
      text: "Trade licenses, MOA, contracts, and corporate documentation."
    },
    {
      icon: "court",
      title: "Court documents",
      text: "Legal filings and documents for Sharjah courts."
    }
  ],
  
  faqs: [
    {
      question: "How quickly can you deliver to Sharjah?",
      answer: "Digital PDF is sent immediately upon completion. Physical copies are delivered next-day to Sharjah addresses via courier. Same-day courier can be arranged for urgent matters."
    },
    {
      question: "Is the MOJ stamp accepted in Sharjah?",
      answer: "Yes. MOJ certification is federal and accepted across all Emirates. Our translations are accepted by Sharjah courts, government authorities, and all institutions in the emirate."
    }
  ],
  serviceType: "Legal Translation"
};
---

<ServiceLayout {...pageData}>
  <section class="section bg-white">
    <div class="container">
      <h2>Service Levels</h2>
      <div class="pricing-grid">
        <div class="pricing-card">
          <h3>Standard</h3>
          <div class="pricing-price">From AED 150</div>
          <p class="pricing-time">24-hour + next-day delivery</p>
        </div>
        <div class="pricing-card pricing-card--featured">
          <h3>Express</h3>
          <div class="pricing-price">From AED 300</div>
          <p class="pricing-time">6-hour + same-day courier</p>
        </div>
        <div class="pricing-card">
          <h3>VIP Concierge</h3>
          <div class="pricing-price">From AED 500</div>
          <p class="pricing-time">1-hour draft + urgent courier</p>
        </div>
      </div>
    </div>
  </section>
</ServiceLayout>

<style>
  .pricing-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; }
  .pricing-card { background: #f8f9fa; border-radius: 1rem; padding: 2rem; text-align: center; border: 1px solid rgba(0, 0, 0, 0.05); }
  .pricing-card--featured { border-color: var(--accent-color); box-shadow: 0 8px 30px rgba(255, 22, 84, 0.15); background: #ffffff; }
  .pricing-card h3 { margin: 0 0 0.5rem; font-size: 1.25rem; }
  .pricing-price { font-size: 2rem; font-weight: 700; color: var(--primary-color); }
  .pricing-time { color: var(--text-muted); font-size: 0.9rem; }
</style>
