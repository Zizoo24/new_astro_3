    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); 
    gap: 1.5rem; 
  }
  
  .pricing-card { 
    background: #ffffff; 
    border-radius: 1rem; 
    padding: 2rem; 
    text-align: center; 
    border: 1px solid rgba(0, 0, 0, 0.05); 
  }
  
  .pricing-card--featured { 
    border-color: var(--accent-color); 
    box-shadow: 0 8px 30px rgba(255, 22, 84, 0.15); 
  }
  
