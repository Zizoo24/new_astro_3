---
import ServiceLayout from '../../../layouts/ServiceLayout.astro';
import RelatedServices from '../../../components/RelatedServices.astro';
import CrossSiloLinks from '../../../components/CrossSiloLinks.astro';
import InlineCallout from '../../../components/InlineCallout.astro';

const pageData = {
  title: "Sharjah Translation Services – MOJ Certified | OnlineTranslation.ae",
  description: "MOJ-certified translation services for Sharjah. Personal and business documents with next-day delivery. Same quality, convenient remote workflow.",
  keywords: "Sharjah translation, MOJ certified translation Sharjah, document translation Sharjah",
  heroTitle: "Sharjah Translation Services",
  heroSubtitle: "MOJ Certified with Next-Day Delivery",
  heroIntro: "Serving Sharjah clients with the same MOJ-certified quality we provide in <a href='/locations/dubai/'>Dubai</a>. Send documents via WhatsApp and receive <a href='/services/legal-translation/'>certified translations</a> delivered to your Sharjah address. Next-day delivery standard, same-day available for urgent needs.",
  snapshot: [
    { icon: "clock", bold: "Digital drafts", text: "typically within 60 minutes" },
    { icon: "mobile-alt", bold: "WhatsApp-based workflow", text: "no office visit needed" },
    { icon: "check-circle", bold: "Sharjah courts accepted", text: "and all authorities" },
    { icon: "stamp", bold: "MOJ legal stamp", text: "with QR verification" }
  ],
  breadcrumbs: [
    { name: "Home", url: "/" },
    { name: "Locations", url: "/locations/" },
    { name: "Sharjah", url: "/locations/sharjah/" }
  ],
  
  trustStrip: [
    "MOJ-licensed partner",
    "Next-day Sharjah delivery",
    "WhatsApp concierge support"
  ],
  
  processSteps: [
    {
      title: "Send your documents",
      text: "WhatsApp photos or scans from anywhere in Sharjah."
    },
    {
      title: "We prepare your translation",
      text: "Same MOJ-certified quality as our Dubai clients receive."
    },
    {
      title: "Next-day Sharjah delivery",
      text: "Courier to your Sharjah address. Digital PDF sent immediately."
    }
  ],
  
  benefitCards: [
    {
      icon: "document",
      title: "Personal documents",
      text: "Birth certificates, marriage certificates, and educational credentials."
    },
    {
      icon: "briefcase",
      title: "Business documents",
      text: "Trade licenses, MOA, contracts, and corporate documentation."
    },
    {
      icon: "court",
      title: "Court documents",
      text: "Legal filings and documents for Sharjah courts."
    }
  ],
  
  accordionSections: [
    {
      title: "Services for Sharjah residents",
      id: "services",
      items: [
        {
          heading: "Personal documents",
          body: "<p>Sharjah residents frequently need <a href='/personal/vital-records/birth/'>birth certificates</a>, <a href='/personal/vital-records/marriage/'>marriage certificates</a>, and <a href='/personal/academic/degree/'>degree certificates</a> translated for visa applications, family sponsorship, and employment. We handle all personal document types with appropriate care.</p>"
        },
        {
          heading: "Business documents",
          body: "<p>Sharjah's business community—from Sharjah Publishing City to industrial areas—needs <a href='/services/corporate-translation/'>corporate translation</a> for trade licenses, contracts, and governance documents. MOJ certification is valid throughout the UAE.</p>"
        },
        {
          heading: "Court and legal documents",
          body: "<p>Sharjah courts accept our MOJ-certified translations for all legal proceedings. <a href='/services/legal-translation/'>Legal translation</a> for court filings, evidence, and legal correspondence is handled with appropriate precision.</p>"
        },
        {
          heading: "Educational documents",
          body: "<p>Sharjah hosts several universities and educational institutions. <a href='/services/certificate-translation/'>Certificate translation</a> for academic applications, MOHRE submissions, and professional licensing is a common need.</p>"
        }
      ]
    }
  ],
  
  faqs: [
