    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.85rem;
    flex-shrink: 0;
  }

  .workflow-step strong {
    display: block;
    color: var(--primary-color);
    margin-bottom: 0.25rem;
  }

  .workflow-step p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  /* Needs Grid */
  .needs-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .need-card {
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 10px;
    padding: 1.5rem;
  }

  .need-card h3 {
    margin: 0 0 1rem;
    font-size: 1.1rem;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .need-card h3 i {
    color: var(--accent-color);
  }

  .need-card ul {
    list-style: none;
    padding: 0;
    margin: 0 0 1rem;
  }

  .need-card li {
    padding: 0.35rem 0;
    padding-left: 1.25rem;
    position: relative;
    font-size: 0.9rem;
  }

  .need-card li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--accent-color);
  }

  .need-card p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

