---
import ServiceLayout from '../../../layouts/ServiceLayout.astro';
import RelatedServices from '../../../components/RelatedServices.astro';
import CrossSiloLinks from '../../../components/CrossSiloLinks.astro';
import InlineCallout from '../../../components/InlineCallout.astro';

const pageData = {
  title: "Abu Dhabi Translation Services – MOJ Certified | OnlineTranslation.ae",
  description: "MOJ-certified translation services for Abu Dhabi. Government documents, ADGM entities, and federal authority submissions. Next-day delivery from Dubai.",
  keywords: "Abu Dhabi translation, ADGM translation, government translation Abu Dhabi, MOJ certified translation Abu Dhabi",
  heroTitle: "Abu Dhabi Translation Services",
  heroSubtitle: "MOJ Certified with Next-Day Delivery",
  heroIntro: "Serving Abu Dhabi clients from our Dubai base with next-day delivery across the capital. Whether you need translations for federal government authorities, ADGM-registered entities, or personal documents for Abu Dhabi institutions, we provide the same MOJ-certified quality with convenient remote workflow.",
  snapshot: [
    { icon: "clock", bold: "Digital drafts", text: "typically within 60 minutes" },
    { icon: "mobile-alt", bold: "WhatsApp-based workflow", text: "no office visit needed" },
    { icon: "check-circle", bold: "Accepted by ADJD", text: "and federal authorities" },
    { icon: "stamp", bold: "MOJ legal stamp", text: "with QR verification" }
  ],
  breadcrumbs: [
    { name: "Home", url: "/" },
    { name: "Locations", url: "/locations/" },
    { name: "Abu Dhabi", url: "/locations/abu-dhabi/" }
  ],
  
  trustStrip: [
    "MOJ-licensed partner",
    "Next-day Abu Dhabi delivery",
    "WhatsApp concierge support"
  ],
  
  processSteps: [
