  .faq-answer { padding: 0 1.5rem 1.25rem; }
  .faq-answer p { margin: 0; line-height: 1.7; color: var(--text-body); }

  /* CTA Section */
  .cta-section { text-align: center; max-width: 600px; margin: 0 auto; }
  .cta-section h2 { margin-bottom: 1rem; }
  .cta-section > p { margin-bottom: 2rem; color: var(--text-muted); }
  .btn { display: inline-flex; align-items: center; gap: 0.5rem; padding: 1rem 2rem; border-radius: 0.5rem; font-weight: 600; text-decoration: none; transition: all 0.3s ease; }
  .btn-primary { background: var(--accent-color); color: #ffffff; }
  .btn-primary:hover { background: #e0144c; transform: translateY(-2px); }

  .cta-links { display: flex; flex-direction: column; align-items: center; gap: 1.5rem; }
  .related-links { display: flex; align-items: center; gap: 1rem; font-size: 0.9rem; flex-wrap: wrap; justify-content: center; }
  .related-links span { color: var(--text-muted); }
  .related-links a { color: var(--primary-color); text-decoration: none; }
  .related-links a:hover { color: var(--accent-color); text-decoration: underline; }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-stats { flex-direction: column; gap: 1rem; }
    .compliance-grid { grid-template-columns: 1fr; }
    .platform-grid { grid-template-columns: 1fr; }
    .pricing-grid { grid-template-columns: 1fr; }
    .process-grid { grid-template-columns: 1fr 1fr; }
  }

  @media (max-width: 480px) {
    .process-grid { grid-template-columns: 1fr; }
  }
</style>
