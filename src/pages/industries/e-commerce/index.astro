  .compliance-card.required h4 i { color: var(--state-danger); }
  .compliance-card.recommended h4 i { color: var(--state-success-vivid); }
  .compliance-card ul { list-style: none; padding: 0; margin: 0; }
  .compliance-card li { padding: 0.4rem 0; font-size: 0.95rem; color: var(--text-body); border-bottom: 1px solid rgba(0,0,0,0.05); }
