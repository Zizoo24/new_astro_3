  .compliance-note p { margin: 0; line-height: 1.7; }
  .compliance-note a { color: var(--accent-color); }

  /* Platform Section */
  .platform-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; }
