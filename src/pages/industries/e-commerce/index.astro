  .platform-card li { padding: 0.5rem 0; font-size: 0.95rem; color: var(--text-body); display: flex; align-items: center; gap: 0.5rem; }
  .platform-card li::before { content: '✓'; color: var(--accent-color); font-weight: bold; }

  /* Process Section */
  .process-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 2rem; }
  .process-card { text-align: center; }
  .process-number { width: 50px; height: 50px; background: var(--accent-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.25rem; color: #fff; font-size: 1.25rem; font-weight: 700; }
  .process-card h3 { font-size: 1.1rem; margin: 0 0 0.75rem; color: var(--primary-color); }
  .process-card p { color: var(--text-muted); line-height: 1.6; font-size: 0.95rem; margin: 0; }

  /* Pricing Section */
  .pricing-content { max-width: 900px; }
  .pricing-content > p { line-height: 1.8; margin-bottom: 2rem; }
