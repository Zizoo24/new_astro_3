---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Thank You | OnlineTranslation.ae";
const metaDescription = "Thank you for contacting OnlineTranslation.ae. We have received your inquiry and will respond within 2 hours during business hours.";

const nextSteps = [
  {
    icon: 'clock',
    title: 'Response Time',
    text: 'We typically respond within 2 hours during business hours (Sun-Thu, 9 AM - 6 PM GST).'
  },
  {
    icon: 'envelope',
    title: 'Check Your Email',
    text: 'You will receive a confirmation email shortly. Check your spam folder if you do not see it.'
  },
  {
    icon: 'file-alt',
    title: 'Prepare Your Documents',
    text: 'Have clear scans or photos of your documents ready. This helps us provide an accurate quote faster.'
  }
];

const suggestions = [
  {
    title: 'Legal Translation',
    description: 'MOJ-certified translation for courts and government',
    link: '/services/legal-translation/',
    icon: 'gavel'
  },
  {
    title: 'Golden Visa Documents',
    description: 'Complete document package for UAE Golden Visa',
    link: '/services/golden-visa-translation/',
    icon: 'passport'
  },
  {
    title: 'Attestation Services',
    description: 'Document attestation and MOFA legalization',
    link: '/services/attestation/',
    icon: 'stamp'
  },
  {
    title: 'Pricing Guide',
    description: 'Transparent pricing for all our services',
    link: '/resources/pricing-guide/',
    icon: 'tag'
  },
  {
    title: 'Document Checklist',
    description: 'What you need for different visa types',
    link: '/resources/document-checklist/',
    icon: 'clipboard-list'
  },
  {
    title: 'FAQ',
    description: 'Common questions about our services',
    link: '/resources/faq/',
    icon: 'question-circle'
  }
];
---

<BaseLayout
  title={pageTitle}
  description={metaDescription}
>
  <section class="hero-section">
    <div class="container">
      <div class="success-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <h1>Thank You!</h1>
      <p class="hero-subtitle">Your Message Has Been Received</p>
      <p class="hero-lead">We appreciate you contacting OnlineTranslation.ae. Our team will review your inquiry and get back to you shortly.</p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <h2 class="section-title">What Happens Next</h2>

      <div class="steps-grid">
        {nextSteps.map((step, index) => (
          <div class="step-card">
            <div class="step-number">{index + 1}</div>
            <div class="step-icon">
              <i class={`fas fa-${step.icon}`}></i>
            </div>
            <h3>{step.title}</h3>
            <p>{step.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-light">
    <div class="container">
      <h2 class="section-title">Need Faster Assistance?</h2>
      <p class="section-intro">For urgent matters, reach us directly via WhatsApp or phone.</p>

      <div class="contact-buttons">
        <a href="https://wa.me/971508620217" class="btn btn-whatsapp">
          <i class="fab fa-whatsapp"></i> WhatsApp Us
        </a>
        <a href="tel:+971508620217" class="btn btn-outline">
          <i class="fas fa-phone"></i> +971 50 862 0217
        </a>
      </div>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container">
      <h2 class="section-title">While You Wait</h2>
      <p class="section-intro">Explore our services and resources to learn more about how we can help.</p>

      <div class="suggestions-grid">
        {suggestions.map((item) => (
          <a href={item.link} class="suggestion-card">
            <div class="suggestion-icon">
              <i class={`fas fa-${item.icon}`}></i>
            </div>
            <div class="suggestion-content">
              <h3>{item.title}</h3>
              <p>{item.description}</p>
            </div>
            <i class="fas fa-arrow-right suggestion-arrow"></i>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-primary">
    <div class="container cta-section">
      <h2>Ready to Start Another Request?</h2>
      <p>Have more documents to translate or another inquiry? We are here to help.</p>
      <div class="cta-buttons">
        <a href="/contact/" class="btn btn-accent">
          <i class="fas fa-envelope"></i> Contact Us Again
        </a>
        <a href="/" class="btn btn-outline-light">
          <i class="fas fa-home"></i> Back to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section {
    padding: 6rem 0 4rem;
    background: linear-gradient(135deg, var(--primary-color) 0%, #2d4a6f 100%);
    color: white;
    text-align: center;
  }

  .success-icon {
    font-size: 5rem;
    color: #4ade80;
    margin-bottom: 1.5rem;
    animation: scaleIn 0.5s ease-out;
  }

  @keyframes scaleIn {
    from {
      transform: scale(0);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 0.5rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--accent-color);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .hero-lead {
    font-size: 1.1rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .section {
    padding: 5rem 0;
  }

  .section-title {
    font-size: 2rem;
    color: var(--primary-color);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-intro {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto 2.5rem;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 2rem;
  }

  .step-card {
    background: var(--bg-light);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    position: relative;
  }

  .step-number {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 30px;
    background: var(--accent-color);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
  }

  .step-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .step-card h3 {
    font-size: 1.1rem;
    color: var(--primary-color);
    margin-bottom: 0.75rem;
  }

  .step-card p {
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .contact-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-whatsapp {
    background: #25d366;
    color: white;
  }

  .btn-whatsapp:hover {
    background: #20bd5a;
    transform: translateY(-2px);
  }

  .btn-outline {
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
  }

  .btn-outline:hover {
    background: var(--primary-color);
    color: white;
  }

  .suggestions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .suggestion-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-light);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .suggestion-card:hover {
    background: white;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transform: translateY(-3px);
  }

  .suggestion-icon {
    width: 50px;
    height: 50px;
    background: var(--primary-color);
    color: white;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .suggestion-content {
    flex: 1;
  }

  .suggestion-content h3 {
    font-size: 1rem;
    color: var(--primary-color);
    margin: 0 0 0.25rem;
  }

  .suggestion-content p {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin: 0;
  }

  .suggestion-arrow {
    color: var(--accent-color);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .suggestion-card:hover .suggestion-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .bg-primary {
    background: var(--primary-color);
  }

  .bg-primary h2,
  .bg-primary p {
    color: white;
  }

  .cta-section {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-section p {
    opacity: 0.9;
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-accent {
    background: var(--accent-color);
    color: white;
  }

  .btn-accent:hover {
    filter: brightness(1.1);
  }

  .btn-outline-light {
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .btn-outline-light:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
  }

  @media (max-width: 992px) {
    .steps-grid,
    .suggestions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 4rem 0 3rem;
    }

    .success-icon {
      font-size: 4rem;
    }

    .steps-grid,
    .suggestions-grid {
      grid-template-columns: 1fr;
    }

    .suggestion-card {
      padding: 1.25rem;
    }
  }
</style>
