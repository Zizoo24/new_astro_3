    max-width: 960px;
    margin: 0 auto;
  }

  .related-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .related-card i {
    font-size: 2rem;
    color: var(--primary-color, #0E2B48);
    margin-bottom: 1rem;
    display: block;
  }

  .related-card h3 {
    font-size: 1.1rem;
    color: var(--primary-color, #0E2B48);
    margin: 0 0 0.5rem;
  }

  .related-card p {
    font-size: 0.9rem;
    color: var(--text-muted, #5a6a7a);
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .article-hero {
      padding: 2rem 0 3rem;
    }

    .content-wrapper {
      font-size: 1rem;
    }

    .doc-card {
      flex-direction: column;
      text-align: center;
    }

    .article-cta .btn {
      display: flex;
      justify-content: center;
      width: 100%;
