---
/**
 * /blog/ - Blog Index Page
 * Static blog landing page
 */
import BaseLayout from '../../layouts/BaseLayout.astro';

// Category config for future use
const categories = [
  { key: 'legal-translation', label: 'Legal Translation', color: '#0E2B48' },
  { key: 'personal-documents', label: 'Personal Documents', color: '#2563EB' },
  { key: 'attestation', label: 'Attestation', color: '#7C3AED' },
  { key: 'golden-visa', label: 'Golden Visa', color: '#D4AF37' },
  { key: 'corporate', label: 'Corporate', color: '#059669' },
  { key: 'industry-insights', label: 'Industry Insights', color: '#DC2626' },
  { key: 'how-to-guides', label: 'How-To Guides', color: '#EA580C' },
  { key: 'news', label: 'News', color: '#0891B2' }
];
---

<BaseLayout
  title="Blog | Translation Insights & Guides Dubai"
  description="Expert insights on legal translation, document attestation, Golden Visa requirements, and UAE immigration. Practical guides from Dubai's certified translation specialists."
>
  <!-- Hero Section -->
  <section class="blog-hero">
    <div class="container">
      <h1>Translation Insights & Guides</h1>
      <p class="hero-subtitle">Expert knowledge on legal translation, attestation processes, and document requirements in the UAE</p>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="category-filter">
    <div class="container">
      <div class="filter-scroll">
        <a href="/blog/" class="filter-btn active">All</a>
        {categories.map(cat => (
          <span class="filter-btn" style={`--cat-color: ${cat.color}`}>
            {cat.label}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Coming Soon Section -->
  <section class="posts-section">
    <div class="container">
      <div class="no-posts">
        <i class="fas fa-newspaper"></i>
        <h2>Coming Soon</h2>
        <p>We're preparing expert insights and guides on legal translation, attestation processes, and document requirements in the UAE. Check back soon!</p>
        <a href="/" class="btn btn--primary">Return Home</a>
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="newsletter-section">
    <div class="container">
      <div class="newsletter-card">
        <div class="newsletter-content">
          <h2>Stay Updated</h2>
          <p>Get notified about new guides, regulatory changes, and translation tips.</p>
        </div>
        <a href="https://wa.me/971508620217?text=Subscribe%20to%20updates" class="btn btn--primary btn--lg">
          <i class="fab fa-whatsapp"></i>
          Get Updates via WhatsApp
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .blog-hero {
    background: linear-gradient(135deg, var(--primary-color, #0E2B48) 0%, #1a3a5c 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .blog-hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin: 0 0 1rem;
  }

  .hero-subtitle {
    font-size: 1.15rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 600px;
    margin: 0 auto;
  }

  .category-filter {
    background: white;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .filter-scroll {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
    -webkit-overflow-scrolling: touch;
  }

  .filter-btn {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    white-space: nowrap;
    background: var(--bg-light, #f8f9fa);
    color: var(--text-muted, #5a6a7a);
    transition: all 0.2s;
    border: 2px solid transparent;
  }

  .filter-btn:hover {
    background: white;
    border-color: var(--cat-color, var(--primary-color));
    color: var(--cat-color, var(--primary-color));
  }

  .filter-btn.active {
    background: var(--primary-color);
    color: white;
  }

  .posts-section {
    padding: 3rem 0 4rem;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 0;
  }

  .no-posts i {
    font-size: 3rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .no-posts h2 {
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .no-posts p {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .newsletter-section {
    background: var(--primary-color);
    padding: 3rem 0;
  }

  .newsletter-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .newsletter-content {
    color: white;
  }

  .newsletter-content h2 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
  }

  .newsletter-content p {
    margin: 0;
    color: rgba(255, 255, 255, 0.85);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn--primary {
    background: var(--accent-color, #FF1654);
    color: white;
  }

  .btn--primary:hover {
    opacity: 0.9;
  }

  .btn--lg {
    padding: 1rem 2rem;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .blog-hero {
      padding: 3rem 0;
    }

    .newsletter-card {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
