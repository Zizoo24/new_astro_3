  "articleSection": postCategory,
  "keywords": ["MOJ translation Dubai", "certified translation UAE", "legal translation Dubai", "authenticated translation", "Ministry of Justice translation", "official translation UAE", "translation certification"]
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is certified translation the same as legal translation?",
